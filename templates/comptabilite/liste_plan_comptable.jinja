<!-- templates/comptabilite/liste_plan_comptable.jinja - INTERFACE PLAN COMPTABLE SYSCOHADA -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Plan Comptable SYSCOHADA{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête avec actions -->
    <div class="page-header-modern">
        <div class="header-left">
            <div class="header-icon-box">
                <i class="bi bi-journal-text"></i>
            </div>
            <div>
                <h4 class="header-title">Plan Comptable SYSCOHADA</h4>
                <p class="header-subtitle">Gestion des comptes comptables</p>
            </div>
        </div>
        <div class="header-right">
            <a href="/comptabilite/plan-comptable/nouveau/" class="btn-primary-gradient">
                <i class="bi bi-plus-circle"></i>
                <span>Nouveau compte</span>
            </a>
            <a href="/comptabilite/plan-comptable/exporter/" class="btn-icon" title="Exporter Excel">
                <i class="bi bi-file-earmark-excel"></i>
            </a>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="stats-grid-modern">
        <div class="stat-card">
            <div class="stat-card-body">
                <div class="stat-icon-box bg-primary">
                    <i class="bi bi-journal-text"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">{{ total_comptes }}</div>
                    <div class="stat-label">Comptes total</div>
                    <div class="stat-badge">
                        <span class="badge badge-primary-soft">Résultats filtrés</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-card-body">
                <div class="stat-icon-box bg-success">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">{{ comptes_actifs }}</div>
                    <div class="stat-label">Comptes actifs</div>
                    <div class="stat-badge">
                        <span class="badge badge-success-soft">Utilisables</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-card-body">
                <div class="stat-icon-box bg-warning">
                    <i class="bi bi-x-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">{{ comptes_inactifs }}</div>
                    <div class="stat-label">Comptes inactifs</div>
                    <div class="stat-badge">
                        <span class="badge badge-warning-soft">Archivés</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-card-body">
                <div class="stat-icon-box bg-info">
                    <i class="bi bi-diagram-3"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">8</div>
                    <div class="stat-label">Classes SYSCOHADA</div>
                    <div class="stat-badge">
                        <span class="badge badge-info-soft">Standard OHADA</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres avancés -->
    <div class="filters-card-modern">
        <form method="get" class="filters-form-grid">
            <div class="filter-group-modern">
                <label class="filter-label-modern">
                    <i class="bi bi-search"></i>
                    Recherche
                </label>
                <div class="input-with-icon-modern">
                    <i class="bi bi-search input-icon-modern"></i>
                    <input type="text" name="recherche" class="form-control-modern" placeholder="Numéro ou libellé..." value="{{ recherche }}">
                </div>
            </div>

            <div class="filter-group-modern">
                <label class="filter-label-modern">
                    <i class="bi bi-diagram-2"></i>
                    Type de compte
                </label>
                <div class="input-with-icon-modern">
                    <i class="bi bi-diagram-2 input-icon-modern"></i>
                    <select name="type_compte" class="form-control-modern">
                        <option value="">Tous les types</option>
                        {% for type_code, type_label in types_compte %}
                        <option value="{{ type_code }}" {% if type_compte == type_code %}selected{% endif %}>
                            {{ type_label }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="filter-group-modern">
                <label class="filter-label-modern">
                    <i class="bi bi-collection"></i>
                    Classe SYSCOHADA
                </label>
                <div class="input-with-icon-modern">
                    <i class="bi bi-collection input-icon-modern"></i>
                    <select name="classe" class="form-control-modern">
                        <option value="">Toutes les classes</option>
                        {% for classe_num, classe_label in classes_syscohada %}
                        <option value="{{ classe_num }}" {% if classe == classe_num %}selected{% endif %}>
                            {{ classe_label }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="filter-group-modern">
                <label class="filter-label-modern">
                    <i class="bi bi-toggle-on"></i>
                    Statut
                </label>
                <div class="input-with-icon-modern">
                    <i class="bi bi-toggle-on input-icon-modern"></i>
                    <select name="statut" class="form-control-modern">
                        <option value="actif" {% if statut == 'actif' %}selected{% endif %}>Actifs uniquement</option>
                        <option value="inactif" {% if statut == 'inactif' %}selected{% endif %}>Inactifs uniquement</option>
                        <option value="tous" {% if statut == 'tous' %}selected{% endif %}>Tous</option>
                    </select>
                </div>
            </div>

            <div class="filter-group-modern filter-button-group">
                <label class="filter-label-modern" style="opacity: 0;">Action</label>
                <button type="submit" class="btn-primary-gradient">
                    <i class="bi bi-funnel"></i>
                    <span>Filtrer</span>
                </button>
            </div>
        </form>
    </div>

    <div class="row g-4">
        <!-- Tableau des comptes -->
        <div class="col-lg-9">
            <div class="data-card-modern">
                <div class="data-card-header-modern">
                    <div class="data-icon-box bg-primary">
                        <i class="bi bi-list-ul"></i>
                    </div>
                    <h6 class="data-title">Liste des comptes ({{ total_comptes }})</h6>
                </div>
                <div class="data-card-body-modern">
                    {% if comptes %}
                    <div class="table-container">
                        <table class="data-table-modern">
                            <thead>
                                <tr>
                                    <th style="width: 150px;">Numéro</th>
                                    <th>Libellé</th>
                                    <th style="width: 120px;">Type</th>
                                    <th class="text-center" style="width: 100px;">Statut</th>
                                    <th class="text-center" style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for compte in comptes %}
                                <tr>
                                    <td>
                                        <div class="compte-numero">
                                            <i class="bi bi-hash text-primary"></i>
                                            <strong>{{ compte.numero_compte }}</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="compte-libelle">{{ compte.libelle }}</div>
                                        {% if compte.compte_parent %}
                                        <div class="compte-parent">
                                            <i class="bi bi-arrow-return-right"></i>
                                            {{ compte.compte_parent.numero_compte }} - {{ compte.compte_parent.libelle[:30] }}
                                        </div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if compte.type_compte == 'ACTIF' %}
                                        <span class="type-badge type-actif">
                                            <i class="bi bi-plus-circle"></i> Actif
                                        </span>
                                        {% elif compte.type_compte == 'PASSIF' %}
                                        <span class="type-badge type-passif">
                                            <i class="bi bi-minus-circle"></i> Passif
                                        </span>
                                        {% elif compte.type_compte == 'CHARGE' %}
                                        <span class="type-badge type-charge">
                                            <i class="bi bi-arrow-up-circle"></i> Charge
                                        </span>
                                        {% elif compte.type_compte == 'PRODUIT' %}
                                        <span class="type-badge type-produit">
                                            <i class="bi bi-arrow-down-circle"></i> Produit
                                        </span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% if compte.est_actif %}
                                        <span class="status-badge status-active">
                                            <i class="bi bi-check-circle"></i> Actif
                                        </span>
                                        {% else %}
                                        <span class="status-badge status-inactive">
                                            <i class="bi bi-x-circle"></i> Inactif
                                        </span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a href="/comptabilite/plan-comptable/{{ compte.pk }}/" class="btn-action btn-view" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="empty-state-modern">
                        <div class="empty-state-icon-modern">
                            <i class="bi bi-inbox"></i>
                        </div>
                        <h4 class="empty-state-title-modern">Aucun compte trouvé</h4>
                        <p class="empty-state-text-modern">Aucun compte ne correspond à vos critères de recherche.</p>
                        <a href="/comptabilite/plan-comptable/nouveau/" class="btn-primary-gradient mt-3">
                            <i class="bi bi-plus-circle"></i>
                            <span>Créer un compte</span>
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Panneau latéral - Statistiques -->
        <div class="col-lg-3">
            <!-- Répartition par type -->
            <div class="sidebar-card-modern">
                <div class="sidebar-card-header">
                    <i class="bi bi-pie-chart"></i>
                    <span>Par type</span>
                </div>
                <div class="sidebar-card-body">
                    {% for stat in stats_par_type %}
                    <div class="stat-item-modern">
                        <div class="stat-item-label">{{ stat.label }}</div>
                        <div class="stat-item-value">{{ stat.nombre }}</div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Répartition par classe -->
            <div class="sidebar-card-modern mt-3">
                <div class="sidebar-card-header">
                    <i class="bi bi-diagram-3"></i>
                    <span>Par classe</span>
                </div>
                <div class="sidebar-card-body">
                    {% for stat in stats_par_classe %}
                    <div class="stat-item-modern">
                        <div class="stat-item-label">Classe {{ stat.numero }}</div>
                        <div class="stat-item-value">{{ stat.nombre }}</div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Aide SYSCOHADA -->
            <div class="sidebar-card-modern mt-3 help-card">
                <div class="sidebar-card-header">
                    <i class="bi bi-info-circle"></i>
                    <span>Aide SYSCOHADA</span>
                </div>
                <div class="sidebar-card-body">
                    <p class="help-text">
                        <strong>Classes SYSCOHADA :</strong>
                    </p>
                    <ul class="help-list">
                        <li><strong>1-2 :</strong> Bilan</li>
                        <li><strong>3-5 :</strong> Gestion</li>
                        <li><strong>6-7 :</strong> Résultat</li>
                        <li><strong>8 :</strong> Autres</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

