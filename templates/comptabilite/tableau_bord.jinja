<!-- templates/comptabilite/tableau_bord.jinja - TABLEAU DE BORD COMPTABILITÉ -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Tableau de bord Comptabilité{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête du tableau de bord -->
    <div class="page-header-dashboard">
        <div class="header-left">
            <div class="header-icon-box">
                <i class="bi bi-calculator"></i>
            </div>
            <div>
                <h4 class="header-title">Tableau de bord Comptabilité</h4>
                <p class="header-subtitle">Vue d'ensemble de votre comptabilité SYSCOHADA</p>
            </div>
        </div>
        <div class="header-right">
            {% if exercice_actuel %}
            <div class="exercice-badge">
                <i class="bi bi-calendar-check"></i>
                <div>
                    <div class="exercice-label">Exercice en cours</div>
                    <div class="exercice-nom">{{ exercice_actuel.nom }}</div>
                </div>
            </div>
            {% else %}
            <div class="exercice-badge exercice-alert">
                <i class="bi bi-exclamation-triangle"></i>
                <div>
                    <div class="exercice-label">Aucun exercice actif</div>
                    <a href="/comptabilite/exercices/nouveau/" class="exercice-link">Créer un exercice</a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Statistiques principales -->
    <div class="stats-grid-dashboard">
        <div class="stat-card-dashboard stat-primary">
            <div class="stat-card-header">
                <div class="stat-icon">
                    <i class="bi bi-journal-text"></i>
                </div>
                <div class="stat-badge-top">
                    <span class="badge badge-primary">Actifs</span>
                </div>
            </div>
            <div class="stat-card-body">
                <div class="stat-value">{{ total_comptes }}</div>
                <div class="stat-label">Comptes comptables</div>
                <a href="/comptabilite/plan-comptable/" class="stat-link">
                    Voir le plan comptable <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card-dashboard stat-success">
            <div class="stat-card-header">
                <div class="stat-icon">
                    <i class="bi bi-book"></i>
                </div>
                <div class="stat-badge-top">
                    <span class="badge badge-success">Actifs</span>
                </div>
            </div>
            <div class="stat-card-body">
                <div class="stat-value">{{ total_journaux }}</div>
                <div class="stat-label">Journaux comptables</div>
                <a href="/comptabilite/journaux/" class="stat-link">
                    Voir les journaux <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card-dashboard stat-info">
            <div class="stat-card-header">
                <div class="stat-icon">
                    <i class="bi bi-file-earmark-text"></i>
                </div>
                <div class="stat-badge-top">
                    <span class="badge badge-info">Validées</span>
                </div>
            </div>
            <div class="stat-card-body">
                <div class="stat-value">{{ total_pieces }}</div>
                <div class="stat-label">Pièces comptables</div>
                <a href="/comptabilite/pieces/" class="stat-link">
                    Voir les pièces <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card-dashboard stat-warning">
            <div class="stat-card-header">
                <div class="stat-icon">
                    <i class="bi bi-calendar3"></i>
                </div>
                <div class="stat-badge-top">
                    <span class="badge badge-warning">Année</span>
                </div>
            </div>
            <div class="stat-card-body">
                <div class="stat-value">{{ exercice_actuel.nom if exercice_actuel else 'N/A' }}</div>
                <div class="stat-label">Exercice comptable</div>
                <a href="/comptabilite/exercices/" class="stat-link">
                    Gérer les exercices <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Accès rapides -->
        <div class="col-lg-8">
            <div class="quick-access-card">
                <div class="quick-access-header">
                    <div class="header-icon">
                        <i class="bi bi-lightning-charge"></i>
                    </div>
                    <h6 class="header-title">Accès rapides</h6>
                </div>
                <div class="quick-access-body">
                    <div class="quick-access-grid">
                        <!-- Plan comptable -->
                        <a href="/comptabilite/plan-comptable/" class="quick-access-item">
                            <div class="quick-icon bg-primary">
                                <i class="bi bi-journal-text"></i>
                            </div>
                            <div class="quick-content">
                                <div class="quick-title">Plan comptable</div>
                                <div class="quick-desc">Gérer les comptes SYSCOHADA</div>
                            </div>
                            <div class="quick-arrow">
                                <i class="bi bi-chevron-right"></i>
                            </div>
                        </a>

                        <!-- Nouvelle pièce -->
                        <a href="/comptabilite/pieces/nouvelle/" class="quick-access-item">
                            <div class="quick-icon bg-success">
                                <i class="bi bi-file-earmark-plus"></i>
                            </div>
                            <div class="quick-content">
                                <div class="quick-title">Nouvelle pièce</div>
                                <div class="quick-desc">Saisir une écriture comptable</div>
                            </div>
                            <div class="quick-arrow">
                                <i class="bi bi-chevron-right"></i>
                            </div>
                        </a>

                        <!-- Journaux -->
                        <a href="/comptabilite/journaux/" class="quick-access-item">
                            <div class="quick-icon bg-info">
                                <i class="bi bi-book"></i>
                            </div>
                            <div class="quick-content">
                                <div class="quick-title">Journaux</div>
                                <div class="quick-desc">Consulter les journaux</div>
                            </div>
                            <div class="quick-arrow">
                                <i class="bi bi-chevron-right"></i>
                            </div>
                        </a>

                        <!-- Bilan -->
                        <a href="/comptabilite/rapports/bilan/" class="quick-access-item">
                            <div class="quick-icon bg-warning">
                                <i class="bi bi-pie-chart"></i>
                            </div>
                            <div class="quick-content">
                                <div class="quick-title">Bilan</div>
                                <div class="quick-desc">Consulter le bilan comptable</div>
                            </div>
                            <div class="quick-arrow">
                                <i class="bi bi-chevron-right"></i>
                            </div>
                        </a>

                        <!-- Compte de résultat -->
                        <a href="/comptabilite/rapports/compte-resultat/" class="quick-access-item">
                            <div class="quick-icon bg-danger">
                                <i class="bi bi-graph-up"></i>
                            </div>
                            <div class="quick-content">
                                <div class="quick-title">Compte de résultat</div>
                                <div class="quick-desc">Analyser les performances</div>
                            </div>
                            <div class="quick-arrow">
                                <i class="bi bi-chevron-right"></i>
                            </div>
                        </a>

                        <!-- Banques -->
                        <a href="/comptabilite/banques/" class="quick-access-item">
                            <div class="quick-icon bg-purple">
                                <i class="bi bi-bank"></i>
                            </div>
                            <div class="quick-content">
                                <div class="quick-title">Banques</div>
                                <div class="quick-desc">Gérer les comptes bancaires</div>
                            </div>
                            <div class="quick-arrow">
                                <i class="bi bi-chevron-right"></i>
                            </div>
                        </a>

                        <!-- Budgets -->
                        <a href="/comptabilite/budgets/" class="quick-access-item">
                            <div class="quick-icon bg-teal">
                                <i class="bi bi-wallet2"></i>
                            </div>
                            <div class="quick-content">
                                <div class="quick-title">Budgets</div>
                                <div class="quick-desc">Suivre les budgets prévisionnels</div>
                            </div>
                            <div class="quick-arrow">
                                <i class="bi bi-chevron-right"></i>
                            </div>
                        </a>

                        <!-- Exercices -->
                        <a href="/comptabilite/exercices/" class="quick-access-item">
                            <div class="quick-icon bg-orange">
                                <i class="bi bi-calendar-range"></i>
                            </div>
                            <div class="quick-content">
                                <div class="quick-title">Exercices</div>
                                <div class="quick-desc">Gérer les exercices comptables</div>
                            </div>
                            <div class="quick-arrow">
                                <i class="bi bi-chevron-right"></i>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dernières pièces + Info SYSCOHADA -->
        <div class="col-lg-4">
            <!-- Dernières pièces -->
            <div class="recent-pieces-card">
                <div class="recent-pieces-header">
                    <div class="header-icon">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <h6 class="header-title">Dernières pièces</h6>
                </div>
                <div class="recent-pieces-body">
                    {% if dernieres_pieces %}
                    <div class="pieces-list">
                        {% for piece in dernieres_pieces %}
                        <a href="/comptabilite/pieces/{{ piece.pk }}/" class="piece-item">
                            <div class="piece-icon">
                                {% if piece.journal.type_journal == 'VENTE' %}
                                <i class="bi bi-cart-check text-success"></i>
                                {% elif piece.journal.type_journal == 'ACHAT' %}
                                <i class="bi bi-cart-plus text-warning"></i>
                                {% elif piece.journal.type_journal == 'BANQUE' %}
                                <i class="bi bi-bank text-info"></i>
                                {% elif piece.journal.type_journal == 'CAISSE' %}
                                <i class="bi bi-cash text-primary"></i>
                                {% else %}
                                <i class="bi bi-file-text text-secondary"></i>
                                {% endif %}
                            </div>
                            <div class="piece-content">
                                <div class="piece-numero">{{ piece.numero_piece }}</div>
                                <div class="piece-libelle">{{ piece.libelle[:40] }}{% if piece.libelle|length > 40 %}...{% endif %}</div>
                                <div class="piece-meta">
                                    <span class="piece-journal">{{ piece.journal.code }}</span>
                                    <span class="piece-date">{{ piece.date_piece.strftime('%d/%m/%Y') }}</span>
                                </div>
                            </div>
                            {% if piece.est_validee %}
                            <div class="piece-badge">
                                <i class="bi bi-check-circle text-success"></i>
                            </div>
                            {% else %}
                            <div class="piece-badge">
                                <i class="bi bi-clock text-warning"></i>
                            </div>
                            {% endif %}
                        </a>
                        {% endfor %}
                    </div>
                    {% else %}
                    <div class="empty-pieces">
                        <i class="bi bi-inbox"></i>
                        <p>Aucune pièce comptable</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Info SYSCOHADA -->
            <div class="info-syscohada-card mt-4">
                <div class="info-header">
                    <i class="bi bi-info-circle"></i>
                    <span>Système SYSCOHADA</span>
                </div>
                <div class="info-body">
                    <p class="info-text">
                        Le <strong>SYSCOHADA</strong> (Système Comptable OHADA) est le référentiel 
                        comptable harmonisé pour les pays membres de l'OHADA.
                    </p>
                    <div class="info-classes">
                        <div class="info-title">Classes de comptes :</div>
                        <div class="classes-grid">
                            <div class="classe-item">
                                <span class="classe-num">1-2</span>
                                <span class="classe-label">Bilan</span>
                            </div>
                            <div class="classe-item">
                                <span class="classe-num">3-5</span>
                                <span class="classe-label">Gestion</span>
                            </div>
                            <div class="classe-item">
                                <span class="classe-num">6-7</span>
                                <span class="classe-label">Résultat</span>
                            </div>
                            <div class="classe-item">
                                <span class="classe-num">8</span>
                                <span class="classe-label">Autres</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

