{% extends "base_principale.jinja" %}

{% block titre_page %}Désactiver un fournisseur{% endblock %}

{% block contenu %}
<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a href="/"><i class="bi bi-house-door"></i> Accueil</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/fournisseurs/">Fournisseurs</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/fournisseurs/{{ fournisseur.pk }}/">{{ fournisseur.nom }}</a>
                    </li>
                    <li class="breadcrumb-item active">Désactiver</li>
                </ol>
            </nav>

            <!-- Carte principale de confirmation -->
            <div class="confirmation-card">
                <!-- En-tête avec animation -->
                <div class="confirmation-header">
                    <div class="warning-icon-wrapper">
                        <div class="warning-icon">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                        <div class="warning-pulse"></div>
                    </div>
                    <h1 class="confirmation-title">Confirmer la désactivation</h1>
                    <p class="confirmation-subtitle">
                        Vous êtes sur le point de désactiver ce fournisseur. Il ne sera plus disponible pour les nouvelles commandes d'achat.
                    </p>
                </div>

                <!-- Informations du fournisseur -->
                <div class="supplier-info-card">
                    <div class="supplier-header">
                        <div class="supplier-avatar-confirm">
                            {{ fournisseur.nom[0]|upper if fournisseur.nom else 'F' }}
                        </div>
                        <div class="supplier-details">
                            <h3 class="supplier-name">{{ fournisseur.nom }}</h3>
                            <div class="supplier-code">
                                <i class="bi bi-hash"></i>{{ fournisseur.code }}
                            </div>
                        </div>
                        {% if fournisseur.est_actif %}
                        <div class="supplier-status status-active">
                            <i class="bi bi-circle-fill"></i> Actif
                        </div>
                        {% else %}
                        <div class="supplier-status status-inactive">
                            <i class="bi bi-circle-fill"></i> Inactif
                        </div>
                        {% endif %}
                    </div>

                    <div class="supplier-data-grid">
                        <div class="data-item">
                            <div class="data-label">
                                <i class="bi bi-envelope"></i>
                                Email
                            </div>
                            <div class="data-value">{{ fournisseur.email or '-' }}</div>
                        </div>

                        <div class="data-item">
                            <div class="data-label">
                                <i class="bi bi-telephone"></i>
                                Téléphone
                            </div>
                            <div class="data-value">{{ fournisseur.telephone or '-' }}</div>
                        </div>

                        {% if fournisseur.adresse %}
                        <div class="data-item">
                            <div class="data-label">
                                <i class="bi bi-geo-alt"></i>
                                Adresse
                            </div>
                            <div class="data-value">{{ fournisseur.adresse }}</div>
                        </div>
                        {% endif %}

                        {% if fournisseur.ville or fournisseur.pays %}
                        <div class="data-item">
                            <div class="data-label">
                                <i class="bi bi-flag"></i>
                                Localisation
                            </div>
                            <div class="data-value">
                                {{ fournisseur.ville or '' }}{% if fournisseur.ville and fournisseur.pays %}, {% endif %}{{ fournisseur.pays or '' }}
                            </div>
                        </div>
                        {% endif %}

                        {% if fournisseur.numero_fiscal %}
                        <div class="data-item full-width">
                            <div class="data-label">
                                <i class="bi bi-file-text"></i>
                                Numéro fiscal (NINEA)
                            </div>
                            <div class="data-value">{{ fournisseur.numero_fiscal }}</div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Alertes conditionnelles -->
                {% if commandes_actives %}
                <div class="alert-card alert-warning">
                    <div class="alert-icon">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h4 class="alert-title">Commandes en cours détectées !</h4>
                        <p class="alert-text">
                            Ce fournisseur a des commandes d'achat actives ou récentes. 
                            Assurez-vous de clôturer ces commandes avant désactivation.
                        </p>
                    </div>
                </div>
                {% endif %}

                {% if produits_associes %}
                <div class="alert-card alert-info">
                    <div class="alert-icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <div class="alert-content">
                        <h4 class="alert-title">Produits associés détectés</h4>
                        <p class="alert-text">
                            Ce fournisseur est référencé pour <strong>{{ produits_associes }} produit(s)</strong>. 
                            Ces produits devront être réaffectés à un autre fournisseur.
                        </p>
                    </div>
                </div>
                {% endif %}

                <!-- Information sur la désactivation -->
                <div class="info-card">
                    <div class="info-icon">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div class="info-content">
                        <h4 class="info-title">Qu'est-ce que la désactivation ?</h4>
                        <p class="info-text">
                            Le fournisseur sera désactivé mais <strong>toutes ses données seront conservées</strong>. 
                            Vous pourrez le réactiver à tout moment depuis la liste des fournisseurs.
                        </p>
                    </div>
                </div>

                <!-- Impacts de la désactivation -->
                <div class="impacts-section">
                    <h3 class="impacts-title">
                        <i class="bi bi-diagram-3"></i>
                        Conséquences de la désactivation
                    </h3>
                    <div class="impacts-grid">
                        <div class="impact-item impact-danger">
                            <div class="impact-icon">
                                <i class="bi bi-cart-x"></i>
                            </div>
                            <div class="impact-label">Nouvelles commandes</div>
                            <div class="impact-status status-blocked">Bloquées</div>
                        </div>

                        <div class="impact-item impact-success">
                            <div class="impact-icon">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div class="impact-label">Historique achats</div>
                            <div class="impact-status status-saved">Conservé</div>
                        </div>

                        <div class="impact-item impact-primary">
                            <div class="impact-icon">
                                <i class="bi bi-arrow-clockwise"></i>
                            </div>
                            <div class="impact-label">Réactivation</div>
                            <div class="impact-status status-possible">Possible</div>
                        </div>
                    </div>
                </div>

                <!-- Formulaire de confirmation -->
                <form method="post" class="confirmation-form" id="deleteForm">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    
                    <div class="form-actions">
                        <a href="/fournisseurs/{{ fournisseur.pk }}/" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler</span>
                        </a>
                        <button type="submit" class="btn-delete">
                            <i class="bi bi-exclamation-triangle"></i>
                            <span>Oui, désactiver le fournisseur</span>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Checklist avant désactivation -->
            <div class="checklist-card">
                <div class="checklist-header">
                    <i class="bi bi-clipboard-check-fill"></i>
                    <h3>Checklist avant désactivation</h3>
                </div>
                <div class="checklist-grid">
                    <div class="checklist-item">
                        <div class="checklist-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="checklist-content">
                            <div class="checklist-title">Commandes en cours</div>
                            <div class="checklist-desc">Vérifier les commandes non livrées</div>
                        </div>
                    </div>

                    <div class="checklist-item">
                        <div class="checklist-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="checklist-content">
                            <div class="checklist-title">Paiements en attente</div>
                            <div class="checklist-desc">Solder les factures impayées</div>
                        </div>
                    </div>

                    <div class="checklist-item">
                        <div class="checklist-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="checklist-content">
                            <div class="checklist-title">Produits associés</div>
                            <div class="checklist-desc">Réaffecter à un autre fournisseur</div>
                        </div>
                    </div>

                    <div class="checklist-item">
                        <div class="checklist-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="checklist-content">
                            <div class="checklist-title">Alternatives</div>
                            <div class="checklist-desc">Identifier un fournisseur de remplacement</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('deleteForm');
    
    if (form) {
        form.addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Double confirmation
            const confirmation = confirm(
                'Êtes-vous vraiment sûr de vouloir désactiver ce fournisseur ?\n\n' +
                'Cette action affectera :\n' +
                '• Les nouvelles commandes d\'achat\n' +
                '• La visibilité dans les listes\n\n' +
                'Les données seront conservées et vous pourrez réactiver le fournisseur plus tard.'
            );
            
            if (confirmation) {
                form.submit();
            }
        });
    }
});
</script>

