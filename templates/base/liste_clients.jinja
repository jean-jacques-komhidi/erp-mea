<!-- templates/base/liste_clients.jinja - COMPLET AVEC EXPORT -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Liste des clients{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête moderne avec statistiques -->
    <div class="row g-4 mb-4">
        <!-- Carte Clients actifs -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-primary">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ clients|length|default(0) }}</div>
                        <div class="stat-label">Clients totaux</div>
                        <div class="stat-badge">
                            <span class="badge badge-success-soft">
                                <i class="bi bi-check-circle"></i> {{ clients_actifs|default(0) }} actifs
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Carte Créances -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-warning">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ "{:,.0f}".format(total_creances|default(0)) }}</div>
                        <div class="stat-label">Créances (FCFA)</div>
                        <div class="stat-badge">
                            <span class="badge badge-warning-soft">
                                <i class="bi bi-clock"></i> {{ creances_retard|default(0) }} en retard
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Carte Commandes -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-info">
                        <i class="bi bi-cart-check"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ commandes_mois|default(0) }}</div>
                        <div class="stat-label">Commandes ce mois</div>
                        <div class="stat-badge">
                            <span class="badge badge-info-soft">
                                <i class="bi bi-graph-up"></i> +{{ variation_mois|default(0) }}%
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Carte Dépassements -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ clients_credit|default(0) }}</div>
                        <div class="stat-label">Dépassement crédit</div>
                        <div class="stat-badge">
                            <span class="badge badge-danger-soft">
                                <i class="bi bi-alert-circle"></i> Action requise
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Carte principale du tableau -->
    <div class="main-card">
        <!-- En-tête de la carte -->
        <div class="card-header-modern">
            <div class="header-left">
                <div class="header-icon-box">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div>
                    <h5 class="header-title">Gestion des clients</h5>
                    <p class="header-subtitle">Gérez et suivez votre portefeuille clients</p>
                </div>
            </div>
            <div class="header-right">
                <!-- Recherche avancée -->
                <form method="get" class="search-form">
                    <div class="search-input-group">
                        <i class="bi bi-search search-icon"></i>
                        <input type="text" 
                               name="recherche" 
                               value="{{ recherche }}" 
                               placeholder="Rechercher par nom, code, email..." 
                               class="search-input">
                        {% if recherche %}
                        <a href="?" class="search-clear">
                            <i class="bi bi-x-circle"></i>
                        </a>
                        {% endif %}
                    </div>
                </form>
                
                <!-- Boutons d'action -->
                <div class="action-buttons">
                    <button class="btn-icon" title="Filtrer">
                        <i class="bi bi-funnel"></i>
                    </button>
                    
                    <!-- Menu d'export -->
                    <div class="export-dropdown">
                        <button class="btn-icon" id="exportBtn" title="Exporter">
                            <i class="bi bi-download"></i>
                        </button>
                        <div class="export-menu" id="exportMenu">
                            <a href="/clients/exporter/?format=excel{% if recherche %}&recherche={{ recherche }}{% endif %}" class="export-item">
                                <i class="bi bi-file-earmark-excel"></i>
                                <div class="export-info">
                                    <div class="export-title">Excel (.xlsx)</div>
                                    <div class="export-desc">Tableau avec toutes les données</div>
                                </div>
                            </a>
                            <a href="/clients/exporter/?format=csv{% if recherche %}&recherche={{ recherche }}{% endif %}" class="export-item">
                                <i class="bi bi-filetype-csv"></i>
                                <div class="export-info">
                                    <div class="export-title">CSV (.csv)</div>
                                    <div class="export-desc">Format compatible tableur</div>
                                </div>
                            </a>
                            <a href="/clients/exporter/?format=pdf{% if recherche %}&recherche={{ recherche }}{% endif %}" class="export-item">
                                <i class="bi bi-file-earmark-pdf"></i>
                                <div class="export-info">
                                    <div class="export-title">PDF (.pdf)</div>
                                    <div class="export-desc">Document imprimable</div>
                                </div>
                            </a>
                        </div>
                    </div>
                    
                    <a href="/clients/nouveau/" class="btn-primary-modern">
                        <i class="bi bi-plus-circle"></i>
                        <span>Nouveau client</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Filtres rapides -->
        <div class="filters-bar">
            <div class="filters-group">
                <button class="filter-chip active">
                    <i class="bi bi-people"></i> Tous ({{ clients|length }})
                </button>
                <button class="filter-chip">
                    <i class="bi bi-check-circle"></i> Actifs ({{ clients_actifs|default(0) }})
                </button>
                <button class="filter-chip">
                    <i class="bi bi-building"></i> Entreprises
                </button>
                <button class="filter-chip">
                    <i class="bi bi-person"></i> Particuliers
                </button>
                <button class="filter-chip">
                    <i class="bi bi-exclamation-triangle text-danger"></i> Dépassements ({{ clients_credit|default(0) }})
                </button>
            </div>
            {% if recherche %}
            <div class="search-result-info">
                <i class="bi bi-search"></i>
                Résultats pour "<strong>{{ recherche }}</strong>"
                <a href="?" class="ms-2">Effacer</a>
            </div>
            {% endif %}
        </div>
        
        <!-- Tableau moderne -->
        <div class="table-container">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th style="width: 40px;">
                            <div class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </div>
                        </th>
                        <th style="width: 300px;">Client</th>
                        <th style="width: 200px;">Contact</th>
                        <th style="width: 150px;">Localisation</th>
                        <th style="width: 150px;">Limite crédit</th>
                        <th style="width: 120px;">Solde actuel</th>
                        <th style="width: 100px;">Statut</th>
                        <th style="width: 120px;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for client in clients %}
                    <tr class="table-row-hover">
                        <td>
                            <div class="custom-checkbox">
                                <input type="checkbox" id="client{{ client.pk }}" name="client_ids" value="{{ client.pk }}">
                                <label for="client{{ client.pk }}"></label>
                            </div>
                        </td>
                        <td>
                            <div class="client-cell">
                                <div class="client-avatar">
                                    {{ client.nom[0]|upper if client.nom else 'C' }}
                                </div>
                                <div class="client-info">
                                    <div class="client-name">{{ client.nom }}</div>
                                    <div class="client-meta">
                                        <span class="client-code">
                                            <i class="bi bi-hash"></i>{{ client.code }}
                                        </span>
                                        <span class="client-type">
                                            {% if client.type_client == 'ENTREPRISE' %}
                                                <i class="bi bi-building"></i> Entreprise
                                            {% else %}
                                                <i class="bi bi-person"></i> Particulier
                                            {% endif %}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="contact-cell">
                                {% if client.email %}
                                <div class="contact-item">
                                    <i class="bi bi-envelope"></i>
                                    <a href="mailto:{{ client.email }}">{{ client.email }}</a>
                                </div>
                                {% endif %}
                                {% if client.telephone %}
                                <div class="contact-item">
                                    <i class="bi bi-telephone"></i>
                                    <a href="tel:{{ client.telephone }}">{{ client.telephone }}</a>
                                </div>
                                {% endif %}
                                {% if not client.email and not client.telephone %}
                                <span class="text-muted-modern">Non renseigné</span>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            <div class="location-cell">
                                {% if client.ville %}
                                <div class="location-item">
                                    <i class="bi bi-geo-alt"></i>
                                    {{ client.ville }}
                                </div>
                                {% endif %}
                                {% if client.pays %}
                                <div class="location-country">
                                    <i class="bi bi-flag"></i>
                                    {{ client.pays }}
                                </div>
                                {% endif %}
                                {% if not client.ville and not client.pays %}
                                <span class="text-muted-modern">-</span>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            <div class="amount-cell">
                                <div class="amount-value">{{ "{:,.0f}".format(client.limite_credit) }}</div>
                                <div class="amount-currency">FCFA</div>
                            </div>
                        </td>
                        <td>
                            <div class="amount-cell">
                                <div class="amount-value {% if client.solde_actuel and client.solde_actuel > client.limite_credit %}text-danger{% endif %}">
                                    {{ "{:,.0f}".format(client.solde_actuel or 0) }}
                                </div>
                                <div class="amount-currency">FCFA</div>
                            </div>
                        </td>
                        <td>
                            <div class="status-cell">
                                {% if client.est_actif %}
                                <span class="status-badge status-success">
                                    <span class="status-dot"></span>
                                    Actif
                                </span>
                                {% else %}
                                <span class="status-badge status-secondary">
                                    <span class="status-dot"></span>
                                    Inactif
                                </span>
                                {% endif %}
                                
                                {% if client.solde_actuel and client.solde_actuel > client.limite_credit %}
                                <span class="status-badge status-danger mt-1">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Dépassement
                                </span>
                                {% endif %}
                            </div>
                        </td>
                        <td class="text-end">
                            <div class="action-buttons-table">
                                <a href="/clients/{{ client.pk }}/" class="btn-action btn-action-primary" title="Voir les détails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/clients/{{ client.pk }}/modifier/" class="btn-action btn-action-secondary" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/clients/{{ client.pk }}/supprimer/" 
                                   class="btn-action btn-action-danger" 
                                   title="Supprimer"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="empty-state">
                            <div class="empty-state-content">
                                <div class="empty-state-icon">
                                    <i class="bi bi-people"></i>
                                </div>
                                <h4 class="empty-state-title">Aucun client trouvé</h4>
                                <p class="empty-state-text">Commencez par ajouter votre premier client pour gérer votre portefeuille</p>
                                <a href="/clients/nouveau/" class="btn-primary-modern">
                                    <i class="bi bi-plus-circle"></i>
                                    <span>Ajouter un client</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <!-- Pied de page avec pagination -->
        <div class="card-footer-modern">
            <div class="footer-left">
                <div class="bulk-actions">
                    <select class="form-select-modern" id="bulkActionSelect">
                        <option selected>Actions groupées</option>
                        <option value="export">Exporter la sélection</option>
                        <option value="activate">Activer</option>
                        <option value="deactivate">Désactiver</option>
                        <option value="delete">Supprimer</option>
                    </select>
                    <button class="btn-secondary-modern" id="applyBulkAction">Appliquer</button>
                </div>
                <div class="results-info">
                    {% if page_obj %}
                    Affichage de {{ page_obj.start_index }} à {{ page_obj.end_index }} sur {{ page_obj.paginator.count }} clients
                    {% else %}
                    Affichage de {{ clients|length }} client(s)
                    {% endif %}
                </div>
            </div>
            
            <div class="footer-right">
                {% if page_obj and page_obj.paginator.num_pages > 1 %}
                <nav class="pagination-modern">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}{% if recherche %}&recherche={{ recherche }}{% endif %}" class="pagination-btn">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                    {% else %}
                    <span class="pagination-btn disabled">
                        <i class="bi bi-chevron-left"></i>
                    </span>
                    {% endif %}
                    
                    {% set current_page = page_obj.number %}
                    {% set total_pages = page_obj.paginator.num_pages %}
                    
                    {% for num in range(1, total_pages + 1) %}
                        {% if num >= current_page - 2 and num <= current_page + 2 %}
                            {% if num == current_page %}
                            <span class="pagination-btn active">{{ num }}</span>
                            {% else %}
                            <a href="?page={{ num }}{% if recherche %}&recherche={{ recherche }}{% endif %}" class="pagination-btn">{{ num }}</a>
                            {% endif %}
                        {% elif num == 1 or num == total_pages %}
                            <a href="?page={{ num }}{% if recherche %}&recherche={{ recherche }}{% endif %}" class="pagination-btn">{{ num }}</a>
                        {% elif num == current_page - 3 or num == current_page + 3 %}
                            <span class="pagination-dots">...</span>
                        {% endif %}
                    {% endfor %}
                    
                    {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}{% if recherche %}&recherche={{ recherche }}{% endif %}" class="pagination-btn">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    {% else %}
                    <span class="pagination-btn disabled">
                        <i class="bi bi-chevron-right"></i>
                    </span>
                    {% endif %}
                </nav>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sélection de tous les checkboxes
    const selectAll = document.getElementById('selectAll');
    const checkboxes = document.querySelectorAll('input[name="client_ids"]');
    
    if (selectAll) {
        selectAll.addEventListener('change', function() {
            checkboxes.forEach(cb => cb.checked = selectAll.checked);
        });
    }
    
    // Animation hover des lignes
    document.querySelectorAll('.table-row-hover').forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(4px)';
        });
        row.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    });
    
    // Menu d'export
    const exportBtn = document.getElementById('exportBtn');
    const exportMenu = document.getElementById('exportMenu');
    
    if (exportBtn && exportMenu) {
        exportBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            exportMenu.classList.toggle('show');
        });
        
        // Fermer le menu en cliquant ailleurs
        document.addEventListener('click', function() {
            exportMenu.classList.remove('show');
        });
        
        exportMenu.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    }
    
    // Actions groupées
    const bulkActionSelect = document.getElementById('bulkActionSelect');
    const applyBulkAction = document.getElementById('applyBulkAction');
    
    if (applyBulkAction) {
        applyBulkAction.addEventListener('click', function() {
            const action = bulkActionSelect.value;
            const selected = Array.from(checkboxes).filter(cb => cb.checked).map(cb => cb.value);
            
            if (selected.length === 0) {
                alert('Veuillez sélectionner au moins un client');
                return;
            }
            
            if (action === 'export') {
                // Export de la sélection
                const ids = selected.join(',');
                window.location.href = `/clients/exporter/?format=excel&ids=${ids}`;
            } else if (action === 'activate' || action === 'deactivate' || action === 'delete') {
                if (confirm(`Êtes-vous sûr de vouloir ${action === 'activate' ? 'activer' : action === 'deactivate' ? 'désactiver' : 'supprimer'} ${selected.length} client(s) ?`)) {
                    // Créer un formulaire et le soumettre
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/clients/action-groupee/`;
                    
                    const csrfInput = document.createElement('input');
                    csrfInput.type = 'hidden';
                    csrfInput.name = 'csrfmiddlewaretoken';
                    csrfInput.value = '{{ csrf_token }}';
                    form.appendChild(csrfInput);
                    
                    const actionInput = document.createElement('input');
                    actionInput.type = 'hidden';
                    actionInput.name = 'action';
                    actionInput.value = action;
                    form.appendChild(actionInput);
                    
                    selected.forEach(id => {
                        const idInput = document.createElement('input');
                        idInput.type = 'hidden';
                        idInput.name = 'client_ids';
                        idInput.value = id;
                        form.appendChild(idInput);
                    });
                    
                    document.body.appendChild(form);
                    form.submit();
                }
            }
        });
    }
});
</script>

