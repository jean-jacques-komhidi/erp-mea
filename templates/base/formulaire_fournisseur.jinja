<!-- templates/base/formulaire_fournisseur.jinja - Design Professionnel Cyan -->
{% extends "base_principale.jinja" %}

{% block titre_page %}{{ action }} un fournisseur{% endblock %}

{% block contenu %}
<div class="container-fluid px-4 py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb-modern">
            <li class="breadcrumb-item">
                <a href="/"><i class="bi bi-house-door"></i> Accueil</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/fournisseurs/">Fournisseurs</a>
            </li>
            <li class="breadcrumb-item active">{{ action }}</li>
        </ol>
    </nav>

    <!-- En-tête de page -->
    <div class="page-header">
        <div class="page-header-icon">
            <i class="bi bi-buildings"></i>
        </div>
        <div class="page-header-content">
            <h1 class="page-title">{{ action }} un fournisseur</h1>
            <p class="page-subtitle">Complétez les informations du partenaire fournisseur</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Colonne gauche - Formulaire -->
        <div class="col-lg-8">
            {% if formulaire.errors %}
            <div class="alert-card alert-danger">
                <div class="alert-icon">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <div class="alert-content">
                    <h5 class="alert-title">Erreurs dans le formulaire</h5>
                    <ul class="alert-list">
                        {% for field, errors in formulaire.errors.items() %}
                            {% for error in errors %}
                                <li><strong>{{ formulaire[field].label }} :</strong> {{ error }}</li>
                            {% endfor %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endif %}

            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">

                <!-- Informations de base -->
                <div class="form-card">
                    <div class="form-card-header bg-primary">
                        <i class="bi bi-info-circle-fill"></i>
                        <div>
                            <h3 class="form-card-title">Informations de base</h3>
                            <p class="form-card-subtitle">Identifiants principaux du fournisseur</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.code.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-hash"></i>
                                        Code fournisseur
                                        <span class="badge-required">Requis</span>
                                    </label>
                                    {{ formulaire.code }}
                                    {% if formulaire.code.help_text %}
                                    <div class="form-help">
                                        <i class="bi bi-info-circle"></i>
                                        {{ formulaire.code.help_text }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.nom.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-building"></i>
                                        Nom du fournisseur
                                        <span class="badge-required">Requis</span>
                                    </label>
                                    {{ formulaire.nom }}
                                    {% if formulaire.nom.help_text %}
                                    <div class="form-help">
                                        <i class="bi bi-info-circle"></i>
                                        {{ formulaire.nom.help_text }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact -->
                <div class="form-card">
                    <div class="form-card-header bg-success">
                        <i class="bi bi-telephone-fill"></i>
                        <div>
                            <h3 class="form-card-title">Informations de contact</h3>
                            <p class="form-card-subtitle">Moyens de communication avec le fournisseur</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.email.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-envelope"></i>
                                        Email
                                        <span class="badge-required">Requis</span>
                                    </label>
                                    {{ formulaire.email }}
                                    {% if formulaire.email.help_text %}
                                    <div class="form-help">
                                        <i class="bi bi-info-circle"></i>
                                        {{ formulaire.email.help_text }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.telephone.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-telephone"></i>
                                        Téléphone
                                        <span class="badge-required">Requis</span>
                                    </label>
                                    {{ formulaire.telephone }}
                                    {% if formulaire.telephone.help_text %}
                                    <div class="form-help">
                                        <i class="bi bi-info-circle"></i>
                                        {{ formulaire.telephone.help_text }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Localisation -->
                <div class="form-card">
                    <div class="form-card-header bg-info">
                        <i class="bi bi-geo-alt-fill"></i>
                        <div>
                            <h3 class="form-card-title">Localisation</h3>
                            <p class="form-card-subtitle">Adresse et coordonnées géographiques</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.adresse.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-house-door"></i>
                                        Adresse complète
                                    </label>
                                    {{ formulaire.adresse }}
                                    {% if formulaire.adresse.help_text %}
                                    <div class="form-help">
                                        <i class="bi bi-info-circle"></i>
                                        {{ formulaire.adresse.help_text }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.ville.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-geo-alt"></i>
                                        Ville
                                    </label>
                                    {{ formulaire.ville }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.pays.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-flag"></i>
                                        Pays
                                    </label>
                                    {{ formulaire.pays }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Informations complémentaires -->
                <div class="form-card">
                    <div class="form-card-header bg-warning">
                        <i class="bi bi-file-earmark-text-fill"></i>
                        <div>
                            <h3 class="form-card-title">Informations complémentaires</h3>
                            <p class="form-card-subtitle">Détails commerciaux et fiscaux</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.numero_fiscal.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-file-text"></i>
                                        Numéro fiscal (NINEA)
                                    </label>
                                    {{ formulaire.numero_fiscal }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.delai_paiement.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-calendar"></i>
                                        Délai de paiement
                                    </label>
                                    <div class="input-with-addon">
                                        {{ formulaire.delai_paiement }}
                                        <span class="input-addon">jours</span>
                                    </div>
                                </div>
                            </div>
                            
                            {% if formulaire.type_fournisseur %}
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.type_fournisseur.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-tags"></i>
                                        Type de fournisseur
                                    </label>
                                    {{ formulaire.type_fournisseur }}
                                </div>
                            </div>
                            {% endif %}
                            
                            {% if formulaire.site_web %}
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.site_web.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-globe"></i>
                                        Site web
                                    </label>
                                    {{ formulaire.site_web }}
                                </div>
                            </div>
                            {% endif %}
                            
                            {% if formulaire.conditions_paiement %}
                            <div class="col-12">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.conditions_paiement.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-credit-card"></i>
                                        Conditions de paiement
                                    </label>
                                    {{ formulaire.conditions_paiement }}
                                </div>
                            </div>
                            {% endif %}
                            
                            {% if formulaire.notes %}
                            <div class="col-12">
                                <div class="form-group-modern">
                                    <label for="{{ formulaire.notes.id_for_label }}" class="form-label-modern">
                                        <i class="bi bi-pencil"></i>
                                        Notes
                                    </label>
                                    {{ formulaire.notes }}
                                    <div class="form-help">
                                        <i class="bi bi-info-circle"></i>
                                        Notes internes, non visibles par le fournisseur
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Statut -->
                <div class="form-card">
                    <div class="form-card-header bg-secondary">
                        <i class="bi bi-toggle-on"></i>
                        <div>
                            <h3 class="form-card-title">Statut du fournisseur</h3>
                            <p class="form-card-subtitle">Activation ou désactivation du compte</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="toggle-group">
                            <div class="toggle-switch">
                                {{ formulaire.est_actif }}
                                <label for="{{ formulaire.est_actif.id_for_label }}" class="toggle-label">
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                            <div class="toggle-content">
                                <div class="toggle-title">Fournisseur actif</div>
                                <div class="toggle-description">
                                    Les fournisseurs actifs apparaissent dans les listes et peuvent recevoir des commandes
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="form-actions">
                    <a href="/fournisseurs/" class="btn-secondary-large">
                        <i class="bi bi-x-circle"></i>
                        Annuler
                    </a>
                    <button type="submit" class="btn-primary-large">
                        <i class="bi bi-check-circle"></i>
                        Enregistrer le fournisseur
                    </button>
                </div>
            </form>
        </div>

        <!-- Colonne droite - Aide -->
        <div class="col-lg-4">
            <!-- Carte d'aide -->
            <div class="help-card">
                <div class="help-card-header">
                    <i class="bi bi-lightbulb-fill"></i>
                    Conseils de remplissage
                </div>
                <div class="help-card-body">
                    <div class="help-item">
                        <div class="help-icon bg-primary">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="help-content">
                            <h4 class="help-title">Code unique</h4>
                            <p class="help-text">Le code fournisseur doit être unique et identifiable</p>
                        </div>
                    </div>
                    
                    <div class="help-item">
                        <div class="help-icon bg-success">
                            <i class="bi bi-envelope-check-fill"></i>
                        </div>
                        <div class="help-content">
                            <h4 class="help-title">Email de contact</h4>
                            <p class="help-text">Utilisé pour toutes les communications officielles</p>
                        </div>
                    </div>
                    
                    <div class="help-item">
                        <div class="help-icon bg-warning">
                            <i class="bi bi-calendar-check-fill"></i>
                        </div>
                        <div class="help-content">
                            <h4 class="help-title">Délai de paiement</h4>
                            <p class="help-text">Définit les conditions de règlement des factures</p>
                        </div>
                    </div>
                    
                    <div class="help-item">
                        <div class="help-icon bg-info">
                            <i class="bi bi-tag-fill"></i>
                        </div>
                        <div class="help-content">
                            <h4 class="help-title">Type de fournisseur</h4>
                            <p class="help-text">Local ou International pour une meilleure classification</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Statistiques rapides -->
            <div class="stats-card">
                <div class="stats-card-header">
                    <i class="bi bi-graph-up"></i>
                    Aperçu rapide
                </div>
                <div class="stats-card-body">
                    <div class="stat-item">
                        <div class="stat-label">Fournisseurs actifs</div>
                        <div class="stat-value">{{ fournisseurs_actifs|default(0) }}</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Délai moyen</div>
                        <div class="stat-value">{{ delai_moyen|default(30) }} jrs</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Commandes en cours</div>
                        <div class="stat-value">{{ commandes_cours|default(0) }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.needs-validation');
    
    // Validation du formulaire
    if (form) {
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    }
    
    // Validation email
    const emailField = document.querySelector('input[type="email"]');
    if (emailField) {
        emailField.addEventListener('input', function() {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (this.value && !emailRegex.test(this.value)) {
                this.setCustomValidity('Email invalide');
            } else {
                this.setCustomValidity('');
            }
        });
    }
    
    // Validation numérique délai
    const delaiField = document.querySelector('input[name="delai_paiement"]');
    if (delaiField) {
        delaiField.addEventListener('input', function() {
            const value = parseInt(this.value);
            if (this.value && (isNaN(value) || value < 0)) {
                this.setCustomValidity('Nombre invalide');
            } else {
                this.setCustomValidity('');
            }
        });
    }
});
</script>

