{% block titre_page %}Supprimer un client{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a href="/"><i class="bi bi-house-door"></i> Accueil</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/clients/">Clients</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/clients/{{ client.pk }}/">{{ client.nom }}</a>
                    </li>
                    <li class="breadcrumb-item active">Désactivation</li>
                </ol>
            </nav>

            <!-- Carte principale de confirmation -->
            <div class="confirmation-card">
                <!-- En-tête avec icône d'alerte -->
                <div class="confirmation-header">
                    <div class="alert-icon-wrapper">
                        <div class="alert-icon-pulse"></div>
                        <div class="alert-icon">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                    </div>
                    
                    <h1 class="confirmation-title">Confirmer la désactivation</h1>
                    <p class="confirmation-subtitle">
                        Cette action désactivera le compte client. Il ne pourra plus passer de nouvelles commandes,
                        mais son historique sera intégralement conservé.
                    </p>
                </div>

                <!-- Informations du client -->
                <div class="client-info-card">
                    <div class="client-info-header">
                        <div class="client-avatar-large">
                            {{ client.nom[0]|upper if client.nom else 'C' }}
                        </div>
                        <div class="client-info-main">
                            <h3 class="client-name">{{ client.nom }}</h3>
                            <div class="client-meta">
                                <span class="client-code">
                                    <i class="bi bi-hash"></i>{{ client.code }}
                                </span>
                                <span class="status-badge {% if client.est_actif %}status-active{% else %}status-inactive{% endif %}">
                                    <span class="status-dot"></span>
                                    {% if client.est_actif %}Actif{% else %}Inactif{% endif %}
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="client-details-grid">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-envelope-fill"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Email</div>
                                <div class="detail-value">{{ client.email }}</div>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-telephone-fill"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Téléphone</div>
                                <div class="detail-value">{{ client.telephone }}</div>
                            </div>
                        </div>

                        {% if client.ville %}
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-geo-alt-fill"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Ville</div>
                                <div class="detail-value">{{ client.ville }}</div>
                            </div>
                        </div>
                        {% endif %}

                        {% if client.pays %}
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-flag-fill"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Pays</div>
                                <div class="detail-value">{{ client.pays }}</div>
                            </div>
                        </div>
                        {% endif %}

                        {% if client.limite_credit %}
                        <div class="detail-item highlight">
                            <div class="detail-icon">
                                <i class="bi bi-credit-card-fill"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Limite de crédit</div>
                                <div class="detail-value credit-amount">
                                    {{ "{:,.0f}".format(client.limite_credit) }} FCFA
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        {% if client.solde_actuel %}
                        <div class="detail-item highlight">
                            <div class="detail-icon">
                                <i class="bi bi-wallet2"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Solde actuel</div>
                                <div class="detail-value {% if client.solde_actuel > 0 %}text-warning{% else %}text-success{% endif %}">
                                    {{ "{:,.0f}".format(client.solde_actuel or 0) }} FCFA
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Alertes conditionnelles -->
                <div class="alerts-section">
                    {% if commandes_actives %}
                    <div class="alert-modern alert-warning">
                        <div class="alert-icon">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                        <div class="alert-content">
                            <div class="alert-title">Commandes actives détectées</div>
                            <div class="alert-text">
                                Ce client possède des commandes en cours ou un historique récent. 
                                La désactivation empêchera uniquement la création de nouvelles commandes.
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    {% if client.limite_credit and client.limite_credit > 100000 %}
                    <div class="alert-modern alert-info">
                        <div class="alert-icon">
                            <i class="bi bi-cash-stack"></i>
                        </div>
                        <div class="alert-content">
                            <div class="alert-title">Client à crédit important</div>
                            <div class="alert-text">
                                Ce client bénéficie d'une limite de crédit élevée ({{ "{:,.0f}".format(client.limite_credit) }} FCFA).
                                Assurez-vous que tous les paiements sont à jour avant la désactivation.
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <div class="alert-modern alert-neutral">
                        <div class="alert-icon">
                            <i class="bi bi-info-circle-fill"></i>
                        </div>
                        <div class="alert-content">
                            <div class="alert-title">Qu'est-ce que la désactivation ?</div>
                            <div class="alert-text">
                                Le client sera marqué comme inactif mais toutes ses données (profil, historique, commandes, factures) 
                                resteront intégralement conservées. Vous pourrez le réactiver à tout moment depuis la fiche client.
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Impacts de la désactivation -->
                <div class="impacts-section">
                    <h3 class="impacts-title">
                        <i class="bi bi-diagram-3-fill"></i>
                        Conséquences de la désactivation
                    </h3>
                    
                    <div class="impacts-grid">
                        <div class="impact-card impact-negative">
                            <div class="impact-icon">
                                <i class="bi bi-cart-x-fill"></i>
                            </div>
                            <div class="impact-label">Nouvelles commandes</div>
                            <div class="impact-status">Bloquées</div>
                            <div class="impact-description">
                                Le client ne pourra plus créer de nouvelles commandes
                            </div>
                        </div>

                        <div class="impact-card impact-negative">
                            <div class="impact-icon">
                                <i class="bi bi-person-x-fill"></i>
                            </div>
                            <div class="impact-label">Accès espace client</div>
                            <div class="impact-status">Suspendu</div>
                            <div class="impact-description">
                                L'accès au compte sera désactivé
                            </div>
                        </div>

                        <div class="impact-card impact-positive">
                            <div class="impact-icon">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div class="impact-label">Historique</div>
                            <div class="impact-status">Conservé</div>
                            <div class="impact-description">
                                Toutes les données historiques restent accessibles
                            </div>
                        </div>

                        <div class="impact-card impact-positive">
                            <div class="impact-icon">
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </div>
                            <div class="impact-label">Réactivation</div>
                            <div class="impact-status">Possible</div>
                            <div class="impact-description">
                                Le compte peut être réactivé à tout moment
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Checklist de recommandations -->
                <div class="checklist-section">
                    <h3 class="checklist-title">
                        <i class="bi bi-list-check"></i>
                        Vérifications recommandées
                    </h3>
                    
                    <div class="checklist-grid">
                        <div class="checklist-item">
                            <div class="checklist-icon">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div class="checklist-content">
                                <div class="checklist-label">Commandes en cours</div>
                                <div class="checklist-desc">Aucune commande non finalisée</div>
                            </div>
                        </div>

                        <div class="checklist-item">
                            <div class="checklist-icon">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div class="checklist-content">
                                <div class="checklist-label">Factures impayées</div>
                                <div class="checklist-desc">Tous les paiements à jour</div>
                            </div>
                        </div>

                        <div class="checklist-item">
                            <div class="checklist-icon">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div class="checklist-content">
                                <div class="checklist-label">Solde créditeur</div>
                                <div class="checklist-desc">Vérifier et régulariser si besoin</div>
                            </div>
                        </div>

                        <div class="checklist-item">
                            <div class="checklist-icon">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div class="checklist-content">
                                <div class="checklist-label">Notification client</div>
                                <div class="checklist-desc">Prévenir le client si nécessaire</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formulaire de confirmation -->
                <form method="post" class="confirmation-form">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    
                    <div class="form-actions">
                        <a href="/clients/{{ client.pk }}/" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler</span>
                        </a>
                        <button type="submit" class="btn-confirm-danger">
                            <i class="bi bi-person-x-fill"></i>
                            <span>Confirmer la désactivation</span>
                        </button>
                    </div>

                    <div class="form-footer">
                        <i class="bi bi-shield-check"></i>
                        <span>Cette action est réversible. Vous pourrez réactiver ce client à tout moment.</span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.confirmation-form');
    
    if (form) {
        form.addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Modal de confirmation personnalisée
            const confirmed = confirm(
                '⚠️ CONFIRMATION FINALE\n\n' +
                'Êtes-vous absolument certain de vouloir désactiver ce client ?\n\n' +
                'Client: {{ client.nom }}\n' +
                'Code: {{ client.code }}\n\n' +
                'Le client ne pourra plus passer de nouvelles commandes.'
            );
            
            if (confirmed) {
                // Animation de chargement
                const submitBtn = this.querySelector('.btn-confirm-danger');
                submitBtn.innerHTML = '<span class="spinner"></span> Désactivation en cours...';
                submitBtn.disabled = true;
                
                // Soumettre le formulaire
                this.submit();
            }
        });
    }
    
    // Animation des cartes d'impact au scroll
    const impactCards = document.querySelectorAll('.impact-card');
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
                setTimeout(() => {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }, index * 100);
            }
        });
    }, { threshold: 0.1 });
    
    impactCards.forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        card.style.transition = 'all 0.5s ease';
        observer.observe(card);
    });
});
</script>

