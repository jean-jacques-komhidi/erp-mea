    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.info-icon.bg-primary {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

.info-card-header h6 {
    font-size: 16px;
    font-weight: 700;
    color: #1e293b;
    margin: 0;
}

.info-card-body {
    padding: 24px;
}

.info-box {
    padding: 16px;
    background: #f8fafc;
    border-radius: 10px;
    height: 100%;
}

.info-label {
