<!-- templates/achats/details_commande.jinja - DESIGN MODERNE VIOLET -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Commande {{ commande.numero_commande }}{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête moderne avec actions -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="/achats/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">Commande {{ commande.numero_commande }}</h4>
                <p class="page-subtitle">Détails et lignes de la commande fournisseur</p>
            </div>
        </div>
        <div class="page-header-right">
            <!-- Actions selon le statut -->
            {% if commande.statut == 'BROUILLON' %}
            <a href="/achats/{{ commande.pk }}/confirmer/" class="btn-action-primary">
                <i class="bi bi-check-circle"></i>
                <span>Confirmer</span>
            </a>
            <a href="/achats/{{ commande.pk }}/modifier/" class="btn-action-secondary">
                <i class="bi bi-pencil"></i>
                <span>Modifier</span>
            </a>
            {% elif commande.statut == 'CONFIRMEE' %}
            <a href="/achats/{{ commande.pk }}/envoyer/" class="btn-action-primary">
                <i class="bi bi-send"></i>
                <span>Envoyer au fournisseur</span>
            </a>
            <a href="/achats/{{ commande.pk }}/recevoir/" class="btn-action-success">
                <i class="bi bi-box-seam"></i>
                <span>Recevoir</span>
            </a>
            {% elif commande.statut == 'ENVOYEE' %}
            <a href="/achats/{{ commande.pk }}/recevoir/" class="btn-action-primary">
                <i class="bi bi-box-seam"></i>
                <span>Recevoir</span>
            </a>
            {% endif %}
        </div>
    </div>

    <div class="row g-4">
        <!-- Colonne principale (gauche) -->
        <div class="col-lg-8">
            <!-- Carte informations principales -->
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-icon bg-primary">
                        <i class="bi bi-info-circle"></i>
                    </div>
                    <h6>Informations de la commande</h6>
                </div>
                <div class="info-card-body">
                    <div class="row g-3">
                        <!-- Fournisseur -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Fournisseur</div>
                                <div class="info-content">
                                    <div class="fournisseur-display">
                                        <div class="fournisseur-avatar">
                                            {{ commande.fournisseur.nom[0]|upper if commande.fournisseur.nom else 'F' }}
                                        </div>
                                        <div>
                                            <div class="fournisseur-name">{{ commande.fournisseur.nom }}</div>
                                            <div class="fournisseur-code">{{ commande.fournisseur.code|default('') }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Entrepôt -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Entrepôt de destination</div>
                                <div class="info-content">
                                    <div class="info-value">
                                        <i class="bi bi-house-door"></i>
                                        {{ commande.entrepot.nom }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Date commande -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Date de commande</div>
                                <div class="info-content">
                                    <div class="info-value">
                                        <i class="bi bi-calendar3"></i>
                                        {{ commande.date_commande.strftime('%d/%m/%Y à %H:%M') }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Date livraison -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Livraison prévue</div>
                                <div class="info-content">
                                    {% if commande.date_livraison_prevue %}
                                    <div class="info-value">
                                        <i class="bi bi-truck"></i>
                                        {{ commande.date_livraison_prevue.strftime('%d/%m/%Y') }}
                                    </div>
                                    {% if commande.date_livraison_prevue < aujourdhui and commande.statut not in ['RECUE', 'FACTUREE', 'ANNULEE'] %}
                                    <div class="delay-badge">
                                        <i class="bi bi-clock-history"></i> En retard
                                    </div>
                                    {% endif %}
                                    {% else %}
                                    <div class="info-value text-muted">Non définie</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Statut -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Statut</div>
                                <div class="info-content">
                                    {% if commande.statut == 'BROUILLON' %}
                                    <span class="status-badge-large status-draft">
                                        <span class="status-dot"></span>
                                        Brouillon
                                    </span>
                                    {% elif commande.statut == 'CONFIRMEE' %}
                                    <span class="status-badge-large status-confirmed">
                                        <span class="status-dot"></span>
                                        Confirmée
                                    </span>
                                    {% elif commande.statut == 'ENVOYEE' %}
                                    <span class="status-badge-large status-sent">
                                        <span class="status-dot"></span>
                                        Envoyée
                                    </span>
                                    {% elif commande.statut == 'RECUE' %}
                                    <span class="status-badge-large status-received">
                                        <span class="status-dot"></span>
                                        Reçue
                                    </span>
                                    {% elif commande.statut == 'FACTUREE' %}
                                    <span class="status-badge-large status-invoiced">
                                        <span class="status-dot"></span>
                                        Facturée
                                    </span>
                                    {% elif commande.statut == 'ANNULEE' %}
                                    <span class="status-badge-large status-cancelled">
                                        <span class="status-dot"></span>
                                        Annulée
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Créée par -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Créée par</div>
                                <div class="info-content">
                                    <div class="user-display">
                                        <div class="user-avatar">
                                            {{ commande.cree_par.username[0]|upper if commande.cree_par and commande.cree_par.username else 'S' }}
                                        </div>
                                        <div class="user-name">
                                            {{ commande.cree_par.username if commande.cree_par else 'Système' }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lignes de commande -->
            <div class="lines-card">
                <div class="lines-card-header">
                    <div class="lines-icon">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <h6>Lignes de commande</h6>
                    <div class="badge-count">{{ lignes|length }}</div>
                </div>
                <div class="lines-card-body">
                    <div class="table-container">
                        <table class="lines-table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center" style="width: 100px;">Qté cmd.</th>
                                    <th class="text-center" style="width: 100px;">Qté reçue</th>
                                    <th class="text-end" style="width: 130px;">Prix HT</th>
                                    <th class="text-center" style="width: 80px;">TVA</th>
                                    <th class="text-end" style="width: 130px;">Total TTC</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ligne in lignes %}
                                <tr {% if ligne.est_completement_recue() %}class="ligne-complete"{% endif %}>
                                    <td>
                                        <div class="product-display">
                                            <div class="product-avatar">
                                                {{ ligne.produit.nom[0]|upper if ligne.produit and ligne.produit.nom else 'P' }}
                                            </div>
                                            <div>
                                                <div class="product-name">{{ ligne.produit.nom if ligne.produit else 'Produit supprimé' }}</div>
                                                {% if ligne.produit and ligne.produit.code %}
                                                <div class="product-code">{{ ligne.produit.code }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="quantity-display">{{ ligne.quantite }}</div>
                                    </td>
                                    <td class="text-center">
                                        <div class="received-display {% if ligne.est_completement_recue() %}received-complete{% elif ligne.quantite_recue > 0 %}received-partial{% endif %}">
                                            {{ ligne.quantite_recue|default(0) }}
                                        </div>
                                        {% if ligne.quantite_recue > 0 and not ligne.est_completement_recue() %}
                                        <div class="remaining-badge">Reste: {{ ligne.quantite_restante() }}</div>
                                        {% elif ligne.est_completement_recue() %}
                                        <div class="complete-badge">
                                            <i class="bi bi-check-circle"></i> Complet
                                        </div>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="price-display">{{ "{:,.0f}".format(ligne.prix_unitaire) }}</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="tax-badge">{{ ligne.taux_tva|default(0) }}%</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="total-display">{{ "{:,.0f}".format(ligne.total) }}</div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Notes (si présentes) -->
            {% if commande.notes %}
            <div class="notes-card">
                <div class="notes-header">
                    <i class="bi bi-chat-left-text"></i>
                    <span>Notes</span>
                </div>
                <div class="notes-body">
                    <i class="bi bi-info-circle notes-icon"></i>
                    <p>{{ commande.notes }}</p>
                </div>
            </div>
            {% endif %}

            <!-- Raison d'annulation -->
            {% if commande.statut == 'ANNULEE' and commande.raison_annulation %}
            <div class="cancel-card">
                <div class="cancel-header">
                    <i class="bi bi-x-octagon"></i>
                    <span>Raison de l'annulation</span>
                </div>
                <div class="cancel-body">
                    <i class="bi bi-exclamation-triangle cancel-icon"></i>
                    <p>{{ commande.raison_annulation }}</p>
                </div>
            </div>
            {% endif %}

            <!-- Timeline -->
            <div class="timeline-card">
                <div class="timeline-header">
                    <i class="bi bi-clock-history"></i>
                    <span>Historique</span>
                </div>
                <div class="timeline-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Commande créée</div>
                                <div class="timeline-date">{{ commande.date_creation.strftime('%d/%m/%Y à %H:%M') }}</div>
                                <div class="timeline-desc">Par {{ commande.cree_par.username if commande.cree_par else 'Système' }}</div>
                            </div>
                        </div>
                        {% if commande.statut in ['CONFIRMEE', 'ENVOYEE', 'RECUE', 'FACTUREE'] %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Commande confirmée</div>
                                <div class="timeline-date">{{ commande.date_modification.strftime('%d/%m/%Y à %H:%M') }}</div>
                            </div>
                        </div>
                        {% endif %}
                        {% if commande.statut in ['ENVOYEE', 'RECUE', 'FACTUREE'] %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Envoyée par le fournisseur</div>
                                <div class="timeline-date">{{ commande.date_modification.strftime('%d/%m/%Y à %H:%M') }}</div>
                            </div>
                        </div>
                        {% endif %}
                        {% if commande.date_reception %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Marchandise réceptionnée</div>
                                <div class="timeline-date">{{ commande.date_reception.strftime('%d/%m/%Y à %H:%M') }}</div>
                                <div class="timeline-desc">Dans l'entrepôt {{ commande.entrepot.nom }}</div>
                            </div>
                        </div>
                        {% endif %}
                        {% if commande.piece_comptable %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Écriture comptable créée</div>
                                <div class="timeline-date">{{ commande.piece_comptable.date_piece.strftime('%d/%m/%Y à %H:%M') }}</div>
                                <div class="timeline-desc">Pièce n° {{ commande.piece_comptable.numero_piece }}</div>
                            </div>
                        </div>
                        {% endif %}
                        {% if commande.statut == 'ANNULEE' %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-danger"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Commande annulée</div>
                                <div class="timeline-date">{{ commande.date_modification.strftime('%d/%m/%Y à %H:%M') }}</div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonne latérale (droite) -->
        <div class="col-lg-4">
            <div class="sticky-sidebar">
                <!-- Résumé financier -->
                <div class="summary-card">
                    <div class="summary-header">
                        <i class="bi bi-calculator"></i>
                        <h6>Résumé financier</h6>
                    </div>
                    <div class="summary-body">
                        <div class="summary-row">
                            <span class="summary-label">Sous-total HT</span>
                            <span class="summary-value">{{ "{:,.0f}".format(commande.sous_total) }}</span>
                        </div>
                        <div class="summary-row">
                            <span class="summary-label">TVA</span>
                            <span class="summary-value">{{ "{:,.0f}".format(commande.montant_tva) }}</span>
                        </div>
                        <div class="summary-divider"></div>
                        <div class="summary-row summary-total">
                            <span class="summary-label">Total TTC</span>
                            <span class="summary-amount">{{ "{:,.0f}".format(commande.total) }}</span>
                        </div>
                    </div>
                </div>

                <!-- Progression de réception -->
                {% if commande.statut in ['CONFIRMEE', 'ENVOYEE', 'RECUE'] %}
                <div class="reception-card">
                    <div class="reception-header">
                        <i class="bi bi-box-seam"></i>
                        <span>Réception</span>
                    </div>
                    <div class="reception-body">
                        {% set taux = commande.taux_reception() %}
                        <div class="reception-progress">
                            <div class="progress-circle {% if taux == 100 %}progress-complete{% endif %}">
                                <svg viewBox="0 0 100 100">
                                    <circle cx="50" cy="50" r="45"></circle>
                                    <circle cx="50" cy="50" r="45" 
                                            style="stroke-dasharray: {{ 283 * taux / 100 }} 283"></circle>
                                </svg>
                                <div class="progress-value">{{ taux|round|int }}%</div>
                            </div>
                            <div class="progress-text">
                                {% if taux == 100 %}
                                <i class="bi bi-check-circle"></i> Commande complète
                                {% elif taux > 0 %}
                                <i class="bi bi-hourglass-split"></i> Réception partielle
                                {% else %}
                                <i class="bi bi-clock"></i> En attente
                                {% endif %}
                            </div>
                        </div>
                        {% if taux < 100 and commande.statut in ['CONFIRMEE', 'ENVOYEE'] %}
                        <a href="/achats/{{ commande.pk }}/recevoir/" class="btn-receive">
                            <i class="bi bi-box-arrow-in-down"></i>
                            <span>Recevoir la marchandise</span>
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}

                <!-- Paiements -->
                {% if paiements %}
                <div class="payment-card">
                    <div class="payment-header">
                        <i class="bi bi-credit-card"></i>
                        <span>Paiements</span>
                    </div>
                    <div class="payment-body">
                        {% for paiement in paiements %}
                        <div class="payment-item">
                            <div class="payment-info">
                                <div class="payment-number">{{ paiement.numero_paiement }}</div>
                                <div class="payment-date">{{ paiement.date_paiement.strftime('%d/%m/%Y') }}</div>
                            </div>
                            <div class="payment-amount">{{ "{:,.0f}".format(paiement.montant) }}</div>
                        </div>
                        {% endfor %}
                        <div class="payment-summary">
                            <div class="payment-summary-row">
                                <span>Total payé</span>
                                <span class="text-success">{{ "{:,.0f}".format(total_paye|default(0)) }} FCFA</span>
                            </div>
                            <div class="payment-summary-row payment-summary-total">
                                <span>Solde restant</span>
                                <span class="text-danger">{{ "{:,.0f}".format(solde_restant|default(commande.total)) }} FCFA</span>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}

            </div>
        </div>
    </div>
</div>

<style>
