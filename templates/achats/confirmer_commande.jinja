{% block titre_page %}Confirmer la commande {{ commande.numero_commande }}{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête moderne avec retour -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="/achats/{{ commande.pk }}/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">Confirmation de la commande</h4>
                <p class="page-subtitle">Vérifiez les détails avant de confirmer {{ commande.numero_commande }}</p>
            </div>
        </div>
        <div class="page-header-right">
            <span class="status-indicator status-pending">
                <i class="bi bi-clock-history"></i> En attente de validation
            </span>
        </div>
    </div>

    <div class="row g-4">
        <!-- Colonne principale (gauche) -->
        <div class="col-lg-8">
            <!-- Alerte d'information -->
            <div class="info-alert">
                <div class="info-alert-icon">
                    <i class="bi bi-info-circle"></i>
                </div>
                <div class="info-alert-content">
                    <h6 class="info-alert-title">Vous êtes sur le point de confirmer cette commande</h6>
                    <p class="info-alert-text">Une fois confirmée, la commande sera validée et prête à être envoyée au fournisseur. Veuillez vérifier attentivement tous les détails avant de confirmer.</p>
                </div>
            </div>

            <!-- Récapitulatif de la commande -->
            <div class="summary-grid">
                <div class="summary-item">
                    <div class="summary-item-icon bg-primary">
                        <i class="bi bi-hash"></i>
                    </div>
                    <div class="summary-item-content">
                        <div class="summary-item-label">N° Commande</div>
                        <div class="summary-item-value">{{ commande.numero_commande }}</div>
                    </div>
                </div>

                <div class="summary-item">
                    <div class="summary-item-icon bg-info">
                        <i class="bi bi-building"></i>
                    </div>
                    <div class="summary-item-content">
                        <div class="summary-item-label">Fournisseur</div>
                        <div class="summary-item-value">{{ commande.fournisseur.nom }}</div>
                    </div>
                </div>

                <div class="summary-item">
                    <div class="summary-item-icon bg-warning">
                        <i class="bi bi-calendar3"></i>
                    </div>
                    <div class="summary-item-content">
                        <div class="summary-item-label">Date commande</div>
                        <div class="summary-item-value">{{ commande.date_commande.strftime('%d/%m/%Y') }}</div>
                    </div>
                </div>

                <div class="summary-item">
                    <div class="summary-item-icon bg-success">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="summary-item-content">
                        <div class="summary-item-label">Montant total</div>
                        <div class="summary-item-value summary-item-amount">{{ "{:,.0f}".format(commande.total) }} FCFA</div>
                    </div>
                </div>
            </div>

            <!-- Informations complémentaires -->
            <div class="details-card">
                <div class="details-row">
                    <div class="details-icon">
                        <i class="bi bi-house-door"></i>
                    </div>
                    <div class="details-content">
                        <div class="details-label">Entrepôt de réception</div>
                        <div class="details-value">{{ commande.entrepot.nom }}</div>
                    </div>
                </div>

                <div class="details-row">
                    <div class="details-icon">
                        <i class="bi bi-truck"></i>
                    </div>
                    <div class="details-content">
                        <div class="details-label">Livraison prévue</div>
                        <div class="details-value">
                            {% if commande.date_livraison_prevue %}
                            {{ commande.date_livraison_prevue.strftime('%d/%m/%Y') }}
                            {% else %}
                            <span class="text-muted">Non définie</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lignes de commande -->
            <div class="lines-card">
                <div class="lines-card-header">
                    <div class="lines-icon">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <h6>Produits commandés</h6>
                    <div class="badge-count">{{ lignes|length }}</div>
                </div>
                <div class="lines-card-body">
                    <div class="table-container">
                        <table class="lines-table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center" style="width: 100px;">Quantité</th>
                                    <th class="text-end" style="width: 130px;">Prix HT</th>
                                    <th class="text-center" style="width: 80px;">TVA</th>
                                    <th class="text-end" style="width: 130px;">Total TTC</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ligne in lignes %}
                                <tr>
                                    <td>
                                        <div class="product-display">
                                            <div class="product-avatar">
                                                {{ ligne.produit.nom[0]|upper if ligne.produit and ligne.produit.nom else 'P' }}
                                            </div>
                                            <div>
                                                <div class="product-name">{{ ligne.produit.nom if ligne.produit else 'Produit supprimé' }}</div>
                                                {% if ligne.produit and ligne.produit.code %}
                                                <div class="product-code">{{ ligne.produit.code }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="quantity-badge">{{ ligne.quantite }}</div>
                                    </td>
                                    <td class="text-end">
                                        <div class="price-display">{{ "{:,.0f}".format(ligne.prix_unitaire) }}</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="tax-badge">{{ ligne.taux_tva|default(0) }}%</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="total-display">{{ "{:,.0f}".format(ligne.total) }}</div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Résumé financier -->
            <div class="financial-summary">
                <div class="financial-summary-header">
                    <i class="bi bi-calculator"></i>
                    <h6>Résumé financier</h6>
                </div>
                <div class="financial-summary-body">
                    <div class="financial-row">
                        <span class="financial-label">Sous-total HT</span>
                        <span class="financial-value">{{ "{:,.0f}".format(commande.sous_total) }} FCFA</span>
                    </div>
                    <div class="financial-row">
                        <span class="financial-label">TVA</span>
                        <span class="financial-value">{{ "{:,.0f}".format(commande.montant_tva) }} FCFA</span>
                    </div>
                    <div class="financial-divider"></div>
                    <div class="financial-row financial-total">
                        <span class="financial-label">Total TTC</span>
                        <span class="financial-amount">{{ "{:,.0f}".format(commande.total) }} FCFA</span>
                    </div>
                </div>
            </div>

            <!-- Notes (si présentes) -->
            {% if commande.notes %}
            <div class="notes-card">
                <div class="notes-header">
                    <i class="bi bi-chat-left-text"></i>
                    <span>Notes de la commande</span>
                </div>
                <div class="notes-body">
                    <i class="bi bi-info-circle notes-icon"></i>
                    <p>{{ commande.notes }}</p>
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Colonne latérale (droite) -->
        <div class="col-lg-4">
            <div class="sticky-sidebar">
                <!-- Formulaire de confirmation -->
                <form method="post" id="confirmForm">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    
                    <div class="checklist-card">
                        <div class="checklist-header">
                            <i class="bi bi-clipboard-check"></i>
                            <h6>Vérifications requises</h6>
                        </div>
                        <div class="checklist-body">
                            <div class="checklist-item">
                                <div class="custom-checkbox-modern">
                                    <input type="checkbox" id="check1" required>
                                    <label for="check1">
                                        <span class="checkbox-icon"></span>
                                        <div class="checkbox-content">
                                            <div class="checkbox-title">Informations fournisseur</div>
                                            <div class="checkbox-desc">Nom, coordonnées et conditions vérifiées</div>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="checklist-item">
                                <div class="custom-checkbox-modern">
                                    <input type="checkbox" id="check2" required>
                                    <label for="check2">
                                        <span class="checkbox-icon"></span>
                                        <div class="checkbox-content">
                                            <div class="checkbox-title">Produits et quantités</div>
                                            <div class="checkbox-desc">Références et quantités vérifiées</div>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="checklist-item">
                                <div class="custom-checkbox-modern">
                                    <input type="checkbox" id="check3" required>
                                    <label for="check3">
                                        <span class="checkbox-icon"></span>
                                        <div class="checkbox-content">
                                            <div class="checkbox-title">Prix et tarifs</div>
                                            <div class="checkbox-desc">Prix conformes aux tarifs négociés</div>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="checklist-item">
                                <div class="custom-checkbox-modern">
                                    <input type="checkbox" id="check4" required>
                                    <label for="check4">
                                        <span class="checkbox-icon"></span>
                                        <div class="checkbox-content">
                                            <div class="checkbox-title">Entrepôt de réception</div>
                                            <div class="checkbox-desc">Capacité et disponibilité vérifiées</div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Confirmation finale -->
                    <div class="final-confirm-card">
                        <div class="final-confirm-content">
                            <div class="custom-checkbox-final">
                                <input type="checkbox" id="confirmFinal" required>
                                <label for="confirmFinal">
                                    <span class="checkbox-icon"></span>
                                    <span class="checkbox-text">Je confirme avoir vérifié tous les détails et je valide cette commande</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Boutons d'action -->
                    <div class="action-buttons">
                        <button type="submit" class="btn-primary-gradient" id="btnConfirmer" disabled>
                            <i class="bi bi-check-circle"></i>
                            <span>Confirmer la commande</span>
                        </button>
                        <a href="/achats/{{ commande.pk }}/" class="btn-secondary-outline">
                            <i class="bi bi-arrow-left"></i>
                            <span>Retour</span>
                        </a>
                    </div>
                </form>

                <!-- Prochaines étapes -->
                <div class="steps-card">
                    <div class="steps-header">
                        <i class="bi bi-signpost"></i>
                        <h6>Prochaines étapes</h6>
                    </div>
                    <div class="steps-body">
                        <div class="step-item">
                            <div class="step-number">1</div>
                            <div class="step-content">
                                <div class="step-title">Envoyer au fournisseur</div>
                                <div class="step-desc">Transmettre la commande</div>
                            </div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">2</div>
                            <div class="step-content">
                                <div class="step-title">Attendre la livraison</div>
                                <div class="step-desc">Suivi de la commande</div>
                            </div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">3</div>
                            <div class="step-content">
                                <div class="step-title">Réceptionner</div>
                                <div class="step-desc">Vérifier et enregistrer</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('confirmForm');
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    const btnConfirmer = document.getElementById('btnConfirmer');
    
    // Mettre à jour l'état du bouton
    function updateButtonState() {
        const allChecked = Array.from(checkboxes).every(cb => cb.checked);
        btnConfirmer.disabled = !allChecked;
        
        if (allChecked) {
            btnConfirmer.classList.add('active');
        } else {
            btnConfirmer.classList.remove('active');
        }
    }
    
    // Écouter les changements de checkbox
    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateButtonState);
    });
    
    // État initial
    updateButtonState();
    
    // Validation du formulaire
    if (form) {
        form.addEventListener('submit', function(event) {
            const allChecked = Array.from(checkboxes).every(cb => cb.checked);
            
            if (!allChecked) {
                event.preventDefault();
                alert('Veuillez cocher toutes les cases de vérification avant de confirmer.');
                return;
            }
            
            // Confirmation finale
            if (!confirm('Êtes-vous sûr de vouloir confirmer cette commande ?\n\nAprès confirmation, la commande sera validée et prête à être envoyée au fournisseur.')) {
                event.preventDefault();
            }
        });
    }
});
</script>

