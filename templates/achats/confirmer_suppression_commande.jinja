{% extends "base_principale.jinja" %}

{% block titre_page %}Annuler la commande {{ commande.numero_commande }}{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête moderne avec retour -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="/achats/{{ commande.pk }}/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">Annulation de commande</h4>
                <p class="page-subtitle">Annuler définitivement {{ commande.numero_commande }}</p>
            </div>
        </div>
        <div class="page-header-right">
            <span class="status-indicator status-danger">
                <i class="bi bi-exclamation-triangle"></i> Action irréversible
            </span>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-lg-8">
            <!-- Alerte d'avertissement -->
            <div class="danger-alert">
                <div class="danger-alert-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <div class="danger-alert-content">
                    <h6 class="danger-alert-title">Cette action est irréversible</h6>
                    <p class="danger-alert-text">Vous êtes sur le point d'annuler la commande. Une fois annulée, la commande ne pourra plus être modifiée ou confirmée. Veuillez fournir une raison détaillée pour cette annulation.</p>
                </div>
            </div>

            <!-- Informations de la commande -->
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-icon bg-primary">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <h6>Informations de la commande</h6>
                </div>
                <div class="info-card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="info-item-icon bg-primary">
                                    <i class="bi bi-hash"></i>
                                </div>
                                <div class="info-item-content">
                                    <div class="info-item-label">N° Commande</div>
                                    <div class="info-item-value">{{ commande.numero_commande }}</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="info-item-icon bg-info">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div class="info-item-content">
                                    <div class="info-item-label">Fournisseur</div>
                                    <div class="info-item-value">{{ commande.fournisseur.nom }}</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="info-item-icon bg-success">
                                    <i class="bi bi-calendar3"></i>
                                </div>
                                <div class="info-item-content">
                                    <div class="info-item-label">Date commande</div>
                                    <div class="info-item-value">{{ commande.date_commande.strftime('%d/%m/%Y') }}</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="info-item-icon bg-warning">
                                    <i class="bi bi-currency-dollar"></i>
                                </div>
                                <div class="info-item-content">
                                    <div class="info-item-label">Montant total</div>
                                    <div class="info-item-value">{{ "{:,.0f}".format(commande.total) }} FCFA</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="info-item">
                                <div class="info-item-icon bg-secondary">
                                    <i class="bi bi-box-seam"></i>
                                </div>
                                <div class="info-item-content">
                                    <div class="info-item-label">Statut actuel</div>
                                    <div class="info-item-status">
                                        {% if commande.statut == 'BROUILLON' %}
                                        <span class="status-badge status-draft">
                                            <span class="status-dot"></span>
                                            Brouillon
                                        </span>
                                        {% elif commande.statut == 'CONFIRMEE' %}
                                        <span class="status-badge status-confirmed">
                                            <span class="status-dot"></span>
                                            Confirmée
                                        </span>
                                        {% elif commande.statut == 'ENVOYEE' %}
                                        <span class="status-badge status-sent">
                                            <span class="status-dot"></span>
                                            Envoyée
                                        </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Formulaire d'annulation -->
            <form method="post" id="cancelForm">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                
                <div class="cancel-form-card">
                    <div class="cancel-form-header">
                        <i class="bi bi-chat-left-text"></i>
                        <h6>Raison de l'annulation</h6>
                    </div>
                    <div class="cancel-form-body">
                        <!-- Zone de texte -->
                        <div class="form-group-modern">
                            <label class="form-label-modern">
                                Motif de l'annulation <span class="required">*</span>
                            </label>
                            <textarea name="raison_annulation" 
                                      id="raisonAnnulation"
                                      class="form-control-modern" 
                                      rows="5" 
                                      required 
                                      minlength="10"
                                      placeholder="Veuillez expliquer en détail la raison de l'annulation (minimum 10 caractères)..."></textarea>
                            <div class="form-help">
                                <i class="bi bi-info-circle"></i>
                                <span id="charCount">0 caractère (minimum 10)</span>
                            </div>
                        </div>

                        <!-- Exemples de raisons -->
                        <div class="examples-section">
                            <div class="examples-header">
                                <i class="bi bi-lightbulb"></i>
                                <span>Exemples de raisons (cliquez pour copier)</span>
                            </div>
                            <div class="examples-grid">
                                <button type="button" class="example-item" data-raison="Fournisseur ne peut pas livrer dans les délais convenus">
                                    <div class="example-icon bg-warning">
                                        <i class="bi bi-clock"></i>
                                    </div>
                                    <div class="example-text">Délais non respectés</div>
                                </button>

                                <button type="button" class="example-item" data-raison="Prix trop élevé, négociation en cours avec un autre fournisseur">
                                    <div class="example-icon bg-info">
                                        <i class="bi bi-currency-exchange"></i>
                                    </div>
                                    <div class="example-text">Prix non compétitif</div>
                                </button>

                                <button type="button" class="example-item" data-raison="Produits commandés par erreur, besoin modifié">
                                    <div class="example-icon bg-danger">
                                        <i class="bi bi-exclamation-triangle"></i>
                                    </div>
                                    <div class="example-text">Commande erronée</div>
                                </button>

                                <button type="button" class="example-item" data-raison="Stock suffisant finalement disponible dans un autre entrepôt">
                                    <div class="example-icon bg-success">
                                        <i class="bi bi-box"></i>
                                    </div>
                                    <div class="example-text">Stock disponible</div>
                                </button>
                            </div>
                        </div>

                        <!-- Confirmation -->
                        <div class="confirm-checkbox">
                            <div class="custom-checkbox-danger">
                                <input type="checkbox" id="confirmCancel" required>
                                <label for="confirmCancel">
                                    <span class="checkbox-icon"></span>
                                    <span class="checkbox-text">Je confirme vouloir annuler définitivement cette commande</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Boutons d'action -->
                <div class="action-buttons">
                    <a href="/achats/{{ commande.pk }}/" class="btn-secondary-outline">
                        <i class="bi bi-arrow-left"></i>
                        <span>Retour</span>
                    </a>
                    <button type="submit" class="btn-danger-gradient" id="btnCancel" disabled>
                        <i class="bi bi-exclamation-triangle"></i>
                        <span>Annuler la commande</span>
                    </button>
                </div>
            </form>

            <!-- Conséquences de l'annulation -->
            <div class="consequences-card">
                <div class="consequences-header">
                    <i class="bi bi-question-circle"></i>
                    <h6>Ce qui se passera après l'annulation</h6>
                </div>
                <div class="consequences-body">
                    <div class="consequence-grid">
                        <div class="consequence-item consequence-positive">
                            <div class="consequence-icon">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div class="consequence-content">
                                <div class="consequence-title">Statut de la commande</div>
                                <div class="consequence-desc">La commande sera marquée comme "ANNULÉE"</div>
                            </div>
                        </div>

                        <div class="consequence-item consequence-positive">
                            <div class="consequence-icon">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div class="consequence-content">
                                <div class="consequence-title">Conservation des données</div>
                                <div class="consequence-desc">Les informations restent pour référence</div>
                            </div>
                        </div>

                        <div class="consequence-item consequence-negative">
                            <div class="consequence-icon">
                                <i class="bi bi-x-circle"></i>
                            </div>
                            <div class="consequence-content">
                                <div class="consequence-title">Modification impossible</div>
                                <div class="consequence-desc">La commande ne pourra plus être modifiée</div>
                            </div>
                        </div>

                        <div class="consequence-item consequence-negative">
                            <div class="consequence-icon">
                                <i class="bi bi-x-circle"></i>
                            </div>
                            <div class="consequence-content">
                                <div class="consequence-title">Actions bloquées</div>
                                <div class="consequence-desc">Aucune réception ou paiement possible</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('cancelForm');
    const textarea = document.getElementById('raisonAnnulation');
    const charCount = document.getElementById('charCount');
    const confirmCheckbox = document.getElementById('confirmCancel');
    const btnCancel = document.getElementById('btnCancel');
    const exampleItems = document.querySelectorAll('.example-item');

    // Compteur de caractères
    function updateCharCount() {
        const length = textarea.value.length;
        charCount.textContent = `${length} caractère${length > 1 ? 's' : ''} (minimum 10)`;
        
        if (length >= 10) {
            charCount.classList.remove('text-danger');
            charCount.classList.add('text-success');
        } else {
            charCount.classList.remove('text-success');
            charCount.classList.add('text-danger');
        }
        
        updateButtonState();
    }

    // Mise à jour de l'état du bouton
    function updateButtonState() {
        const hasText = textarea.value.trim().length >= 10;
        const isConfirmed = confirmCheckbox.checked;
        
        btnCancel.disabled = !(hasText && isConfirmed);
        
        if (hasText && isConfirmed) {
            btnCancel.classList.add('active');
        } else {
            btnCancel.classList.remove('active');
        }
    }

    // Exemples de raisons
    exampleItems.forEach(item => {
        item.addEventListener('click', function() {
            const raison = this.getAttribute('data-raison');
            textarea.value = raison;
            updateCharCount();
            textarea.focus();
            
            // Highlight de l'exemple sélectionné
            exampleItems.forEach(i => i.classList.remove('selected'));
            this.classList.add('selected');
        });
    });

    // Écouteurs d'événements
    textarea.addEventListener('input', updateCharCount);
    confirmCheckbox.addEventListener('change', updateButtonState);

    // État initial
    updateCharCount();

    // Validation du formulaire
    form.addEventListener('submit', function(event) {
        const raison = textarea.value.trim();
        const confirmed = confirmCheckbox.checked;

        if (raison.length < 10) {
            event.preventDefault();
            alert('La raison doit contenir au moins 10 caractères.');
            textarea.focus();
            return;
        }

        if (!confirmed) {
            event.preventDefault();
            alert('Vous devez confirmer l\'annulation en cochant la case.');
            return;
        }

        // Confirmation finale
        if (!confirm('Êtes-vous absolument certain de vouloir annuler cette commande ?\n\nCette action est IRRÉVERSIBLE.')) {
            event.preventDefault();
        }
    });
});
</script>

