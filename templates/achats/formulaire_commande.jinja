<!-- templates/achats/formulaire_commande.jinja - DESIGN MODERNE VIOLET -->
{% extends "base_principale.jinja" %}

{% block titre_page %}{{ action }} une commande d'achat{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête moderne avec retour -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="/achats/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">{{ action }} une commande d'achat</h4>
                <p class="page-subtitle">
                    {% if action == "Modifier" %}
                    Modifier la commande {{ commande.numero_commande|default('') }}
                    {% else %}
                    Créer une nouvelle commande auprès d'un fournisseur
                    {% endif %}
                </p>
            </div>
        </div>
        <div class="page-header-right">
            <span class="status-indicator status-draft">
                <i class="bi bi-pencil"></i> Brouillon
            </span>
        </div>
    </div>

    <form method="post" id="commandeForm">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        
        <div class="row g-4">
            <!-- Colonne principale (gauche) -->
            <div class="col-lg-8">
                <!-- Informations fournisseur -->
                <div class="form-card">
                    <div class="form-card-header">
                        <div class="form-card-icon bg-primary">
                            <i class="bi bi-building"></i>
                        </div>
                        <div>
                            <h6 class="form-card-title">Informations fournisseur</h6>
                            <p class="form-card-subtitle">Sélectionnez le fournisseur et l'entrepôt de destination</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label-modern">
                                    Fournisseur <span class="required">*</span>
                                </label>
                                <div class="input-with-icon">
                                    <i class="bi bi-person-lines-fill input-icon"></i>
                                    <select name="fournisseur" class="form-control-modern" required>
                                        <option value="">Sélectionner un fournisseur</option>
                                        {% for fournisseur in fournisseurs %}
                                        <option value="{{ fournisseur.pk }}" {% if commande and commande.fournisseur.pk == fournisseur.pk %}selected{% endif %}>
                                            {{ fournisseur.nom }} ({{ fournisseur.code }})
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label-modern">
                                    Entrepôt de destination <span class="required">*</span>
                                </label>
                                <div class="input-with-icon">
                                    <i class="bi bi-house-door input-icon"></i>
                                    <select name="entrepot" class="form-control-modern" required>
                                        <option value="">Sélectionner un entrepôt</option>
                                        {% for entrepot in entrepots %}
                                        <option value="{{ entrepot.pk }}" {% if commande and commande.entrepot.pk == entrepot.pk %}selected{% endif %}>
                                            {{ entrepot.nom }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label-modern">
                                    Date de livraison prévue <span class="required">*</span>
                                </label>
                                <div class="input-with-icon">
                                    <i class="bi bi-calendar-check input-icon"></i>
                                    <input type="date" name="date_livraison_prevue" class="form-control-modern" 
                                           value="{% if commande and commande.date_livraison_prevue %}{{ commande.date_livraison_prevue.strftime('%Y-%m-%d') }}{% else %}{{ date_livraison_defaut }}{% endif %}" required>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <label class="form-label-modern">Notes additionnelles</label>
                                <div class="input-with-icon">
                                    <i class="bi bi-chat-text input-icon"></i>
                                    <textarea name="notes" class="form-control-modern" rows="3" placeholder="Conditions spéciales, instructions de livraison...">{% if commande %}{{ commande.notes }}{% endif %}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Produits commandés -->
                <div class="form-card">
                    <div class="form-card-header">
                        <div class="form-card-icon bg-warning">
                            <i class="bi bi-cart-plus"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="form-card-title">Produits à commander</h6>
                            <p class="form-card-subtitle">Ajoutez les produits à la commande</p>
                        </div>
                        <div class="badge-count">
                            <span id="ligne-count">{{ lignes|length if lignes else 1 }}</span>
                        </div>
                    </div>
                    
                    <div class="form-card-body">
                        <!-- En-tête du tableau (desktop seulement) -->
                        <div class="table-header d-none d-lg-grid">
                            <div>Produit</div>
                            <div class="text-center">Quantité</div>
                            <div class="text-center">Prix unitaire HT</div>
                            <div class="text-center">TVA (%)</div>
                            <div class="text-end">Total TTC</div>
                            <div></div>
                        </div>

                        <!-- Lignes de produits -->
                        <div id="lignes_commande">
                            {% if lignes %}
                                {% for ligne in lignes %}
                                <div class="product-line">
                                    <div class="product-line-content">
                                        <div class="product-select-wrapper">
                                            <label class="mobile-label">Produit</label>
                                            <select name="produit[]" class="form-control-modern produit-select" required>
                                                <option value="">Sélectionner un produit</option>
                                                {% for produit in produits %}
                                                <option value="{{ produit.pk }}" 
                                                        data-prix="{{ produit.prix_achat }}"
                                                        data-tva="{{ produit.taux_tva|default(18) }}"
                                                        {% if ligne.produit.pk == produit.pk %}selected{% endif %}>
                                                    {{ produit.nom }} - {{ "{:,.0f}".format(produit.prix_achat|default(0)) }} FCFA
                                                </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        
                                        <div class="quantity-wrapper">
                                            <label class="mobile-label">Quantité</label>
                                            <input type="number" name="quantite[]" class="form-control-modern text-center quantite-input" 
                                                   value="{{ ligne.quantite }}" required min="1" placeholder="Qté">
                                        </div>
                                        
                                        <div class="price-wrapper">
                                            <label class="mobile-label">Prix unitaire HT</label>
                                            <div class="input-with-currency">
                                                <input type="number" name="prix_unitaire[]" class="form-control-modern text-end prix-input" 
                                                       value="{{ ligne.prix_unitaire }}" step="0.01" required>
                                                <span class="currency-label">FCFA</span>
                                            </div>
                                        </div>
                                        
                                        <div class="tva-wrapper">
                                            <label class="mobile-label">TVA (%)</label>
                                            <div class="input-with-currency">
                                                <input type="number" name="taux_tva[]" class="form-control-modern text-center tva-input" 
                                                       value="{{ ligne.taux_tva|default(18) }}" min="0" max="100" step="0.01">
                                                <span class="currency-label">%</span>
                                            </div>
                                        </div>
                                        
                                        <div class="total-wrapper">
                                            <label class="mobile-label">Total TTC</label>
                                            <div class="line-total">
                                                {{ "{:,.2f}".format(ligne.quantite * ligne.prix_unitaire * (1 + (ligne.taux_tva|default(18))/100)) }}
                                            </div>
                                        </div>
                                        
                                        <div class="action-wrapper">
                                            <button type="button" class="btn-delete" onclick="supprimerLigne(this)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            {% else %}
                                <div class="product-line">
                                    <div class="product-line-content">
                                        <div class="product-select-wrapper">
                                            <label class="mobile-label">Produit</label>
                                            <select name="produit[]" class="form-control-modern produit-select" required>
                                                <option value="">Sélectionner un produit</option>
                                                {% for produit in produits %}
                                                <option value="{{ produit.pk }}" 
                                                        data-prix="{{ produit.prix_achat }}" 
                                                        data-tva="{{ produit.taux_tva|default(18) }}">
                                                    {{ produit.nom }} - {{ "{:,.0f}".format(produit.prix_achat|default(0)) }} FCFA
                                                </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        
                                        <div class="quantity-wrapper">
                                            <label class="mobile-label">Quantité</label>
                                            <input type="number" name="quantite[]" class="form-control-modern text-center quantite-input" 
                                                   required min="1" placeholder="Qté" value="1">
                                        </div>
                                        
                                        <div class="price-wrapper">
                                            <label class="mobile-label">Prix unitaire HT</label>
                                            <div class="input-with-currency">
                                                <input type="number" name="prix_unitaire[]" class="form-control-modern text-end prix-input" 
                                                       step="0.01" required value="0">
                                                <span class="currency-label">FCFA</span>
                                            </div>
                                        </div>
                                        
                                        <div class="tva-wrapper">
                                            <label class="mobile-label">TVA (%)</label>
                                            <div class="input-with-currency">
                                                <input type="number" name="taux_tva[]" class="form-control-modern text-center tva-input" 
                                                       value="18" min="0" max="100" step="0.01">
                                                <span class="currency-label">%</span>
                                            </div>
                                        </div>
                                        
                                        <div class="total-wrapper">
                                            <label class="mobile-label">Total TTC</label>
                                            <div class="line-total">0.00</div>
                                        </div>
                                        
                                        <div class="action-wrapper">
                                            <button type="button" class="btn-delete" onclick="supprimerLigne(this)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Bouton ajouter produit -->
                        <button type="button" class="btn-add-line" onclick="ajouterLigne()">
                            <i class="bi bi-plus-circle"></i>
                            <span>Ajouter un produit</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Colonne latérale (droite) -->
            <div class="col-lg-4">
                <!-- Résumé de la commande (sticky) -->
                <div class="sticky-sidebar">
                    <div class="summary-card">
                        <div class="summary-header">
                            <i class="bi bi-calculator"></i>
                            <h6>Résumé de la commande</h6>
                        </div>
                        
                        <div class="summary-body">
                            <div class="summary-row">
                                <span class="summary-label">Produits</span>
                                <span class="summary-value" id="nombre-produits">0</span>
                            </div>
                            <div class="summary-row">
                                <span class="summary-label">Quantité totale</span>
                                <span class="summary-value" id="quantite-totale">0</span>
                            </div>
                            <div class="summary-divider"></div>
                            <div class="summary-row">
                                <span class="summary-label">Sous-total HT</span>
                                <span class="summary-value" id="sous-total">0 FCFA</span>
                            </div>
                            <div class="summary-row">
                                <span class="summary-label">Total TVA</span>
                                <span class="summary-value" id="total-tva">0 FCFA</span>
                            </div>
                            <div class="summary-divider"></div>
                            <div class="summary-row summary-total">
                                <span class="summary-label">Total TTC</span>
                                <span class="summary-amount" id="total-general">0 FCFA</span>
                            </div>
                        </div>
                        
                        <div class="summary-footer">
                            <button type="submit" class="btn-primary-gradient">
                                <i class="bi bi-save"></i>
                                <span>Enregistrer la commande</span>
                            </button>
                            <a href="/achats/commandes/" class="btn-secondary-outline">
                                <i class="bi bi-x-circle"></i>
                                <span>Annuler</span>
                            </a>
                        </div>
                    </div>

                    <!-- Conseils -->
                    <div class="tips-card">
                        <div class="tips-header">
                            <i class="bi bi-lightbulb"></i>
                            <span>Conseils pour les achats</span>
                        </div>
                        <div class="tips-body">
                            <div class="tip-item">
                                <i class="bi bi-check-circle"></i>
                                <span>Négociez les prix et les conditions de paiement</span>
                            </div>
                            <div class="tip-item">
                                <i class="bi bi-check-circle"></i>
                                <span>Vérifiez les délais de livraison avec le fournisseur</span>
                            </div>
                            <div class="tip-item">
                                <i class="bi bi-check-circle"></i>
                                <span>Demandez les factures et bons de livraison</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Fonction pour ajouter une ligne de produit
    window.ajouterLigne = function() {
        const container = document.getElementById('lignes_commande');
        const premiereLigne = document.querySelector('.product-line');
        const nouvelleLigne = premiereLigne.cloneNode(true);
        
        // Réinitialiser les valeurs
        nouvelleLigne.querySelector('.produit-select').selectedIndex = 0;
        nouvelleLigne.querySelector('.quantite-input').value = 1;
        nouvelleLigne.querySelector('.prix-input').value = 0;
        nouvelleLigne.querySelector('.tva-input').value = 18;
        nouvelleLigne.querySelector('.line-total').textContent = '0.00';
        
        // Insérer la nouvelle ligne
        container.appendChild(nouvelleLigne);
        mettreAJourCompteur();
        calculerResume();
        ajouterEcouteursEvenements(nouvelleLigne);
    };
    
    // Fonction pour supprimer une ligne
    window.supprimerLigne = function(btn) {
        const lignes = document.querySelectorAll('.product-line');
        if (lignes.length > 1) {
            if (confirm('Voulez-vous vraiment supprimer cette ligne ?')) {
                btn.closest('.product-line').remove();
                mettreAJourCompteur();
                calculerResume();
            }
        } else {
            alert('Vous devez garder au moins une ligne de produit');
        }
    };
    
    // Mettre à jour le compteur de lignes
    function mettreAJourCompteur() {
        const count = document.querySelectorAll('.product-line').length;
        document.getElementById('ligne-count').textContent = count;
    }
    
    // Calculer le total d'une ligne
    function calculerTotalLigne(ligne) {
        const quantite = parseFloat(ligne.querySelector('.quantite-input').value) || 0;
        const prix = parseFloat(ligne.querySelector('.prix-input').value) || 0;
        const tva = parseFloat(ligne.querySelector('.tva-input').value) || 0;
        
        const sousTotal = quantite * prix;
        const montantTva = sousTotal * (tva / 100);
        const totalTtc = sousTotal + montantTva;
        
        // Formater le total avec séparateurs de milliers
        ligne.querySelector('.line-total').textContent = 
            new Intl.NumberFormat('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}).format(totalTtc);
        
        return { sousTotal, montantTva, totalTtc };
    }
    
    // Calculer le résumé de la commande
    function calculerResume() {
        let sousTotalGeneral = 0;
        let totalTvaGeneral = 0;
        let totalTtcGeneral = 0;
        let quantiteTotale = 0;
        let nombreProduits = 0;
        
        document.querySelectorAll('.product-line').forEach(ligne => {
            const quantite = parseFloat(ligne.querySelector('.quantite-input').value) || 0;
            const prix = parseFloat(ligne.querySelector('.prix-input').value) || 0;
            const produitSelectionne = ligne.querySelector('.produit-select').value;
            
            if (produitSelectionne && quantite > 0 && prix > 0) {
                nombreProduits++;
                quantiteTotale += quantite;
                
                const totaux = calculerTotalLigne(ligne);
                sousTotalGeneral += totaux.sousTotal;
                totalTvaGeneral += totaux.montantTva;
                totalTtcGeneral += totaux.totalTtc;
            }
        });
        
        // Mettre à jour les affichages
        document.getElementById('nombre-produits').textContent = nombreProduits;
        document.getElementById('quantite-totale').textContent = 
            new Intl.NumberFormat('fr-FR').format(quantiteTotale);
        document.getElementById('sous-total').textContent = 
            new Intl.NumberFormat('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}).format(sousTotalGeneral) + ' FCFA';
        document.getElementById('total-tva').textContent = 
            new Intl.NumberFormat('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}).format(totalTvaGeneral) + ' FCFA';
        document.getElementById('total-general').textContent = 
            new Intl.NumberFormat('fr-FR', {minimumFractionDigits: 2, maximumFractionDigits: 2}).format(totalTtcGeneral) + ' FCFA';
    }
    
    // Ajouter les écouteurs d'événements à une ligne
    function ajouterEcouteursEvenements(ligne) {
        // Lorsque le produit change, mettre à jour le prix et la TVA
        ligne.querySelector('.produit-select').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const prixParDefaut = selectedOption.getAttribute('data-prix');
            const tvaParDefaut = selectedOption.getAttribute('data-tva');
            
            if (prixParDefaut && parseFloat(prixParDefaut) > 0) {
                ligne.querySelector('.prix-input').value = prixParDefaut;
            }
            if (tvaParDefaut) {
                ligne.querySelector('.tva-input').value = tvaParDefaut;
            }
            
            ligne.querySelector('.prix-input').dispatchEvent(new Event('input'));
            calculerResume();
        });
        
        // Lorsque la quantité, le prix ou la TVA change
        ligne.querySelector('.quantite-input').addEventListener('input', function() {
            calculerTotalLigne(ligne);
            calculerResume();
        });
        
        ligne.querySelector('.prix-input').addEventListener('input', function() {
            calculerTotalLigne(ligne);
            calculerResume();
        });
        
        ligne.querySelector('.tva-input').addEventListener('input', function() {
            calculerTotalLigne(ligne);
            calculerResume();
        });
    }
    
    // Initialisation
    document.querySelectorAll('.product-line').forEach(ligne => {
        ajouterEcouteursEvenements(ligne);
    });
    
    calculerResume();
    mettreAJourCompteur();
    
    // Validation du formulaire
    const form = document.getElementById('commandeForm');
    if (form) {
        form.addEventListener('submit', function(event) {
            let toutesLignesValides = true;
            document.querySelectorAll('.produit-select').forEach(select => {
                if (!select.value) {
                    toutesLignesValides = false;
                    select.classList.add('is-invalid');
                } else {
                    select.classList.remove('is-invalid');
                }
            });
            
            if (!form.checkValidity() || !toutesLignesValides) {
                event.preventDefault();
                event.stopPropagation();
                
                if (!toutesLignesValides) {
                    alert('Veuillez sélectionner un produit pour toutes les lignes');
                }
            }
        });
    }
});
</script>

