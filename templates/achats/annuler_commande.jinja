<!-- templates/achats/annuler_commande.jinja -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Annuler la commande {{ commande.numero_commande }}{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <!-- Carte d'avertissement -->
            <div class="card border-danger shadow-sm mb-4">
                <div class="card-header bg-danger text-white border-0 py-3">
                    <h5 class="card-title mb-0 fw-bold">
                        <i class="bi bi-exclamation-triangle me-2"></i>Attention : Annulation de commande
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning bg-warning bg-opacity-10 border-warning border-opacity-25">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="bi bi-info-circle text-warning fs-4"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="fw-bold mb-2">Cette action est irréversible</h6>
                                <p class="mb-0">
                                    Vous êtes sur le point d'annuler la commande. Une fois annulée, 
                                    la commande ne pourra plus être modifiée ou confirmée. 
                                    Veuillez fournir une raison détaillée pour cette annulation.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Informations de la commande -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="card-title mb-0 fw-bold">
                        <i class="bi bi-receipt me-2"></i>Informations de la commande
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 text-primary rounded p-2 me-3">
                                    <i class="bi bi-hash"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">N° Commande</small>
                                    <h6 class="mb-0 fw-semibold">{{ commande.numero_commande }}</h6>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-info bg-opacity-10 text-info rounded p-2 me-3">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Fournisseur</small>
                                    <h6 class="mb-0 fw-semibold">{{ commande.fournisseur.nom }}</h6>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-success bg-opacity-10 text-success rounded p-2 me-3">
                                    <i class="bi bi-calendar"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Date de commande</small>
                                    <h6 class="mb-0 fw-semibold">{{ commande.date_commande.strftime('%d/%m/%Y') }}</h6>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-warning bg-opacity-10 text-warning rounded p-2 me-3">
                                    <i class="bi bi-currency-dollar"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Montant total</small>
                                    <h6 class="mb-0 fw-semibold">{{ "{:,.0f}".format(commande.total) }} FCFA</h6>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                <div class="bg-secondary bg-opacity-10 text-secondary rounded p-2 me-3">
                                    <i class="bi bi-box-seam"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Statut actuel</small>
                                    {% if commande.statut == 'BROUILLON' %}
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-pencil me-1"></i>Brouillon
                                        </span>
                                    {% elif commande.statut == 'CONFIRMEE' %}
                                        <span class="badge bg-primary">
                                            <i class="bi bi-check-circle me-1"></i>Confirmée
                                        </span>
                                    {% elif commande.statut == 'ENVOYEE' %}
                                        <span class="badge bg-info">
                                            <i class="bi bi-send me-1"></i>Envoyée
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Formulaire d'annulation -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="card-title mb-0 fw-bold">
                        <i class="bi bi-chat-left-text me-2"></i>Raison de l'annulation
                    </h6>
                </div>
                <form method="post" class="needs-validation" novalidate>
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Motif de l'annulation <span class="text-danger">*</span>
                            </label>
                            <textarea name="raison_annulation" 
                                      class="form-control" 
                                      rows="5" 
                                      required 
                                      minlength="10"
                                      placeholder="Veuillez expliquer en détail la raison de l'annulation (minimum 10 caractères)..."></textarea>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Minimum 10 caractères requis. Soyez aussi précis que possible.
                            </div>
                            <div class="invalid-feedback">
                                Veuillez fournir une raison détaillée (minimum 10 caractères).
                            </div>
                        </div>
                        
                        <!-- Exemples de raisons -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">Exemples de raisons valides :</label>
                            <div class="list-group">
                                <button type="button" class="list-group-item list-group-item-action raison-exemple" data-raison="Fournisseur ne peut pas livrer dans les délais convenus">
                                    <i class="bi bi-clock text-warning me-2"></i>
                                    Fournisseur ne peut pas livrer dans les délais convenus
                                </button>
                                <button type="button" class="list-group-item list-group-item-action raison-exemple" data-raison="Prix trop élevé, négociation en cours avec un autre fournisseur">
                                    <i class="bi bi-currency-exchange text-info me-2"></i>
                                    Prix trop élevé, négociation avec autre fournisseur
                                </button>
                                <button type="button" class="list-group-item list-group-item-action raison-exemple" data-raison="Produits commandés par erreur, besoin modifié">
                                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>
                                    Commande créée par erreur
                                </button>
                                <button type="button" class="list-group-item list-group-item-action raison-exemple" data-raison="Stock suffisant finalement disponible dans un autre entrepôt">
                                    <i class="bi bi-box text-success me-2"></i>
                                    Stock suffisant disponible ailleurs
                                </button>
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-hand-index me-1"></i>Cliquez sur un exemple pour le copier (vous pouvez le modifier)
                            </small>
                        </div>
                        
                        <!-- Confirmation -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="confirmAnnulation" required>
                            <label class="form-check-label" for="confirmAnnulation">
                                Je confirme vouloir annuler définitivement cette commande
                            </label>
                            <div class="invalid-feedback">
                                Vous devez confirmer l'annulation.
                            </div>
                        </div>
                    </div>
                    
                    <!-- Actions -->
                    <div class="card-footer bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/achats/{{ commande.pk }}/" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Retour à la commande
                            </a>
                            <div class="d-flex gap-2">
                                <a href="/achats/" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Abandonner
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-exclamation-triangle me-2"></i>Annuler la commande
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            
            <!-- Informations complémentaires -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 text-info rounded p-2 me-2">
                            <i class="bi bi-question-circle"></i>
                        </div>
                        <h6 class="mb-0 fw-bold">Ce qui se passera après l'annulation</h6>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-check-circle text-success"></i>
                                </div>
                                <div class="ms-2">
                                    <small class="fw-semibold d-block">Statut de la commande</small>
                                    <small class="text-muted">La commande sera marquée comme "ANNULÉE"</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-check-circle text-success"></i>
                                </div>
                                <div class="ms-2">
                                    <small class="fw-semibold d-block">Conservation des données</small>
                                    <small class="text-muted">Les informations restent dans le système pour référence</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-x-circle text-danger"></i>
                                </div>
                                <div class="ms-2">
                                    <small class="fw-semibold d-block">Modification impossible</small>
                                    <small class="text-muted">La commande ne pourra plus être modifiée</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-x-circle text-danger"></i>
                                </div>
                                <div class="ms-2">
                                    <small class="fw-semibold d-block">Actions bloquées</small>
                                    <small class="text-muted">Aucune réception ou paiement ne sera possible</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion des exemples de raisons
    const raisonTextarea = document.querySelector('textarea[name="raison_annulation"]');
    const exempleBtns = document.querySelectorAll('.raison-exemple');
    
    exempleBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const raison = this.getAttribute('data-raison');
            raisonTextarea.value = raison;
            raisonTextarea.focus();
            
            // Retirer la classe active des autres boutons
            exempleBtns.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
        });
    });
    
    // Validation du formulaire
    const form = document.querySelector('form.needs-validation');
    if (form) {
        form.addEventListener('submit', function(event) {
            const raison = raisonTextarea.value.trim();
            const confirmation = document.getElementById('confirmAnnulation').checked;
            
            if (!form.checkValidity() || raison.length < 10 || !confirmation) {
                event.preventDefault();
                event.stopPropagation();
                
                if (raison.length < 10) {
                    raisonTextarea.classList.add('is-invalid');
                    alert('La raison doit contenir au moins 10 caractères.');
                } else if (!confirmation) {
                    alert('Vous devez confirmer l\'annulation en cochant la case.');
                }
            } else {
                // Demander une confirmation finale
                if (!confirm('Êtes-vous absolument certain de vouloir annuler cette commande ?\n\nCette action est IRRÉVERSIBLE.')) {
                    event.preventDefault();
                    event.stopPropagation();
                }
            }
            
            form.classList.add('was-validated');
        });
    }
    
    // Compteur de caractères
    const charCount = document.createElement('small');
    charCount.className = 'text-muted';
    raisonTextarea.parentElement.appendChild(charCount);
    
    function updateCharCount() {
        const length = raisonTextarea.value.length;
        charCount.textContent = `${length} caractère${length > 1 ? 's' : ''} (minimum 10)`;
        
        if (length >= 10) {
            charCount.classList.remove('text-danger');
            charCount.classList.add('text-success');
        } else {
            charCount.classList.remove('text-success');
            charCount.classList.add('text-danger');
        }
    }
    
    raisonTextarea.addEventListener('input', updateCharCount);
    updateCharCount();
});
</script>

<style>
.btn-custom-primary {
    background-color: #1e40af;
    border-color: #1e40af;
    color: white;
    padding: 0.5rem 1.5rem;
    font-weight: 600;
}

.btn-custom-primary:hover {
    background-color: #1e3a8a;
    border-color: #1e3a8a;
    color: white;
}

.list-group-item.raison-exemple {
    cursor: pointer;
    transition: all 0.2s ease;
    border-left: 3px solid transparent;
}

.list-group-item.raison-exemple:hover {
    background-color: #f8f9fa;
    border-left-color: #1e40af;
}

.list-group-item.raison-exemple.active {
    background-color: rgba(30, 64, 175, 0.1);
    border-left-color: #1e40af;
    color: #1e40af;
}

textarea.form-control {
    resize: vertical;
}

textarea.form-control:focus {
    border-color: #1e40af;
    box-shadow: 0 0 0 0.25rem rgba(30, 64, 175, 0.25);
}

.alert-warning.bg-warning.bg-opacity-10 {
    border-left: 4px solid #ffc107;
}

/* Animation pour le formulaire */
.card {
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive */
@media (max-width: 768px) {
    .card-footer .d-flex {
        flex-direction: column;
        gap: 1rem;
    }
    
    .card-footer .btn {
        width: 100%;
    }
}
</style>
{% endblock %}