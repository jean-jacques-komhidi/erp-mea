                <p class="page-subtitle">Facture {{ facture.numero_facture }}</p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Carte informations facture -->
            <div class="invoice-info-card">
                <div class="invoice-info-header">
                    <div class="invoice-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div>
                        <h6>Facture {{ facture.numero_facture }}</h6>
                        <p>{{ facture.client.nom }}</p>
                    </div>
                    {% if facture.statut == 'EN_RETARD' %}
                    <div class="badge-late">
                        <i class="bi bi-exclamation-triangle"></i>
                        En retard
