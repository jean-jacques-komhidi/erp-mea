                            <a href="/ventes/factures/{{ facture.pk }}/" class="btn-cancel">
                                <i class="bi bi-x-circle"></i>
                                <span>Annuler</span>
                            </a>
                            <button type="submit" class="btn-submit">
                                <i class="bi bi-check-circle"></i>
