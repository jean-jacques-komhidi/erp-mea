                                       name="montant" 
                                       id="montant"
                                       class="form-input-modern form-input-large" 
                                       step="0.01" 
                                       min="0.01"
                                       max="{{ solde }}" 
                                       required
                                       placeholder="0">
                                <div class="input-addon">FCFA</div>
                            </div>
                            <div class="form-help">
