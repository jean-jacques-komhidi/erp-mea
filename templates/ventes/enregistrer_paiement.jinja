                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const montantInput = document.getElementById('montant');
    const maxMontant = {{ solde }};
    const infoApresPaiement = document.getElementById('infoApresPaiement');
    const soldeApresPaiement = document.getElementById('soldeApresPaiement');
    const statutApresPaiement = document.getElementById('statutApresPaiement');

    // Fonction pour d√©finir le montant
    window.setMontant = function(montant) {
        montantInput.value = montant.toFixed(0);
        updateInfosApresPaiement();
        montantInput.focus();
    };

    // Mettre √† jour les informations apr√®s paiement
    function updateInfosApresPaiement() {
        const montant = parseFloat(montantInput.value) || 0;
        const soldeRestant = maxMontant - montant;
        
        if (montant > 0) {
            const formatter = new Intl.NumberFormat('fr-FR', {
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            });
            
            soldeApresPaiement.textContent = formatter.format(soldeRestant) + ' FCFA';
            statutApresPaiement.textContent = soldeRestant === 0 ? 'Pay√©e ‚úÖ' : 'En attente';
            statutApresPaiement.className = soldeRestant === 0 ? 'text-success' : 'text-warning';
            
            // Afficher l'information
            infoApresPaiement.style.display = 'flex';
            
            // Changer la classe de l'alerte
            if (soldeRestant === 0) {
                infoApresPaiement.classList.remove('info-warning');
                infoApresPaiement.classList.add('info-success');
            } else {
                infoApresPaiement.classList.remove('info-success');
                infoApresPaiement.classList.add('info-warning');
            }
        } else {
            infoApresPaiement.style.display = 'none';
        }
    }

    // √âcouter les changements sur le champ montant
    montantInput.addEventListener('input', updateInfosApresPaiement);
    montantInput.addEventListener('change', updateInfosApresPaiement);

    // Validation du formulaire
    document.getElementById('paiementForm').addEventListener('submit', function(e) {
        const montant = parseFloat(montantInput.value);
        
        if (montant <= 0) {
            e.preventDefault();
            alert('‚ö†Ô∏è Le montant doit √™tre sup√©rieur √† 0.');
            montantInput.focus();
            return;
        }
        
        if (montant > maxMontant) {
            e.preventDefault();
            alert('‚ö†Ô∏è Le montant ne peut pas d√©passer le solde restant de ' + 
                  new Intl.NumberFormat('fr-FR').format(maxMontant) + ' FCFA');
            montantInput.focus();
            return;
        }

        // Confirmation pour les gros montants
        if (montant > 1000000) {
            const confirmation = confirm('üí∞ Vous √™tes sur le point d\'enregistrer un paiement de ' + 
                                        new Intl.NumberFormat('fr-FR').format(montant) + 
                                        ' FCFA.\n\nConfirmez-vous cette op√©ration ?');
            if (!confirmation) {
                e.preventDefault();
            }
        }
    });

    // Mettre √† jour les infos au chargement si montant d√©j√† saisi
    if (montantInput.value) {
        updateInfosApresPaiement();
    }
});
</script>

