                        <div class="form-group-modern">
                            <label class="form-label-modern">
                                <i class="bi bi-calendar3"></i>
                                Date du paiement
                                <span class="required">*</span>
                            </label>
                            <input type="date" 
                                   name="date_paiement" 
                                   class="form-input-modern"
                                   value="{{ aujourdhui }}"
                                   required>
                        </div>

                        <!-- Mode de paiement -->
                        <div class="form-group-modern">
                            <label class="form-label-modern">
                                <i class="bi bi-wallet2"></i>
                                Mode de paiement
                                <span class="required">*</span>
                            </label>
                            <select name="mode_paiement" class="form-select-modern" required>
                                <option value="">S√©lectionnez un mode</option>
                                <option value="ESPECES">üíµ Esp√®ces</option>
                                <option value="VIREMENT">üè¶ Virement bancaire</option>
                                <option value="CHEQUE">üìù Ch√®que</option>
                                <option value="CARTE">üí≥ Carte bancaire</option>
                                <option value="MOBILE">üì± Paiement mobile</option>
                            </select>
