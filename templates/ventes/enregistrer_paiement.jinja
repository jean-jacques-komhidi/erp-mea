                <div class="financial-summary-header">
                    <i class="bi bi-graph-up"></i>
                    <h6>R√©sum√© financier</h6>
                </div>
                <div class="financial-summary-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="amount-box amount-total">
                                <div class="amount-icon">
                                    <i class="bi bi-receipt"></i>
                                </div>
                                <div>
                                    <div class="amount-label">Montant total</div>
                                    <div class="amount-value">{{ "{:,.0f}".format(facture.total) if facture.total else '0' }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="amount-box amount-paid">
                                <div class="amount-icon">
                                    <i class="bi bi-check-circle"></i>
                                </div>
                                <div>
                                    <div class="amount-label">D√©j√† pay√©</div>
                                    <div class="amount-value">{{ "{:,.0f}".format(facture.montant_paye) if facture.montant_paye else '0' }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="amount-box amount-due">
                                <div class="amount-icon">
                                    <i class="bi bi-exclamation-circle"></i>
                                </div>
                                <div>
                                    <div class="amount-label">Solde restant</div>
                                    {% set total = facture.total if facture.total else 0 %}
                                    {% set paye = facture.montant_paye if facture.montant_paye else 0 %}
                                    {% set solde = total - paye %}
                                    <div class="amount-value">{{ "{:,.0f}".format(solde) }}</div>
                                </div>
                            </div>
                        </div>
