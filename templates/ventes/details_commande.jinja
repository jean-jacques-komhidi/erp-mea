<!-- templates/ventes/details_commande.jinja - DESIGN MODERNE VIOLET -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Commande {{ commande.numero_commande }}{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête moderne avec actions -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="/ventes/commandes/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">Commande {{ commande.numero_commande }}</h4>
                <p class="page-subtitle">Détails et lignes de la commande</p>
            </div>
        </div>
        <div class="page-header-right">
            <!-- Actions selon le statut -->
            {% if commande.statut == 'BROUILLON' %}
            <a href="/ventes/commandes/{{ commande.pk }}/confirmer/" class="btn-action-primary">
                <i class="bi bi-check-circle"></i>
                <span>Confirmer</span>
            </a>
            <a href="/ventes/commandes/{{ commande.pk }}/modifier/" class="btn-action-secondary">
                <i class="bi bi-pencil"></i>
                <span>Modifier</span>
            </a>
            {% elif commande.statut == 'CONFIRME' %}
            <a href="/ventes/commandes/{{ commande.pk }}/expedier/" class="btn-action-primary">
                <i class="bi bi-truck"></i>
                <span>Expédier</span>
            </a>
            {% elif commande.statut == 'EXPEDIE' %}
            <a href="/ventes/commandes/{{ commande.pk }}/facturer/" class="btn-action-primary">
                <i class="bi bi-receipt"></i>
                <span>Créer facture</span>
            </a>
            {% endif %}
        </div>
    </div>

    <div class="row g-4">
        <!-- Colonne principale (gauche) -->
        <div class="col-lg-8">
            <!-- Carte informations principales -->
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-icon bg-primary">
                        <i class="bi bi-info-circle"></i>
                    </div>
                    <h6>Informations de la commande</h6>
                </div>
                <div class="info-card-body">
                    <div class="row g-3">
                        <!-- Client -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Client</div>
                                <div class="info-content">
                                    <div class="client-display">
                                        <div class="client-avatar">
                                            {{ commande.client.nom[0]|upper if commande.client.nom else 'C' }}
                                        </div>
                                        <div>
                                            <div class="client-name">{{ commande.client.nom }}</div>
                                            <div class="client-code">{{ commande.client.code|default('') }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Entrepôt -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Entrepôt</div>
                                <div class="info-content">
                                    <div class="info-value">
                                        <i class="bi bi-building"></i>
                                        {{ commande.entrepot.nom }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Date commande -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Date de commande</div>
                                <div class="info-content">
                                    <div class="info-value">
                                        <i class="bi bi-calendar3"></i>
                                        {{ commande.date_commande.strftime('%d/%m/%Y à %H:%M') }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Date livraison -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Livraison prévue</div>
                                <div class="info-content">
                                    <div class="info-value">
                                        <i class="bi bi-truck"></i>
                                        {{ commande.date_livraison.strftime('%d/%m/%Y') }}
                                    </div>
                                    {% if commande.date_livraison and commande.date_livraison < aujourdhui %}
                                    <div class="delay-badge">
                                        <i class="bi bi-clock-history"></i> En retard
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Statut -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Statut</div>
                                <div class="info-content">
                                    {% if commande.statut == 'BROUILLON' %}
                                    <span class="status-badge-large status-draft">
                                        <span class="status-dot"></span>
                                        Brouillon
                                    </span>
                                    {% elif commande.statut == 'CONFIRME' %}
                                    <span class="status-badge-large status-confirmed">
                                        <span class="status-dot"></span>
                                        Confirmé
                                    </span>
                                    {% elif commande.statut == 'EXPEDIE' %}
                                    <span class="status-badge-large status-shipped">
                                        <span class="status-dot"></span>
                                        Expédié
                                    </span>
                                    {% elif commande.statut == 'LIVRE' %}
                                    <span class="status-badge-large status-delivered">
                                        <span class="status-dot"></span>
                                        Livré
                                    </span>
                                    {% elif commande.statut == 'FACTURE' %}
                                    <span class="status-badge-large status-invoiced">
                                        <span class="status-dot"></span>
                                        Facturé
                                    </span>
                                    {% elif commande.statut == 'ANNULE' %}
                                    <span class="status-badge-large status-cancelled">
                                        <span class="status-dot"></span>
                                        Annulé
                                    </span>
                                    {% endif %}
                                    {% if commande.urgent %}
                                    <span class="urgent-badge-large">
                                        <i class="bi bi-exclamation-triangle"></i> Urgent
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Créée par -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Créée par</div>
                                <div class="info-content">
                                    <div class="user-display">
                                        <div class="user-avatar">
                                            {{ commande.cree_par.username[0]|upper if commande.cree_par and commande.cree_par.username else 'S' }}
                                        </div>
                                        <div class="user-name">
                                            {{ commande.cree_par.username if commande.cree_par else 'Système' }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lignes de commande -->
            <div class="lines-card">
                <div class="lines-card-header">
                    <div class="lines-icon">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <h6>Lignes de commande</h6>
                    <div class="badge-count">{{ lignes|length }}</div>
                </div>
                <div class="lines-card-body">
                    <div class="table-container">
                        <table class="lines-table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center" style="width: 100px;">Qté</th>
                                    <th class="text-end" style="width: 140px;">Prix unit.</th>
                                    <th class="text-center" style="width: 80px;">Remise</th>
                                    <th class="text-center" style="width: 80px;">TVA</th>
                                    <th class="text-end" style="width: 140px;">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ligne in lignes %}
                                <tr>
                                    <td>
                                        <div class="product-display">
                                            <div class="product-avatar">
                                                {{ ligne.produit.nom[0]|upper if ligne.produit and ligne.produit.nom else 'P' }}
                                            </div>
                                            <div>
                                                <div class="product-name">{{ ligne.produit.nom if ligne.produit else 'Produit supprimé' }}</div>
                                                {% if ligne.produit and ligne.produit.code %}
                                                <div class="product-code">{{ ligne.produit.code }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="quantity-display">{{ ligne.quantite }}</div>
                                    </td>
                                    <td class="text-end">
                                        <div class="price-display">{{ "{:,.0f}".format(ligne.prix_unitaire) }}</div>
                                    </td>
                                    <td class="text-center">
                                        {% if ligne.remise and ligne.remise > 0 %}
                                        <span class="discount-badge">{{ ligne.remise }}%</span>
                                        {% else %}
                                        <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <span class="tax-badge">{{ ligne.taux_tva }}%</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="total-display">{{ "{:,.0f}".format(ligne.total) }}</div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Notes (si présentes) -->
            {% if commande.notes %}
            <div class="notes-card">
                <div class="notes-header">
                    <i class="bi bi-chat-left-text"></i>
                    <span>Notes</span>
                </div>
                <div class="notes-body">
                    <i class="bi bi-info-circle notes-icon"></i>
                    <p>{{ commande.notes }}</p>
                </div>
            </div>
            {% endif %}

            <!-- Timeline -->
            <div class="timeline-card">
                <div class="timeline-header">
                    <i class="bi bi-clock-history"></i>
                    <span>Historique</span>
                </div>
                <div class="timeline-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Commande créée</div>
                                <div class="timeline-date">{{ commande.date_creation.strftime('%d/%m/%Y à %H:%M') }}</div>
                                <div class="timeline-desc">Par {{ commande.cree_par.username if commande.cree_par else 'Système' }}</div>
                            </div>
                        </div>
                        {% if commande.date_confirmation %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Commande confirmée</div>
                                <div class="timeline-date">{{ commande.date_confirmation.strftime('%d/%m/%Y à %H:%M') }}</div>
                            </div>
                        </div>
                        {% endif %}
                        {% if commande.date_expedition %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Commande expédiée</div>
                                <div class="timeline-date">{{ commande.date_expedition.strftime('%d/%m/%Y à %H:%M') }}</div>
                            </div>
                        </div>
                        {% endif %}
                        {% if commande.facture %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Facture créée</div>
                                <div class="timeline-date">{{ commande.facture.date_creation.strftime('%d/%m/%Y à %H:%M') }}</div>
                                <div class="timeline-desc">Facture n° {{ commande.facture.numero_facture }}</div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonne latérale (droite) -->
        <div class="col-lg-4">
            <div class="sticky-sidebar">
                <!-- Résumé financier -->
                <div class="summary-card">
                    <div class="summary-header">
                        <i class="bi bi-calculator"></i>
                        <h6>Résumé financier</h6>
                    </div>
                    <div class="summary-body">
                        <div class="summary-row">
                            <span class="summary-label">Sous-total</span>
                            <span class="summary-value">{{ "{:,.0f}".format(commande.sous_total) }}</span>
                        </div>
                        <div class="summary-row">
                            <span class="summary-label">TVA</span>
                            <span class="summary-value">{{ "{:,.0f}".format(commande.montant_tva) }}</span>
                        </div>
                        {% if commande.remise and commande.remise > 0 %}
                        <div class="summary-row">
                            <span class="summary-label">Remise</span>
                            <span class="summary-value summary-discount">-{{ commande.remise }}%</span>
                        </div>
                        {% endif %}
                        <div class="summary-divider"></div>
                        <div class="summary-row summary-total">
                            <span class="summary-label">Total</span>
                            <span class="summary-amount">{{ "{:,.0f}".format(commande.total) }}</span>
                        </div>
                    </div>
                </div>

                <!-- Facture associée -->
                <div class="invoice-card">
                    <div class="invoice-header">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Facture</span>
                    </div>
                    <div class="invoice-body">
                        {% if commande.facture %}
                        <div class="invoice-exists">
                            <div class="invoice-icon">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div>
                                <div class="invoice-number">{{ commande.facture.numero_facture }}</div>
                                <div class="invoice-date">{{ commande.facture.date_creation.strftime('%d/%m/%Y') }}</div>
                            </div>
                        </div>
                        <a href="/ventes/factures/{{ commande.facture.pk }}/" class="btn-view-invoice">
                            <i class="bi bi-eye"></i>
                            <span>Voir la facture</span>
                        </a>
                        {% else %}
                        <div class="invoice-empty">
                            <i class="bi bi-file-earmark-x"></i>
                            <p>Aucune facture créée</p>
                        </div>
                        {% if commande.statut in ['CONFIRME', 'EXPEDIE', 'LIVRE'] %}
                        <a href="/ventes/commandes/{{ commande.pk }}/facturer/" class="btn-create-invoice">
                            <i class="bi bi-receipt"></i>
                            <span>Créer une facture</span>
                        </a>
                        {% endif %}
                        {% endif %}
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="actions-card">
                    <div class="actions-header">
                        <i class="bi bi-lightning"></i>
                        <span>Actions rapides</span>
                    </div>
                    <div class="actions-body">
                        <a href="/ventes/commandes/{{ commande.pk }}/imprimer/" target="_blank" class="action-item">
                            <i class="bi bi-printer"></i>
                            <span>Imprimer</span>
                        </a>
                        <a href="/ventes/commandes/{{ commande.pk }}/telecharger-pdf/" class="action-item">
                            <i class="bi bi-download"></i>
                            <span>Télécharger PDF</span>
                        </a>
                        <a href="/ventes/commandes/{{ commande.pk }}/envoyer-email/" 
                           class="action-item"
                           onclick="return confirm('Envoyer cette commande par email à {{ commande.client.email }} ?');">
                            <i class="bi bi-envelope"></i>
                            <span>Envoyer par email</span>
                        </a>
                        {% if commande.statut == 'BROUILLON' %}
                        <a href="/ventes/commandes/{{ commande.pk }}/supprimer/" class="action-item action-danger" 
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette commande ?');">
                            <i class="bi bi-trash"></i>
                            <span>Supprimer</span>
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

