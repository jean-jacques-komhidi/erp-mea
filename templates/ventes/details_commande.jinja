.status-shipped .status-dot {
    background: #6366f1;
}

.status-delivered {
    background: #dcfce7;
    color: #166534;
}

.status-delivered .status-dot {
    background: #16a34a;
}

.status-invoiced {
    background: #d1fae5;
    color: #065f46;
