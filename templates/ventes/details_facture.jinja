{% extends "base_principale.jinja" %}

{% block titre_page %}Facture {{ facture.numero_facture }}{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête moderne avec actions -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="/ventes/factures/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">Facture {{ facture.numero_facture }}</h4>
                <p class="page-subtitle">Détails et lignes de la facture</p>
            </div>
        </div>
        <div class="page-header-right">
            <!-- Actions selon le statut -->
            {% set total = facture.total if facture.total else 0 %}
            {% set paye = facture.montant_paye if facture.montant_paye else 0 %}
            {% set solde = total - paye %}
            
            {% if solde > 0 and facture.statut != 'PAYEE' %}
            <a href="/ventes/factures/{{ facture.pk }}/paiement/" class="btn-action-success">
                <i class="bi bi-cash"></i>
                <span>Enregistrer paiement</span>
            </a>
            {% endif %}
            {% if facture.statut in ['BROUILLON', 'ENVOYEE'] %}
            <a href="/ventes/factures/{{ facture.pk }}/envoyer/" class="btn-action-info">
                <i class="bi bi-send"></i>
                <span>Envoyer</span>
            </a>
            {% endif %}
        </div>
    </div>

    <div class="row g-4">
        <!-- Colonne principale (gauche) -->
        <div class="col-lg-8">
            <!-- Carte informations principales -->
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-icon bg-primary">
                        <i class="bi bi-info-circle"></i>
                    </div>
                    <h6>Informations de la facture</h6>
                </div>
                <div class="info-card-body">
                    <div class="row g-3">
                        <!-- Client -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Client</div>
                                <div class="info-content">
                                    <div class="client-display">
                                        <div class="client-avatar">
                                            {{ facture.client.nom[0]|upper if facture.client.nom else 'C' }}
                                        </div>
                                        <div>
                                            <div class="client-name">{{ facture.client.nom }}</div>
                                            {% if facture.client.adresse %}
                                            <div class="client-address">{{ facture.client.adresse }}</div>
                                            {% endif %}
                                            {% if facture.client.telephone %}
                                            <div class="client-phone">
                                                <i class="bi bi-telephone"></i> {{ facture.client.telephone }}
                                            </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Dates -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Dates importantes</div>
                                <div class="info-content">
                                    <div class="date-row">
                                        <span class="date-label">Date facture :</span>
                                        <span class="date-value">
                                            {{ facture.date_facture.strftime('%d/%m/%Y') if facture.date_facture else 
                                               facture.date_creation.strftime('%d/%m/%Y') if facture.date_creation else '-' }}
                                        </span>
                                    </div>
                                    <div class="date-row">
                                        <span class="date-label">Échéance :</span>
                                        <span class="date-value {% if facture.statut == 'EN_RETARD' %}text-danger{% endif %}">
                                            {{ facture.date_echeance.strftime('%d/%m/%Y') if facture.date_echeance else '-' }}
                                            {% if facture.statut == 'EN_RETARD' %}
                                            <span class="badge-danger ms-2">En retard</span>
                                            {% endif %}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Commande liée -->
                        {% if facture.commande_vente %}
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Commande associée</div>
                                <div class="info-content">
                                    <a href="/ventes/commandes/{{ facture.commande_vente.pk }}/" class="commande-link">
                                        <i class="bi bi-cart"></i>
                                        {{ facture.commande_vente.numero_commande }}
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        <!-- Statut -->
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-label">Statut de la facture</div>
                                <div class="info-content">
                                    {% if facture.statut == 'PAYEE' %}
                                    <span class="status-badge-large status-paid">
                                        <span class="status-dot"></span>
                                        Payée
                                    </span>
                                    {% elif facture.statut == 'EN_RETARD' %}
                                    <span class="status-badge-large status-late">
                                        <span class="status-dot"></span>
                                        En retard
                                    </span>
                                    {% elif facture.statut == 'BROUILLON' %}
                                    <span class="status-badge-large status-draft">
                                        <span class="status-dot"></span>
                                        Brouillon
                                    </span>
                                    {% elif facture.statut == 'ENVOYEE' %}
                                    <span class="status-badge-large status-sent">
                                        <span class="status-dot"></span>
                                        Envoyée
                                    </span>
                                    {% else %}
                                    <span class="status-badge-large status-secondary">
                                        <span class="status-dot"></span>
                                        {{ facture.get_statut_display() }}
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lignes de facture -->
            <div class="lines-card">
                <div class="lines-card-header">
                    <div class="lines-icon">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <h6>Articles facturés</h6>
                    <div class="badge-count">{{ lignes|length }}</div>
                </div>
                <div class="lines-card-body">
                    <div class="table-container">
                        <table class="lines-table">
                            <thead>
                                <tr>
                                    <th style="width: 50px;">#</th>
                                    <th>Description</th>
                                    <th class="text-center" style="width: 100px;">Quantité</th>
                                    <th class="text-end" style="width: 140px;">Prix unit.</th>
                                    <th class="text-end" style="width: 140px;">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ligne in lignes %}
                                <tr>
                                    <td class="text-center text-muted">{{ loop.index }}</td>
                                    <td>
                                        <div class="product-display">
                                            <div class="product-avatar">
                                                {{ ligne.produit.nom[0]|upper if ligne.produit and ligne.produit.nom else 'P' }}
                                            </div>
                                            <div>
                                                <div class="product-name">{{ ligne.produit.nom if ligne.produit else 'Produit supprimé' }}</div>
                                                {% if ligne.produit and ligne.produit.description %}
                                                <div class="product-desc">
                                                    {{ ligne.produit.description[:100] }}{% if ligne.produit.description|length > 100 %}...{% endif %}
                                                </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="quantity-display">{{ ligne.quantite }}</div>
                                    </td>
                                    <td class="text-end">
                                        <div class="price-display">{{ "{:,.0f}".format(ligne.prix_unitaire) }}</div>
                                    </td>
                                    <td class="text-end">
                                        <div class="total-display">{{ "{:,.0f}".format(ligne.prix_unitaire * ligne.quantite) }}</div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="empty-state-small">
                                        <i class="bi bi-exclamation-circle"></i>
                                        <p>Aucun article trouvé</p>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Remarques -->
            {% if facture.remarques %}
            <div class="notes-card">
                <div class="notes-header">
                    <i class="bi bi-chat-left-text"></i>
                    <span>Remarques</span>
                </div>
                <div class="notes-body">
                    <i class="bi bi-info-circle notes-icon"></i>
                    <p>{{ facture.remarques }}</p>
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Colonne latérale (droite) -->
        <div class="col-lg-4">
            <div class="sticky-sidebar">
                <!-- Résumé financier -->
                <div class="summary-card">
                    <div class="summary-header">
                        <i class="bi bi-calculator"></i>
                        <h6>Résumé financier</h6>
                    </div>
                    <div class="summary-body">
                        <div class="summary-row">
                            <span class="summary-label">Sous-total HT</span>
                            <span class="summary-value">{{ "{:,.0f}".format(facture.sous_total) if facture.sous_total else '0' }}</span>
                        </div>
                        {% if facture.montant_tva and facture.montant_tva > 0 %}
                        <div class="summary-row">
                            <span class="summary-label">TVA ({{ facture.taux_tva if facture.taux_tva else '0' }}%)</span>
                            <span class="summary-value">{{ "{:,.0f}".format(facture.montant_tva) }}</span>
                        </div>
                        {% endif %}
                        <div class="summary-divider"></div>
                        <div class="summary-row summary-total">
                            <span class="summary-label">Total TTC</span>
                            <span class="summary-amount">{{ "{:,.0f}".format(total) }}</span>
                        </div>
                        <div class="summary-row summary-paid">
                            <span class="summary-label">Montant payé</span>
                            <span class="summary-value-paid">{{ "{:,.0f}".format(paye) }}</span>
                        </div>
                        <div class="summary-divider"></div>
                        <div class="summary-row summary-balance">
                            <span class="summary-label">Solde restant</span>
                            <span class="summary-balance-amount {% if solde == 0 %}text-success{% else %}text-danger{% endif %}">
                                {{ "{:,.0f}".format(solde) }}
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="actions-card">
                    <div class="actions-header">
                        <i class="bi bi-lightning"></i>
                        <span>Actions rapides</span>
                    </div>
                    <div class="actions-body">
                        <a href="/ventes/factures/{{ facture.pk }}/imprimer/" target="_blank" class="action-item">
                            <i class="bi bi-printer"></i>
                            <span>Imprimer</span>
                        </a>
                        <a href="/ventes/factures/{{ facture.pk }}/telecharger-pdf/" class="action-item">
                            <i class="bi bi-download"></i>
                            <span>Télécharger PDF</span>
                        </a>
                        <a href="/ventes/factures/{{ facture.pk }}/envoyer-email/" class="action-item">
                            <i class="bi bi-envelope"></i>
                            <span>Envoyer par email</span>
                        </a>
                        {% if solde > 0 and facture.statut != 'PAYEE' %}
                        <a href="/ventes/factures/{{ facture.pk }}/paiement/" class="action-item action-success">
                            <i class="bi bi-cash"></i>
                            <span>Enregistrer paiement</span>
                        </a>
                        {% endif %}
                    </div>
                </div>

                <!-- Informations complémentaires -->
                <div class="info-card-small">
                    <div class="info-card-small-header">
                        <i class="bi bi-clock-history"></i>
                        <span>Informations</span>
                    </div>
                    <div class="info-card-small-body">
                        <div class="info-item-small">
                            <i class="bi bi-calendar-plus"></i>
                            <div>
                                <div class="info-item-label">Créée le</div>
                                <div class="info-item-value">
                                    {{ facture.date_creation.strftime('%d/%m/%Y à %H:%M') if facture.date_creation else '-' }}
                                </div>
                            </div>
                        </div>
                        {% if facture.conditions_paiement %}
                        <div class="info-item-small">
                            <i class="bi bi-wallet2"></i>
                            <div>
                                <div class="info-item-label">Conditions</div>
                                <div class="info-item-value">{{ facture.conditions_paiement }}</div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Historique des paiements -->
                {% if paye > 0 %}
                <div class="payment-history-card">
                    <div class="payment-history-header">
                        <i class="bi bi-clock-history"></i>
                        <span>Historique paiements</span>
                    </div>
                    <div class="payment-history-body">
                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <div class="timeline-title">Paiement enregistré</div>
                                    <div class="timeline-amount">{{ "{:,.0f}".format(paye) }} FCFA</div>
                                    {% if facture.date_modification %}
                                    <div class="timeline-date">{{ facture.date_modification.strftime('%d/%m/%Y') }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            {% if solde == 0 %}
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <div class="timeline-title">✅ Facture réglée</div>
                                    <div class="timeline-desc">Solde: 0 FCFA</div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

