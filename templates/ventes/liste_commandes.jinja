<!-- templates/ventes/liste_commandes.jinja - DESIGN MODERNE COMPLET AVEC EXPORT -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Commandes de vente{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- Statistiques en-tête avec icônes DANS les carrés -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-primary">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ commandes|length|default(0) }}</div>
                        <div class="stat-label">Commandes totales</div>
                        <div class="stat-badge">
                            <span class="badge badge-success-soft">
                                <i class="bi bi-check-circle"></i> {{ commandes_confirmees|default(0) }} confirmées
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-success">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value stat-value-large">{{ "{:,.0f}".format(total_montant|default(0)) }}</div>
                        <div class="stat-label">Chiffre d'affaires (FCFA)</div>
                        <div class="stat-badge">
                            <span class="badge badge-info-soft">
                                <i class="bi bi-graph-up"></i> +{{ variation_mois|default(0) }}%
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-warning">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ commandes_en_retard|default(0) }}</div>
                        <div class="stat-label">Commandes en retard</div>
                        <div class="stat-badge">
                            <span class="badge badge-warning-soft">
                                <i class="bi bi-exclamation-triangle"></i> Action requise
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-info">
                        <i class="bi bi-cart-check"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ commandes_ce_mois|default(0) }}</div>
                        <div class="stat-label">Commandes ce mois</div>
                        <div class="stat-badge">
                            <span class="badge badge-success-soft">
                                <i class="bi bi-truck"></i> {{ commandes_expediees|default(0) }} expédiées
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Carte principale du tableau -->
    <div class="main-card">
        <!-- En-tête de la carte -->
        <div class="card-header-modern">
            <div class="header-left">
                <div class="header-icon-box">
                    <i class="bi bi-receipt-cutoff"></i>
                </div>
                <div>
                    <h5 class="header-title">Gestion des commandes de vente</h5>
                    <p class="header-subtitle">Gérez et suivez vos commandes clients</p>
                </div>
            </div>
            <div class="header-right">
                <!-- Recherche avancée -->
                <form method="get" class="search-form">
                    <div class="search-input-group">
                        <i class="bi bi-search search-icon"></i>
                        <input type="text" 
                               name="recherche" 
                               value="{{ recherche }}" 
                               placeholder="Rechercher par numéro, client..." 
                               class="search-input">
                        {% if recherche %}
                        <a href="?" class="search-clear">
                            <i class="bi bi-x-circle"></i>
                        </a>
                        {% endif %}
                    </div>
                </form>
                
                <!-- Boutons d'action -->
                <div class="action-buttons">
                    <!-- Filtre statut -->
                    <div class="filter-dropdown">
                        <select name="statut" class="form-select-modern" onchange="window.location.href='?statut=' + this.value + '{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                            <option value="">Tous les statuts</option>
                            {% for value, label in statuts %}
                            <option value="{{ value }}" {% if filtre_statut == value %}selected{% endif %}>{{ label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    
                    <!-- Menu d'export -->
                    <div class="export-dropdown">
                        <button class="btn-icon" id="exportBtn" title="Exporter">
                            <i class="bi bi-download"></i>
                        </button>
                        <div class="export-menu" id="exportMenu">
                            <a href="/ventes/commandes/exporter/?format=excel{% if recherche %}&recherche={{ recherche }}{% endif %}{% if filtre_statut %}&statut={{ filtre_statut }}{% endif %}" class="export-item">
                                <i class="bi bi-file-earmark-excel"></i>
                                <div class="export-info">
                                    <div class="export-title">Excel (.xlsx)</div>
                                    <div class="export-desc">Tableau avec toutes les données</div>
                                </div>
                            </a>
                            <a href="/ventes/commandes/exporter/?format=csv{% if recherche %}&recherche={{ recherche }}{% endif %}{% if filtre_statut %}&statut={{ filtre_statut }}{% endif %}" class="export-item">
                                <i class="bi bi-filetype-csv"></i>
                                <div class="export-info">
                                    <div class="export-title">CSV (.csv)</div>
                                    <div class="export-desc">Format compatible tableur</div>
                                </div>
                            </a>
                            <a href="/ventes/commandes/exporter/?format=pdf{% if recherche %}&recherche={{ recherche }}{% endif %}{% if filtre_statut %}&statut={{ filtre_statut }}{% endif %}" class="export-item">
                                <i class="bi bi-file-earmark-pdf"></i>
                                <div class="export-info">
                                    <div class="export-title">PDF (.pdf)</div>
                                    <div class="export-desc">Document imprimable</div>
                                </div>
                            </a>
                        </div>
                    </div>
                    
                    <a href="/ventes/commandes/nouvelle/" class="btn-primary-modern">
                        <i class="bi bi-plus-circle"></i>
                        <span>Nouvelle commande</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Filtres rapides -->
        <div class="filters-bar">
            <div class="filters-group">
                <button class="filter-chip {% if not filtre_statut %}active{% endif %}" onclick="window.location.href='?{% if recherche %}recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-receipt"></i> Toutes ({{ commandes|length }})
                </button>
                <button class="filter-chip {% if filtre_statut == 'BROUILLON' %}active{% endif %}" onclick="window.location.href='?statut=BROUILLON{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-pencil"></i> Brouillons
                </button>
                <button class="filter-chip {% if filtre_statut == 'CONFIRME' %}active{% endif %}" onclick="window.location.href='?statut=CONFIRME{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-check-circle"></i> Confirmées
                </button>
                <button class="filter-chip {% if filtre_statut == 'EXPEDIE' %}active{% endif %}" onclick="window.location.href='?statut=EXPEDIE{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-truck"></i> Expédiées
                </button>
                <button class="filter-chip {% if filtre_statut == 'LIVRE' %}active{% endif %}" onclick="window.location.href='?statut=LIVRE{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-box-seam"></i> Livrées
                </button>
            </div>
            {% if recherche or filtre_statut %}
            <div class="search-result-info">
                <i class="bi bi-funnel"></i>
                Filtres actifs
                {% if filtre_statut %}<span class="badge bg-primary ms-2">{{ filtre_statut }}</span>{% endif %}
                {% if recherche %}<span class="badge bg-secondary ms-2">{{ recherche }}</span>{% endif %}
                <a href="?" class="ms-2">Effacer</a>
            </div>
            {% endif %}
        </div>
        
        <!-- Tableau moderne -->
        <div class="table-container">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th style="width: 40px;">
                            <div class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </div>
                        </th>
                        <th style="width: 180px;">N° Commande</th>
                        <th style="width: 250px;">Client</th>
                        <th style="width: 120px;">Date commande</th>
                        <th style="width: 120px;">Date livraison</th>
                        <th style="width: 150px;">Montant</th>
                        <th style="width: 140px;">Statut</th>
                        <th style="width: 130px;">Facture</th>
                        <th style="width: 140px;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                    <tr class="table-row-hover">
                        <td>
                            <div class="custom-checkbox">
                                <input type="checkbox" id="commande{{ commande.pk }}" name="commande_ids" value="{{ commande.pk }}">
                                <label for="commande{{ commande.pk }}"></label>
                            </div>
                        </td>
                        <td>
                            <div class="commande-cell">
                                <div class="commande-numero">{{ commande.numero_commande }}</div>
                                {% if commande.reference_client %}
                                <div class="commande-ref">
                                    <i class="bi bi-tag"></i> {{ commande.reference_client }}
                                </div>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            <div class="client-cell">
                                <div class="client-avatar">
                                    {{ commande.client.nom[0]|upper if commande.client.nom else 'C' }}
                                </div>
                                <div class="client-info">
                                    <div class="client-name">{{ commande.client.nom }}</div>
                                    <div class="client-code">
                                        <i class="bi bi-hash"></i>{{ commande.client.code }}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="date-cell">
                                <i class="bi bi-calendar3"></i>
                                {{ commande.date_commande.strftime('%d/%m/%Y') }}
                            </div>
                        </td>
                        <td>
                            {% if commande.date_livraison %}
                            <div class="date-cell">
                                <i class="bi bi-truck"></i>
                                {{ commande.date_livraison.strftime('%d/%m/%Y') }}
                                {% if commande.date_livraison < aujourdhui %}
                                <div class="delay-badge delay-late">
                                    <i class="bi bi-clock-history"></i> En retard
                                </div>
                                {% endif %}
                            </div>
                            {% else %}
                            <span class="text-muted-modern">Non définie</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="amount-cell">
                                <div class="amount-value">{{ "{:,.0f}".format(commande.total) }}</div>
                                <div class="amount-currency">FCFA</div>
                                {% if commande.remise and commande.remise > 0 %}
                                <div class="discount-badge">
                                    <i class="bi bi-percent"></i> -{{ commande.remise }}%
                                </div>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            <div class="status-cell">
                                {% if commande.statut == 'BROUILLON' %}
                                <span class="status-badge status-draft">
                                    <span class="status-dot"></span>
                                    Brouillon
                                </span>
                                {% elif commande.statut == 'CONFIRME' %}
                                <span class="status-badge status-confirmed">
                                    <span class="status-dot"></span>
                                    Confirmé
                                </span>
                                {% elif commande.statut == 'EXPEDIE' %}
                                <span class="status-badge status-shipped">
                                    <span class="status-dot"></span>
                                    Expédié
                                </span>
                                {% elif commande.statut == 'LIVRE' %}
                                <span class="status-badge status-delivered">
                                    <span class="status-dot"></span>
                                    Livré
                                </span>
                                {% elif commande.statut == 'FACTURE' %}
                                <span class="status-badge status-invoiced">
                                    <span class="status-dot"></span>
                                    Facturé
                                </span>
                                {% elif commande.statut == 'ANNULE' %}
                                <span class="status-badge status-cancelled">
                                    <span class="status-dot"></span>
                                    Annulé
                                </span>
                                {% else %}
                                <span class="status-badge status-secondary">
                                    <span class="status-dot"></span>
                                    {{ commande.get_statut_display() }}
                                </span>
                                {% endif %}
                                
                                {% if commande.urgent %}
                                <div class="urgent-badge">
                                    <i class="bi bi-exclamation-triangle"></i> Urgent
                                </div>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            {% if commande.facture %}
                            <div class="facture-badge">
                                <i class="bi bi-file-earmark-text"></i>
                                <span>{{ commande.facture.numero_facture }}</span>
                            </div>
                            {% else %}
                            <span class="badge badge-secondary-soft">
                                Non facturé
                            </span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <div class="action-buttons-table">
                                <a href="/ventes/commandes/{{ commande.pk }}/" class="btn-action btn-action-primary" title="Voir les détails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                {% if commande.statut in ['BROUILLON', 'CONFIRME'] %}
                                <a href="/ventes/commandes/{{ commande.pk }}/modifier/" class="btn-action btn-action-secondary" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {% endif %}
                                {% if commande.statut == 'CONFIRME' and not commande.facture %}
                                <a href="/ventes/commandes/{{ commande.pk }}/facturer/" class="btn-action btn-action-success" title="Créer facture">
                                    <i class="bi bi-receipt"></i>
                                </a>
                                {% endif %}
                                {% if commande.statut == 'BROUILLON' %}
                                <a href="/ventes/commandes/{{ commande.pk }}/supprimer/" 
                                   class="btn-action btn-action-danger" 
                                   title="Supprimer"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette commande ?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="9" class="empty-state">
                            <div class="empty-state-content">
                                <div class="empty-state-icon">
                                    <i class="bi bi-receipt"></i>
                                </div>
                                <h4 class="empty-state-title">Aucune commande trouvée</h4>
                                <p class="empty-state-text">
                                    {% if recherche or filtre_statut %}
                                    Aucune commande ne correspond à vos critères de recherche
                                    {% else %}
                                    Commencez par créer votre première commande de vente
                                    {% endif %}
                                </p>
                                <a href="/ventes/commandes/nouvelle/" class="btn-primary-modern">
                                    <i class="bi bi-plus-circle"></i>
                                    <span>Créer une commande</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <!-- Pied de page avec pagination -->
        <div class="card-footer-modern">
            <div class="footer-left">
                <div class="bulk-actions">
                    <select class="form-select-modern" id="bulkActionSelect">
                        <option selected>Actions groupées</option>
                        <option value="export">Exporter la sélection</option>
                        <option value="confirm">Confirmer les commandes</option>
                        <option value="ship">Marquer comme expédiées</option>
                        <option value="invoice">Créer des factures</option>
                        <option value="cancel">Annuler les commandes</option>
                    </select>
                    <button class="btn-secondary-modern" id="applyBulkAction">Appliquer</button>
                </div>
                <div class="results-info">
                    {% if page_obj %}
                    Affichage de {{ page_obj.start_index }} à {{ page_obj.end_index }} sur {{ page_obj.paginator.count }} commandes
                    {% else %}
                    Affichage de {{ commandes|length }} commande(s)
                    {% endif %}
                </div>
            </div>
            
            <div class="footer-right">
                {% if page_obj and page_obj.paginator.num_pages > 1 %}
                <nav class="pagination-modern">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}{% if recherche %}&recherche={{ recherche }}{% endif %}{% if filtre_statut %}&statut={{ filtre_statut }}{% endif %}" class="pagination-btn">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                    {% else %}
                    <span class="pagination-btn disabled">
                        <i class="bi bi-chevron-left"></i>
                    </span>
                    {% endif %}
                    
                    {% set current_page = page_obj.number %}
                    {% set total_pages = page_obj.paginator.num_pages %}
                    
                    {% for num in range(1, total_pages + 1) %}
                        {% if num >= current_page - 2 and num <= current_page + 2 %}
                            {% if num == current_page %}
                            <span class="pagination-btn active">{{ num }}</span>
                            {% else %}
                            <a href="?page={{ num }}{% if recherche %}&recherche={{ recherche }}{% endif %}{% if filtre_statut %}&statut={{ filtre_statut }}{% endif %}" class="pagination-btn">{{ num }}</a>
                            {% endif %}
                        {% elif num == 1 or num == total_pages %}
                            <a href="?page={{ num }}{% if recherche %}&recherche={{ recherche }}{% endif %}{% if filtre_statut %}&statut={{ filtre_statut }}{% endif %}" class="pagination-btn">{{ num }}</a>
                        {% elif num == current_page - 3 or num == current_page + 3 %}
                            <span class="pagination-dots">...</span>
                        {% endif %}
                    {% endfor %}
                    
                    {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}{% if recherche %}&recherche={{ recherche }}{% endif %}{% if filtre_statut %}&statut={{ filtre_statut }}{% endif %}" class="pagination-btn">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    {% else %}
                    <span class="pagination-btn disabled">
                        <i class="bi bi-chevron-right"></i>
                    </span>
                    {% endif %}
                </nav>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sélection de tous les checkboxes
    const selectAll = document.getElementById('selectAll');
    const checkboxes = document.querySelectorAll('input[name="commande_ids"]');
    
    if (selectAll) {
        selectAll.addEventListener('change', function() {
            checkboxes.forEach(cb => cb.checked = selectAll.checked);
        });
    }
    
    // Animation hover des lignes
    document.querySelectorAll('.table-row-hover').forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(4px)';
        });
        row.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    });
    
    // Menu d'export
    const exportBtn = document.getElementById('exportBtn');
    const exportMenu = document.getElementById('exportMenu');
    
    if (exportBtn && exportMenu) {
        exportBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            exportMenu.classList.toggle('show');
        });
        
        document.addEventListener('click', function() {
            exportMenu.classList.remove('show');
        });
        
        exportMenu.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    }
    
    // Actions groupées
    const bulkActionSelect = document.getElementById('bulkActionSelect');
    const applyBulkAction = document.getElementById('applyBulkAction');
    
    if (applyBulkAction) {
        applyBulkAction.addEventListener('click', function() {
            const action = bulkActionSelect.value;
            const selected = Array.from(checkboxes).filter(cb => cb.checked).map(cb => cb.value);
            
            if (selected.length === 0) {
                alert('Veuillez sélectionner au moins une commande');
                return;
            }
            
            if (action === 'export') {
                const ids = selected.join(',');
                window.location.href = `/ventes/commandes/exporter/?format=excel&ids=${ids}`;
            } else if (confirm(`Confirmer cette action sur ${selected.length} commande(s) ?`)) {
                // Créer un formulaire et le soumettre
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/ventes/commandes/action-groupee/`;
                
                const csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = 'csrfmiddlewaretoken';
                csrfInput.value = '{{ csrf_token }}';
                form.appendChild(csrfInput);
                
                const actionInput = document.createElement('input');
                actionInput.type = 'hidden';
                actionInput.name = 'action';
                actionInput.value = action;
                form.appendChild(actionInput);
                
                selected.forEach(id => {
                    const idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = 'commande_ids';
                    idInput.value = id;
                    form.appendChild(idInput);
                });
                
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
});
</script>

<style>
/* ==================== CARTES STATISTIQUES ==================== */
.stat-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: all 0.3s ease;
    overflow: hidden;
}

.stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
}

.stat-card-body {
    padding: 24px;
    display: flex;
    align-items: flex-start;
    gap: 16px;
}

.stat-icon-box {
    width: 60px;
    height: 60px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.stat-icon-box i {
    font-size: 28px;
    color: white;
}

.stat-icon-box.bg-primary { background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); }
.stat-icon-box.bg-success { background: linear-gradient(135deg, #10b981 0%, #34d399 100%); }
.stat-icon-box.bg-warning { background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%); }
.stat-icon-box.bg-info { background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%); }

.stat-content {
    flex: 1;
}

.stat-value {
    font-size: 28px;
    font-weight: 700;
    color: #1e293b;
    line-height: 1.2;
    margin-bottom: 4px;
    word-break: break-word;
    overflow-wrap: break-word;
}

.stat-value-large {
    font-size: 22px;
    letter-spacing: -0.5px;
}

.stat-label {
    font-size: 13px;
    color: #64748b;
    margin-bottom: 8px;
}

.stat-badge .badge {
    padding: 4px 10px;
    font-size: 11px;
    font-weight: 600;
}

.badge-success-soft { background: #dcfce7; color: #166534; }
.badge-warning-soft { background: #fef3c7; color: #92400e; }
.badge-info-soft { background: #dbeafe; color: #1e40af; }
.badge-secondary-soft { background: #f1f5f9; color: #475569; }

/* ==================== CARTE PRINCIPALE ==================== */
.main-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    overflow: hidden;
}

