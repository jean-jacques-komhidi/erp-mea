<!-- templates/ventes/liste_factures.jinja - DESIGN MODERNE VIOLET -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Factures{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- Statistiques en-tête -->
    <div class="row g-4 mb-4">
        {% set total_general = factures|sum(attribute='total') or 0 %}
        {% set total_paye = factures|sum(attribute='montant_paye') or 0 %}
        {% set total_solde = total_general - total_paye %}
        {% set factures_payees = factures|selectattr('statut', 'equalto', 'PAYEE')|list|length %}
        {% set factures_en_retard = factures|selectattr('statut', 'equalto', 'EN_RETARD')|list|length %}
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-primary">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ factures|length }}</div>
                        <div class="stat-label">Factures totales</div>
                        <div class="stat-badge">
                            <span class="badge badge-success-soft">
                                <i class="bi bi-check-circle"></i> {{ factures_payees }} payées
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-success">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value stat-value-large">{{ "{:,.0f}".format(total_general) }}</div>
                        <div class="stat-label">Total factures (FCFA)</div>
                        <div class="stat-badge">
                            <span class="badge badge-info-soft">
                                <i class="bi bi-graph-up"></i> Tous statuts
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value stat-value-large">{{ "{:,.0f}".format(total_solde) }}</div>
                        <div class="stat-label">Solde à recevoir (FCFA)</div>
                        <div class="stat-badge">
                            <span class="badge badge-warning-soft">
                                <i class="bi bi-clock-history"></i> En attente
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-card-body">
                    <div class="stat-icon-box bg-danger">
                        <i class="bi bi-calendar-x"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">{{ factures_en_retard }}</div>
                        <div class="stat-label">Factures en retard</div>
                        <div class="stat-badge">
                            <span class="badge badge-danger-soft">
                                <i class="bi bi-alert-circle"></i> Action requise
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Carte principale du tableau -->
    <div class="main-card">
        <!-- En-tête de la carte -->
        <div class="card-header-modern">
            <div class="header-left">
                <div class="header-icon-box">
                    <i class="bi bi-file-earmark-text"></i>
                </div>
                <div>
                    <h5 class="header-title">Gestion des factures</h5>
                    <p class="header-subtitle">Suivez vos factures clients et paiements</p>
                </div>
            </div>
            <div class="header-right">
                <!-- Recherche avancée -->
                <form method="get" class="search-form" id="filtreForm">
                    <div class="search-input-group">
                        <i class="bi bi-search search-icon"></i>
                        <input type="text" 
                               name="recherche" 
                               value="{{ recherche }}" 
                               placeholder="Rechercher par numéro, client..." 
                               class="search-input">
                        {% if recherche %}
                        <a href="?" class="search-clear">
                            <i class="bi bi-x-circle"></i>
                        </a>
                        {% endif %}
                    </div>
                </form>
                
                <!-- Boutons d'action -->
                <div class="action-buttons">
                    <!-- Filtre statut -->
                    <div class="filter-dropdown">
                        <select name="statut" class="form-select-modern" form="filtreForm" onchange="document.getElementById('filtreForm').submit()">
                            <option value="">Tous les statuts</option>
                            {% for value, label in statuts %}
                            <option value="{{ value }}" {% if filtre_statut == value %}selected{% endif %}>{{ label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    
                    <a href="/ventes/commandes/" class="btn-secondary-modern">
                        <i class="bi bi-cart"></i>
                        <span>Commandes</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Filtres rapides -->
        <div class="filters-bar">
            <div class="filters-group">
                <button class="filter-chip {% if not filtre_statut %}active{% endif %}" onclick="window.location.href='?{% if recherche %}recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-receipt"></i> Toutes ({{ factures|length }})
                </button>
                <button class="filter-chip {% if filtre_statut == 'BROUILLON' %}active{% endif %}" onclick="window.location.href='?statut=BROUILLON{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-pencil"></i> Brouillons
                </button>
                <button class="filter-chip {% if filtre_statut == 'ENVOYEE' %}active{% endif %}" onclick="window.location.href='?statut=ENVOYEE{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-send"></i> Envoyées
                </button>
                <button class="filter-chip {% if filtre_statut == 'PAYEE' %}active{% endif %}" onclick="window.location.href='?statut=PAYEE{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-check-circle"></i> Payées
                </button>
                <button class="filter-chip {% if filtre_statut == 'EN_RETARD' %}active{% endif %}" onclick="window.location.href='?statut=EN_RETARD{% if recherche %}&recherche={{ recherche }}{% endif %}'">
                    <i class="bi bi-exclamation-triangle"></i> En retard
                </button>
            </div>
            {% if recherche or filtre_statut %}
            <div class="search-result-info">
                <i class="bi bi-funnel"></i>
                Filtres actifs
                {% if filtre_statut %}<span class="badge bg-primary ms-2">{{ filtre_statut }}</span>{% endif %}
                {% if recherche %}<span class="badge bg-secondary ms-2">{{ recherche }}</span>{% endif %}
                <a href="?" class="ms-2">Effacer</a>
            </div>
            {% endif %}
        </div>
        
        <!-- Tableau moderne -->
        <div class="table-container">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th style="width: 150px;">N° Facture</th>
                        <th style="width: 250px;">Client</th>
                        <th style="width: 120px;">Date</th>
                        <th style="width: 120px;">Échéance</th>
                        <th style="width: 140px;" class="text-end">Total</th>
                        <th style="width: 140px;" class="text-end">Payé</th>
                        <th style="width: 140px;" class="text-end">Solde</th>
                        <th style="width: 130px;">Statut</th>
                        <th style="width: 140px;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for facture in factures %}
                    <tr class="table-row-hover">
                        <td>
                            <div class="facture-numero">{{ facture.numero_facture }}</div>
                        </td>
                        <td>
                            <div class="client-cell">
                                <div class="client-avatar">
                                    {{ facture.client.nom[0]|upper if facture.client.nom else 'C' }}
                                </div>
                                <div class="client-info">
                                    <div class="client-name">{{ facture.client.nom }}</div>
                                    {% if facture.commande_vente %}
                                    <div class="client-code">
                                        <i class="bi bi-cart"></i>{{ facture.commande_vente.numero_commande }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="date-cell">
                                <i class="bi bi-calendar3"></i>
                                {{ facture.date_creation.strftime('%d/%m/%Y') if facture.date_creation else '-' }}
                            </div>
                        </td>
                        <td>
                            {% if facture.date_echeance %}
                            <div class="date-cell">
                                <i class="bi bi-calendar-event"></i>
                                {{ facture.date_echeance.strftime('%d/%m/%Y') }}
                                {% if facture.statut == 'EN_RETARD' %}
                                <div class="delay-badge delay-late">
                                    <i class="bi bi-exclamation-triangle"></i> En retard
                                </div>
                                {% endif %}
                            </div>
                            {% else %}
                            <span class="text-muted-modern">Non définie</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <div class="amount-display">
                                {{ "{:,.0f}".format(facture.total) if facture.total else '0' }}
                            </div>
                        </td>
                        <td class="text-end">
                            <div class="amount-display amount-paid">
                                {{ "{:,.0f}".format(facture.montant_paye) if facture.montant_paye else '0' }}
                            </div>
                        </td>
                        <td class="text-end">
                            {% set total = facture.total if facture.total else 0 %}
                            {% set paye = facture.montant_paye if facture.montant_paye else 0 %}
                            {% set solde = total - paye %}
                            <div class="amount-display {% if solde == 0 %}amount-success{% else %}amount-danger{% endif %}">
                                {{ "{:,.0f}".format(solde) }}
                            </div>
                        </td>
                        <td>
                            {% if facture.statut == 'PAYEE' %}
                            <span class="status-badge status-paid">
                                <span class="status-dot"></span>
                                Payée
                            </span>
                            {% elif facture.statut == 'EN_RETARD' %}
                            <span class="status-badge status-late">
                                <span class="status-dot"></span>
                                En retard
                            </span>
                            {% elif facture.statut == 'BROUILLON' %}
                            <span class="status-badge status-draft">
                                <span class="status-dot"></span>
                                Brouillon
                            </span>
                            {% elif facture.statut == 'ENVOYEE' %}
                            <span class="status-badge status-sent">
                                <span class="status-dot"></span>
                                Envoyée
                            </span>
                            {% else %}
                            <span class="status-badge status-secondary">
                                <span class="status-dot"></span>
                                {{ facture.get_statut_display() }}
                            </span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <div class="action-buttons-table">
                                <a href="/ventes/factures/{{ facture.pk }}/" class="btn-action btn-action-primary" title="Voir les détails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                {% if facture.statut != 'PAYEE' and solde > 0 %}
                                <a href="/ventes/factures/{{ facture.pk }}/paiement/" class="btn-action btn-action-success" title="Enregistrer paiement">
                                    <i class="bi bi-cash"></i>
                                </a>
                                {% endif %}
                                <a href="/ventes/factures/{{ facture.pk }}/envoyer/" class="btn-action btn-action-info" title="Envoyer facture">
                                    <i class="bi bi-send"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="9" class="empty-state">
                            <div class="empty-state-content">
                                <div class="empty-state-icon">
                                    <i class="bi bi-file-earmark-text"></i>
                                </div>
                                <h4 class="empty-state-title">Aucune facture trouvée</h4>
                                <p class="empty-state-text">
                                    {% if recherche or filtre_statut %}
                                    Aucune facture ne correspond à vos critères de recherche
                                    {% else %}
                                    Créez d'abord une commande, puis facturez-la
                                    {% endif %}
                                </p>
                                <a href="/ventes/commandes/" class="btn-primary-modern">
                                    <i class="bi bi-cart"></i>
                                    <span>Voir les commandes</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <!-- Pied de page -->
        {% if factures %}
        <div class="card-footer-modern">
            <div class="footer-left">
                <div class="results-info">
                    Affichage de {{ factures|length }} facture(s)
                </div>
            </div>
            
            <div class="footer-right">
                <div class="summary-badges">
                    <span class="summary-badge summary-badge-primary">
                        <i class="bi bi-receipt"></i>
                        Total: <strong>{{ "{:,.0f}".format(total_general) }} FCFA</strong>
                    </span>
                    <span class="summary-badge summary-badge-success">
                        <i class="bi bi-check-circle"></i>
                        Payé: <strong>{{ "{:,.0f}".format(total_paye) }} FCFA</strong>
                    </span>
                    <span class="summary-badge summary-badge-danger">
                        <i class="bi bi-exclamation-circle"></i>
                        Solde: <strong>{{ "{:,.0f}".format(total_solde) }} FCFA</strong>
                    </span>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit du formulaire de recherche
    let searchTimer;
    const searchInput = document.querySelector('input[name="recherche"]');
    
    if (searchInput) {
        searchInput.addEventListener('input', function(e) {
            clearTimeout(searchTimer);
            searchTimer = setTimeout(() => {
                if (e.target.value.length >= 2 || e.target.value.length === 0) {
                    document.getElementById('filtreForm').submit();
                }
            }, 500);
        });
    }
    
    // Animation hover des lignes
    document.querySelectorAll('.table-row-hover').forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(4px)';
        });
        row.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    });
});
</script>

