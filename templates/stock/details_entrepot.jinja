{% extends "base_principale.jinja" %}

{% block titre_page %}Détails de l'entrepôt - {{ entrepot.nom }}{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête de page -->
    <div class="page-header-details">
        <div class="header-back">
            <a href="{{ url('stock:liste_entrepots') }}" class="btn-back-circle">
                <i class="bi bi-arrow-left"></i>
            </a>
        </div>
        
        <div class="header-content">
            <div class="warehouse-main-info">
                <div class="warehouse-icon-large">
                    {{ entrepot.nom[0]|upper if entrepot.nom else 'E' }}
                </div>
                <div class="warehouse-details">
                    <h2 class="warehouse-title">{{ entrepot.nom }}</h2>
                    <div class="warehouse-meta">
                        <span class="meta-code">
                            <i class="bi bi-upc"></i>
                            {{ entrepot.code }}
                        </span>
                        {% if entrepot.est_actif %}
                        <span class="meta-status status-active">
                            <span class="status-dot"></span>
                            Actif
                        </span>
                        {% else %}
                        <span class="meta-status status-inactive">
                            <span class="status-dot"></span>
                            Inactif
                        </span>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="header-actions">
                <a href="{{ url('stock:modifier_entrepot', pk=entrepot.pk) }}" class="btn-action btn-edit">
                    <i class="bi bi-pencil"></i>
                    <span>Modifier</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Cartes statistiques -->
    <div class="info-cards-grid">
        <div class="info-card info-card-location">
            <div class="info-card-icon">
                <i class="bi bi-geo-alt"></i>
            </div>
            <div class="info-card-content">
                <div class="info-card-label">Localisation</div>
                <div class="info-card-value">
                    {{ entrepot.adresse if entrepot.adresse else "Non renseignée" }}
                </div>
                {% if entrepot.ville %}
                <div class="info-card-extra">{{ entrepot.ville }}</div>
                {% endif %}
            </div>
        </div>

        <div class="info-card info-card-capacity">
            <div class="info-card-icon">
                <i class="bi bi-boxes"></i>
            </div>
            <div class="info-card-content">
                <div class="info-card-label">Capacité</div>
                <div class="info-card-value">
                    {{ entrepot.capacite_totale if entrepot.capacite_totale else "Non définie" }}
                </div>
                {% if entrepot.capacite_totale and entrepot.capacite_utilisee %}
                {% set taux = (entrepot.capacite_utilisee / entrepot.capacite_totale * 100)|round|int %}
                <div class="capacity-bar">
                    <div class="capacity-fill capacity-{{ 'danger' if taux > 90 else ('warning' if taux > 70 else 'success') }}" 
                         style="width: {{ taux }}%"></div>
                </div>
                <div class="info-card-extra">{{ taux }}% utilisée</div>
                {% endif %}
            </div>
        </div>

        <div class="info-card info-card-manager">
            <div class="info-card-icon">
                <i class="bi bi-person-badge"></i>
            </div>
            <div class="info-card-content">
                <div class="info-card-label">Responsable</div>
                <div class="info-card-value">
                    {% if entrepot.responsable %}
                        {{ entrepot.responsable.get_full_name() if entrepot.responsable.get_full_name() else entrepot.responsable.username }}
                    {% else %}
                        Non assigné
                    {% endif %}
                </div>
                {% if entrepot.telephone %}
                <div class="info-card-extra">
                    <i class="bi bi-telephone"></i>
                    {{ entrepot.telephone }}
                </div>
                {% endif %}
            </div>
        </div>

        <div class="info-card info-card-products">
            <div class="info-card-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <div class="info-card-content">
                <div class="info-card-label">Produits stockés</div>
                <div class="info-card-value info-card-big">{{ stock_produits|length }}</div>
                <div class="info-card-extra">Produits différents</div>
            </div>
        </div>
    </div>

    <!-- Stock par produit -->
    <div class="content-card">
        <div class="content-card-header">
            <div class="header-left">
                <div class="header-icon">
                    <i class="bi bi-box-seam"></i>
                </div>
                <div>
                    <h5 class="header-title">Stock par produit</h5>
                    <p class="header-subtitle">{{ stock_produits|length }} produit(s) en stock</p>
                </div>
            </div>
            <div class="header-right">
                <button class="btn-export">
                    <i class="bi bi-download"></i>
                    <span>Exporter</span>
                </button>
            </div>
        </div>
        
        <div class="content-card-body">
            {% if stock_produits %}
            <div class="data-table">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th style="width: 120px;">Code</th>
                            <th>Produit</th>
                            <th style="width: 180px;" class="text-end">Quantité en stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for stock in stock_produits %}
                        <tr>
                            <td>
                                <span class="table-code">{{ stock.produit__code }}</span>
                            </td>
                            <td>
                                <div class="product-cell">
                                    <div class="product-avatar">
                                        {{ stock.produit__nom[0]|upper if stock.produit__nom else 'P' }}
                                    </div>
                                    <div class="product-name">{{ stock.produit__nom }}</div>
                                </div>
                            </td>
                            <td class="text-end">
                                <span class="quantity-badge">{{ stock.quantite_totale }}</span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="empty-state-simple">
                <i class="bi bi-box-seam"></i>
                <h5>Aucun produit en stock</h5>
                <p>Cet entrepôt ne contient actuellement aucun produit</p>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Mouvements récents -->
    <div class="content-card">
        <div class="content-card-header">
            <div class="header-left">
                <div class="header-icon header-icon-movements">
                    <i class="bi bi-arrow-left-right"></i>
                </div>
                <div>
                    <h5 class="header-title">Mouvements récents</h5>
                    <p class="header-subtitle">50 derniers mouvements</p>
                </div>
            </div>
            <div class="header-right">
                <div class="filter-buttons">
                    <button class="filter-btn active" data-filter="tous">Tous</button>
                    <button class="filter-btn" data-filter="entrees">Entrées</button>
                    <button class="filter-btn" data-filter="sorties">Sorties</button>
                </div>
                <a href="{{ url('stock:liste_mouvements') }}?entrepot={{ entrepot.pk }}" class="btn-view-all">
                    <i class="bi bi-eye"></i>
                    <span>Voir tout</span>
                </a>
            </div>
        </div>
        
        <div class="content-card-body">
            {% if mouvements %}
            <div class="data-table">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th style="width: 160px;">Date</th>
                            <th style="width: 140px;">Type</th>
                            <th>Produit</th>
                            <th style="width: 140px;" class="text-end">Quantité</th>
                            <th style="width: 160px;">Utilisateur</th>
                        </tr>
                    </thead>
                    <tbody id="movementsTable">
                        {% for mouvement in mouvements %}
                        <tr data-type="{{ mouvement.type_mouvement }}">
                            <td>
                                <div class="date-cell">
                                    <div class="date-main">
                                        <i class="bi bi-calendar3"></i>
                                        {{ mouvement.date.strftime("%d/%m/%Y") }}
                                    </div>
                                    <div class="date-time">
                                        <i class="bi bi-clock"></i>
                                        {{ mouvement.date.strftime("%H:%M") }}
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if mouvement.type_mouvement == 'entree' %}
                                <span class="type-badge type-entree">
                                    <i class="bi bi-arrow-down-circle"></i>
                                    Entrée
                                </span>
                                {% elif mouvement.type_mouvement == 'sortie' %}
                                <span class="type-badge type-sortie">
                                    <i class="bi bi-arrow-up-circle"></i>
                                    Sortie
                                </span>
                                {% elif mouvement.type_mouvement == 'ajustement' %}
                                <span class="type-badge type-ajustement">
                                    <i class="bi bi-arrow-repeat"></i>
                                    Ajustement
                                </span>
                                {% else %}
                                <span class="type-badge type-other">
                                    {{ mouvement.get_type_mouvement_display() }}
                                </span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="product-cell">
                                    <div class="product-avatar">
                                        {{ mouvement.produit.nom[0]|upper if mouvement.produit.nom else 'P' }}
                                    </div>
                                    <div class="product-info">
                                        <div class="product-name">{{ mouvement.produit.nom }}</div>
                                        <div class="product-code-small">{{ mouvement.produit.code }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end">
                                {% if mouvement.quantite > 0 %}
                                <span class="qty-badge qty-positive">
                                    <i class="bi bi-plus-circle"></i>
                                    {{ mouvement.quantite }}
                                </span>
                                {% else %}
                                <span class="qty-badge qty-negative">
                                    <i class="bi bi-dash-circle"></i>
                                    {{ mouvement.quantite }}
                                </span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="user-cell">
                                    <div class="user-avatar">
                                        {{ mouvement.utilisateur.username[0]|upper }}
                                    </div>
                                    <div class="user-name">{{ mouvement.utilisateur.username }}</div>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="empty-state-simple">
                <i class="bi bi-arrow-left-right"></i>
                <h5>Aucun mouvement enregistré</h5>
                <p>Aucun mouvement de stock n'a été enregistré pour cet entrepôt</p>
                <a href="{{ url('stock:creer_mouvement_stock') }}" class="btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    <span>Créer un mouvement</span>
                </a>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Filtrage des mouvements
    const filterButtons = document.querySelectorAll('.filter-btn');
    const rows = document.querySelectorAll('#movementsTable tr');
    
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Remove active from all buttons
            filterButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            
            const filter = this.dataset.filter;
            
            rows.forEach(row => {
                const type = row.dataset.type;
                
                if (filter === 'tous') {
                    row.style.display = '';
                } else if (filter === 'entrees' && type === 'entree') {
                    row.style.display = '';
                } else if (filter === 'sorties' && type === 'sortie') {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
});
</script>

