{% extends "base_principale.jinja" %}

{% block titre_page %}Liste des produits{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-t√™te de page -->
    <div class="page-header">
        <div class="page-header-left">
            <h4 class="page-title">üì¶ Gestion des Produits</h4>
            <p class="page-subtitle">Catalogue complet de vos produits en stock</p>
        </div>
        <div class="page-header-right">
            <a href="/stock/produits/nouveau/" class="btn-primary">
                <i class="bi bi-plus-circle"></i>
                <span>Nouveau produit</span>
            </a>
        </div>
    </div>

    <!-- Cartes de statistiques -->
    <div class="stats-grid">
        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ produits|length|default(0) }}</div>
                <div class="stat-label">Produits totaux</div>
                <div class="stat-badge">{{ "{:,.0f}".format(valeur_stock|default(0)) }} FCFA</div>
            </div>
        </div>

        <div class="stat-card stat-success">
            <div class="stat-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ produits_en_stock|default(0) }}</div>
                <div class="stat-label">En stock</div>
                <div class="stat-badge">Disponibles</div>
            </div>
        </div>

        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ produits_stock_bas|default(0) }}</div>
                <div class="stat-label">Stock bas</div>
                <div class="stat-badge">√Ä r√©approvisionner</div>
            </div>
        </div>

        <div class="stat-card stat-danger">
            <div class="stat-icon">
                <i class="bi bi-x-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ produits_rupture|default(0) }}</div>
                <div class="stat-label">En rupture</div>
                <div class="stat-badge">Urgent</div>
            </div>
        </div>
    </div>

    <!-- Carte principale -->
    <div class="main-card">
        <!-- Barre de filtres et recherche -->
        <div class="filters-bar">
            <form method="get" class="filters-form">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" 
                           name="recherche" 
                           value="{{ recherche }}" 
                           placeholder="Rechercher un produit..."
                           class="search-input">
                </div>

                <select name="categorie" class="filter-select" onchange="this.form.submit()">
                    <option value="">üìÅ Toutes cat√©gories</option>
                    {% for categorie in categories %}
                    <option value="{{ categorie.id }}" {% if categorie_selectionnee == categorie.id|string %}selected{% endif %}>
                        {{ categorie.nom }}
                    </option>
                    {% endfor %}
                </select>

                <button type="submit" class="btn-filter">
                    <i class="bi bi-funnel"></i>
                    <span>Filtrer</span>
                </button>

                {% if recherche or categorie_selectionnee %}
                <a href="?" class="btn-clear">
                    <i class="bi bi-x-circle"></i>
                    <span>Effacer</span>
                </a>
                {% endif %}
            </form>

            <!-- Filtres actifs -->
            {% if recherche or categorie_selectionnee %}
            <div class="active-filters">
                <span class="active-filters-label">Filtres actifs:</span>
                {% if categorie_selectionnee %}
                <span class="filter-chip chip-info">
                    <i class="bi bi-folder"></i>
                    {{ categorie_selectionnee_nom|default('Cat√©gorie') }}
                </span>
                {% endif %}
                {% if recherche %}
                <span class="filter-chip chip-secondary">
                    <i class="bi bi-search"></i>
                    "{{ recherche }}"
                </span>
                {% endif %}
            </div>
            {% endif %}
        </div>

        <!-- Tableau des produits -->
        <div class="table-container">
            <table class="products-table">
                <thead>
                    <tr>
                        <th style="width: 40px;">
                            <input type="checkbox" id="selectAll" class="checkbox-modern">
                        </th>
                        <th style="width: 100px;">Code</th>
                        <th style="min-width: 200px;">Produit</th>
                        <th style="width: 140px;">Cat√©gorie</th>
                        <th style="width: 120px;">Prix Achat</th>
                        <th style="width: 120px;">Prix Vente</th>
                        <th style="width: 140px;">Stock</th>
                        <th style="width: 100px;">Seuil</th>
                        <th style="width: 120px;">Statut</th>
                        <th style="width: 140px;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in produits %}
                    <tr class="product-row">
                        <td>
                            <input type="checkbox" name="produit_ids" value="{{ produit.pk }}" class="checkbox-modern">
                        </td>
                        <td>
                            <div class="product-code">{{ produit.code|truncate(10, True, '...') }}</div>
                        </td>
                        <td>
                            <div class="product-info">
                                {% if produit.image %}
                                <img src="{{ produit.image.url }}" alt="{{ produit.nom }}" class="product-avatar">
                                {% else %}
                                <div class="product-avatar product-avatar-placeholder">
                                    {{ produit.nom[0]|upper if produit.nom else 'P' }}
                                </div>
                                {% endif %}
                                <div class="product-details">
                                    <div class="product-name">{{ produit.nom|truncate(30) }}</div>
                                    {% if produit.reference_fournisseur %}
                                    <div class="product-ref">R√©f: {{ produit.reference_fournisseur|truncate(20) }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if produit.categorie %}
                            <div class="category-badge">
                                <i class="bi bi-folder"></i>
                                {{ produit.categorie.nom|truncate(15) }}
                            </div>
                            {% else %}
                            <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="price-display">
                                <div class="price-value">{{ "{:,.0f}".format(produit.prix_achat) }}</div>
                                <div class="price-currency">FCFA</div>
                            </div>
                        </td>
                        <td>
                            <div class="price-display price-sale">
                                <div class="price-value">{{ "{:,.0f}".format(produit.prix_vente) }}</div>
                                <div class="price-currency">FCFA</div>
                            </div>
                            {% if produit.marge %}
                            <div class="margin-badge">+{{ produit.marge }}%</div>
                            {% endif %}
                        </td>
                        <td>
                            {% set stock_qte = produit.stock_actuel_qte or 0 %}
                            {% set stock_max = produit.stock_max or 100 %}
                            {% set stock_percentage = (stock_qte / stock_max * 100) if stock_max > 0 else 0 %}
                            
                            <div class="stock-display">
                                <div class="stock-progress">
                                    <div class="stock-progress-bar 
                                        {% if stock_qte <= (produit.seuil_reapprovisionnement or 0) %}bar-danger
                                        {% elif stock_qte <= (produit.stock_min or 0) %}bar-warning
                                        {% else %}bar-success{% endif %}"
                                        style="width: {{ stock_percentage|int }}%">
                                    </div>
                                </div>
                                <div class="stock-value 
                                    {% if stock_qte <= (produit.seuil_reapprovisionnement or 0) %}text-danger
                                    {% elif stock_qte <= (produit.stock_min or 0) %}text-warning
                                    {% else %}text-success{% endif %}">
                                    {{ stock_qte }}
                                    {% if produit.unite_mesure %}
                                    <span class="stock-unit">{{ produit.unite_mesure|truncate(3, True, '') }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="threshold-display">
                                <div class="threshold-value">{{ produit.seuil_reapprovisionnement or '-' }}</div>
                                <div class="threshold-label">Min: {{ produit.stock_min or '-' }}</div>
                            </div>
                        </td>
                        <td>
                            {% set stock_qte = produit.stock_actuel_qte or 0 %}
                            {% if stock_qte <= (produit.seuil_reapprovisionnement or 0) %}
                            <span class="status-badge status-danger">
                                <span class="status-dot"></span>
                                Rupture
                            </span>
                            {% elif stock_qte <= (produit.stock_min or 0) %}
                            <span class="status-badge status-warning">
                                <span class="status-dot"></span>
                                Bas
                            </span>
                            {% else %}
                            <span class="status-badge status-success">
                                <span class="status-dot"></span>
                                OK
                            </span>
                            {% endif %}
                            
                            {% if produit.est_actif == False %}
                            <span class="status-badge status-secondary mt-1">
                                <i class="bi bi-pause-circle"></i>
                                Inactif
                            </span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <div class="action-buttons">
                                <a href="/stock/produits/{{ produit.pk }}/" class="action-btn action-btn-view" title="Voir d√©tails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/stock/produits/{{ produit.pk }}/modifier/" class="action-btn action-btn-edit" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/stock/produits/{{ produit.pk }}/supprimer/" class="action-btn action-btn-delete" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="10" class="empty-state">
                            <div class="empty-state-content">
                                <i class="bi bi-box-seam"></i>
                                <h5>Aucun produit trouv√©</h5>
                                <p>
                                    {% if recherche or categorie_selectionnee %}
                                    Aucun produit ne correspond √† vos crit√®res de recherche.
                                    {% else %}
                                    Commencez par ajouter votre premier produit.
                                    {% endif %}
                                </p>
                                <a href="/stock/produits/nouveau/" class="btn-primary">
                                    <i class="bi bi-plus-circle"></i>
                                    <span>Ajouter un produit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Footer avec actions et pagination -->
        <div class="table-footer">
            <div class="bulk-actions">
                <select class="bulk-select">
                    <option value="">Actions group√©es</option>
                    <option value="export">üìä Exporter s√©lection</option>
                    <option value="activate">‚úÖ Activer produits</option>
                    <option value="deactivate">‚è∏Ô∏è D√©sactiver produits</option>
                    <option value="inventory">üìã Faire inventaire</option>
                    <option value="delete">üóëÔ∏è Supprimer produits</option>
                </select>
                <button class="btn-apply" id="applyBulkAction">Appliquer</button>
            </div>

            <div class="pagination-info">
                <span class="info-text">
                    {% if page_obj %}
                    Affichage {{ page_obj.start_index }} √† {{ page_obj.end_index }} sur {{ page_obj.paginator.count }}
                    {% else %}
                    Total: {{ produits|length }} produits
                    {% endif %}
                </span>
            </div>

            {% if page_obj and page_obj.paginator.num_pages > 1 %}
            <div class="pagination">
                {% if page_obj.has_previous %}
                <a href="?page={{ page_obj.previous_page_number }}{% if recherche %}&recherche={{ recherche }}{% endif %}{% if categorie_selectionnee %}&categorie={{ categorie_selectionnee }}{% endif %}" 
                   class="page-btn">
                    <i class="bi bi-chevron-left"></i>
                </a>
                {% else %}
                <span class="page-btn page-btn-disabled">
                    <i class="bi bi-chevron-left"></i>
                </span>
                {% endif %}

                {% for num in range(1, page_obj.paginator.num_pages + 1) %}
                    {% if num <= 3 or num == page_obj.paginator.num_pages or num == page_obj.number %}
                        {% if num == page_obj.number %}
                        <span class="page-btn page-btn-active">{{ num }}</span>
                        {% else %}
                        <a href="?page={{ num }}{% if recherche %}&recherche={{ recherche }}{% endif %}{% if categorie_selectionnee %}&categorie={{ categorie_selectionnee }}{% endif %}" 
                           class="page-btn">{{ num }}</a>
                        {% endif %}
                    {% endif %}
                {% endfor %}

                {% if page_obj.has_next %}
                <a href="?page={{ page_obj.next_page_number }}{% if recherche %}&recherche={{ recherche }}{% endif %}{% if categorie_selectionnee %}&categorie={{ categorie_selectionnee }}{% endif %}" 
                   class="page-btn">
                    <i class="bi bi-chevron-right"></i>
                </a>
                {% else %}
                <span class="page-btn page-btn-disabled">
                    <i class="bi bi-chevron-right"></i>
                </span>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // S√©lection multiple
    const selectAll = document.getElementById('selectAll');
    const checkboxes = document.querySelectorAll('input[name="produit_ids"]');
    
    if (selectAll) {
        selectAll.addEventListener('change', function() {
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    }
    
    // Actions group√©es
    const applyBtn = document.getElementById('applyBulkAction');
    const bulkSelect = document.querySelector('.bulk-select');
    
    if (applyBtn && bulkSelect) {
        applyBtn.addEventListener('click', function() {
            const action = bulkSelect.value;
            const selected = Array.from(checkboxes).filter(cb => cb.checked);
            
            if (!action) {
                alert('‚ö†Ô∏è Veuillez s√©lectionner une action');
                return;
            }
            
            if (selected.length === 0) {
                alert('‚ö†Ô∏è Veuillez s√©lectionner au moins un produit');
                return;
            }
            
            const count = selected.length;
            let message = '';
            
            switch(action) {
                case 'export':
                    message = `üìä Exporter ${count} produit(s) s√©lectionn√©(s) ?`;
                    break;
                case 'activate':
                    message = `‚úÖ Activer ${count} produit(s) ?`;
                    break;
                case 'deactivate':
                    message = `‚è∏Ô∏è D√©sactiver ${count} produit(s) ?`;
                    break;
                case 'inventory':
                    message = `üìã Lancer l'inventaire pour ${count} produit(s) ?`;
                    break;
                case 'delete':
                    message = `üóëÔ∏è ATTENTION ! Supprimer ${count} produit(s) ?\n\nCette action est IRR√âVERSIBLE !`;
                    break;
            }
            
            if (confirm(message)) {
                alert(`Action "${action}" appliqu√©e √† ${count} produit(s)`);
                // TODO: Impl√©menter l'action c√¥t√© serveur
            }
        });
    }
});
</script>

