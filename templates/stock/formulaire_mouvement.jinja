{% block titre_page %}{{ action|default('Créer') }} un mouvement de stock{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête de page -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="{{ url('stock:liste_mouvements') }}" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">Nouveau mouvement de stock</h4>
                <p class="page-subtitle">
                    Enregistrer une entrée, sortie ou ajustement de stock
                </p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form method="post" id="mouvementForm">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                
                <div class="row g-4">
                    <!-- Colonne principale (gauche) -->
                    <div class="col-lg-8">
                        <!-- Produit et Localisation -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-primary">
                                    <i class="bi bi-box-seam"></i>
                                </div>
                                <h6>Produit et localisation</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-box"></i>
                                                Produit
                                                <span class="required">*</span>
                                            </label>
                                            {{ formulaire.produit }}
                                            {% if formulaire.produit.errors %}
                                            <div class="error-message">{{ formulaire.produit.errors|join(", ") }}</div>
                                            {% endif %}
                                            <div class="form-help">Sélectionnez le produit concerné</div>
                                            
                                            <!-- Affichage du stock actuel -->
                                            <div id="stockActuel" style="display: none; margin-top: 12px;">
                                                <div class="stock-alert">
                                                    <i class="bi bi-info-circle"></i>
                                                    <div>
                                                        <div class="stock-label">Stock actuel</div>
                                                        <div class="stock-value" id="stockValue">-</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-building"></i>
                                                Entrepôt
                                                <span class="required">*</span>
                                            </label>
                                            {{ formulaire.entrepot }}
                                            {% if formulaire.entrepot.errors %}
                                            <div class="error-message">{{ formulaire.entrepot.errors|join(", ") }}</div>
                                            {% endif %}
                                            <div class="form-help">Lieu de stockage</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Détails du mouvement -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-success">
                                    <i class="bi bi-arrow-repeat"></i>
                                </div>
                                <h6>Détails du mouvement</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-arrow-left-right"></i>
                                                Type de mouvement
                                                <span class="required">*</span>
                                            </label>
                                            {{ formulaire.type_mouvement }}
                                            {% if formulaire.type_mouvement.errors %}
                                            <div class="error-message">{{ formulaire.type_mouvement.errors|join(", ") }}</div>
                                            {% endif %}
                                            <div class="form-help" id="typeHelp">
                                                Sélectionnez le type de mouvement
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-calculator"></i>
                                                Quantité
                                                <span class="required">*</span>
                                            </label>
                                            <div class="quantity-input-wrapper">
                                                <button class="quantity-btn decrease" type="button" id="decrementBtn">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                {{ formulaire.quantite }}
                                                <button class="quantity-btn increase" type="button" id="incrementBtn">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                            {% if formulaire.quantite.errors %}
                                            <div class="error-message">{{ formulaire.quantite.errors|join(", ") }}</div>
                                            {% endif %}
                                            <div class="form-help" id="quantiteHelp">
                                                Quantité à déplacer
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Informations complémentaires -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-info">
                                    <i class="bi bi-file-text"></i>
                                </div>
                                <h6>Informations complémentaires</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-hash"></i>
                                                Référence / N° de document
                                            </label>
                                            {{ formulaire.reference }}
                                            {% if formulaire.reference.errors %}
                                            <div class="error-message">{{ formulaire.reference.errors|join(", ") }}</div>
                                            {% endif %}
                                            <div class="form-help">N° de commande, bon de livraison, etc.</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-12">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-pencil"></i>
                                                Notes / Commentaires
                                            </label>
                                            {{ formulaire.notes }}
                                            {% if formulaire.notes.errors %}
                                            <div class="error-message">{{ formulaire.notes.errors|join(", ") }}</div>
                                            {% endif %}
                                            <div class="form-help">Informations additionnelles sur ce mouvement</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Colonne latérale (droite) -->
                    <div class="col-lg-4">
                        <!-- Récapitulatif du mouvement -->
                        <div class="preview-card" id="recapMouvement" style="display: none;">
                            <div class="preview-header">
                                <i class="bi bi-check-circle"></i>
                                <h6>Récapitulatif</h6>
                            </div>
                            <div class="preview-body">
                                <div class="recap-content">
                                    <div class="recap-item">
                                        <div class="recap-label">Action</div>
                                        <div class="recap-value" id="recapAction">-</div>
                                    </div>
                                    <div class="recap-divider"></div>
                                    <div class="recap-item">
                                        <div class="recap-label">Nouveau stock</div>
                                        <div class="recap-value" id="recapNouveauStock">
                                            <span class="text-muted">Calculé après validation</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Aide contextuelle -->
