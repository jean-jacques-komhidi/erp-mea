                                <div class="tip-item">
                                    <i class="bi bi-arrow-down-circle text-success"></i>
                                    <p><strong>Entrée :</strong> Réception de marchandises, production, retour client</p>
                                </div>
                                <div class="tip-item">
                                    <i class="bi bi-arrow-up-circle text-danger"></i>
                                    <p><strong>Sortie :</strong> Vente, livraison, consommation, retour fournisseur</p>
                                </div>
                                <div class="tip-item">
                                    <i class="bi bi-arrow-repeat text-warning"></i>
                                    <p><strong>Ajustement :</strong> Correction d'inventaire, perte, casse</p>
                                </div>
                                <div class="tip-item">
                                    <i class="bi bi-arrow-left-right text-info"></i>
                                    <p><strong>Transfert :</strong> Déplacement entre entrepôts</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions du formulaire -->
                <div class="form-actions-bar">
                    <div class="actions-left">
                        <i class="bi bi-exclamation-circle"></i>
                        <span>Les champs marqués d'un * sont obligatoires</span>
                    </div>
                    <div class="actions-right">
                        <a href="{{ url('stock:liste_mouvements') }}" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler</span>
                        </a>
                        <button type="submit" class="btn-submit" id="submitBtn">
                            <i class="bi bi-save"></i>
                            <span>Enregistrer le mouvement</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('mouvementForm');
    const submitBtn = document.getElementById('submitBtn');
    const produitSelect = document.getElementById('id_produit');
    const typeMouvementSelect = document.getElementById('id_type_mouvement');
    const quantiteInput = document.getElementById('id_quantite');
    const incrementBtn = document.getElementById('incrementBtn');
    const decrementBtn = document.getElementById('decrementBtn');
    
    // Boutons +/-
    if (incrementBtn && quantiteInput) {
        incrementBtn.addEventListener('click', function() {
            const currentValue = parseInt(quantiteInput.value) || 0;
            quantiteInput.value = currentValue + 1;
            updateRecap();
        });
    }
    
    if (decrementBtn && quantiteInput) {
        decrementBtn.addEventListener('click', function() {
            const currentValue = parseInt(quantiteInput.value) || 0;
            if (currentValue > 0) {
                quantiteInput.value = currentValue - 1;
                updateRecap();
            }
        });
    }
    
    // Mise à jour du texte d'aide selon le type de mouvement
    if (typeMouvementSelect) {
        typeMouvementSelect.addEventListener('change', function() {
            const typeHelp = document.getElementById('typeHelp');
            const quantiteHelp = document.getElementById('quantiteHelp');
            
            switch(this.value) {
                case 'entree':
                    typeHelp.innerHTML = '<i class="bi bi-arrow-down-circle text-success me-1"></i>Stock va augmenter';
                    quantiteHelp.innerHTML = '<i class="bi bi-plus-circle text-success me-1"></i>Quantité à ajouter au stock';
                    break;
                case 'sortie':
                    typeHelp.innerHTML = '<i class="bi bi-arrow-up-circle text-danger me-1"></i>Stock va diminuer';
                    quantiteHelp.innerHTML = '<i class="bi bi-dash-circle text-danger me-1"></i>Quantité à retirer du stock';
                    break;
                case 'ajustement':
                    typeHelp.innerHTML = '<i class="bi bi-arrow-repeat text-warning me-1"></i>Correction du stock';
                    quantiteHelp.innerHTML = '<i class="bi bi-pencil text-warning me-1"></i>Quantité d\'ajustement (+ ou -)';
                    break;
                case 'transfert':
                    typeHelp.innerHTML = '<i class="bi bi-arrow-left-right text-info me-1"></i>Déplacement entre entrepôts';
                    quantiteHelp.innerHTML = '<i class="bi bi-boxes text-info me-1"></i>Quantité à transférer';
                    break;
                default:
                    typeHelp.textContent = 'Sélectionnez le type de mouvement';
                    quantiteHelp.textContent = 'Quantité à déplacer';
            }
            
            updateRecap();
        });
    }
    
    // Mise à jour du récapitulatif
    function updateRecap() {
        const type = typeMouvementSelect ? typeMouvementSelect.value : '';
        const quantite = quantiteInput ? parseInt(quantiteInput.value) || 0 : 0;
        const recapDiv = document.getElementById('recapMouvement');
        const recapAction = document.getElementById('recapAction');
        
        if (type && quantite > 0 && recapDiv) {
            recapDiv.style.display = 'block';
            
            let actionHTML = '';
            
            switch(type) {
                case 'entree':
                    actionHTML = `<span class="badge-success">+ ${quantite} unité(s)</span>`;
                    break;
                case 'sortie':
                    actionHTML = `<span class="badge-danger">- ${quantite} unité(s)</span>`;
                    break;
                case 'ajustement':
                    actionHTML = `<span class="badge-warning">±${quantite} unité(s)</span>`;
                    break;
                case 'transfert':
                    actionHTML = `<span class="badge-info">↔ ${quantite} unité(s)</span>`;
                    break;
            }
            
            recapAction.innerHTML = actionHTML;
        } else {
            if (recapDiv) {
                recapDiv.style.display = 'none';
            }
        }
    }
    
    // Écouter les changements
    if (quantiteInput) {
        quantiteInput.addEventListener('input', updateRecap);
    }
    
    // Validation du formulaire
    if (form && submitBtn) {
        form.addEventListener('submit', function(e) {
            const produit = produitSelect ? produitSelect.value : '';
            const entrepot = document.getElementById('id_entrepot') ? document.getElementById('id_entrepot').value : '';
            const type = typeMouvementSelect ? typeMouvementSelect.value : '';
            const quantite = quantiteInput ? parseInt(quantiteInput.value) || 0 : 0;
            
            if (!produit) {
                e.preventDefault();
                alert('⚠️ Veuillez sélectionner un produit');
                produitSelect.focus();
                return;
            }
            
            if (!entrepot) {
                e.preventDefault();
                alert('⚠️ Veuillez sélectionner un entrepôt');
                document.getElementById('id_entrepot').focus();
                return;
            }
            
            if (!type) {
                e.preventDefault();
                alert('⚠️ Veuillez sélectionner le type de mouvement');
                typeMouvementSelect.focus();
                return;
            }
            
            if (quantite <= 0) {
                e.preventDefault();
                alert('⚠️ La quantité doit être supérieure à 0');
                quantiteInput.focus();
                return;
            }
            
            // Désactiver le bouton pour éviter les doubles soumissions
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span><span>Enregistrement...</span>';
        });
    }
    
    // Confirmation avant d'annuler si le formulaire a été modifié
    let formModified = false;
    const formInputs = form.querySelectorAll('input, select, textarea');
    
    formInputs.forEach(input => {
        input.addEventListener('change', function() {
            formModified = true;
        });
    });
    
    const cancelBtn = document.querySelector('.btn-cancel');
    if (cancelBtn) {
        cancelBtn.addEventListener('click', function(e) {
            if (formModified) {
                if (!confirm('⚠️ Vous avez des modifications non enregistrées.\n\nVoulez-vous vraiment quitter ?')) {
                    e.preventDefault();
                }
            }
        });
    }
});
</script>

