                        <td>
                            <input type="checkbox" name="mouvement_ids" value="{{ mouvement.pk }}" class="checkbox-modern">
                        </td>
                        <td>
                            <div class="date-cell">
                                <div class="date-main">{{ mouvement.date.strftime('%d/%m/%Y') }}</div>
                                <div class="date-time">{{ mouvement.date.strftime('%H:%M') }}</div>
                            </div>
                        </td>
                        <td>
                            {% if mouvement.type_mouvement == 'ENTREE' %}
                            <span class="movement-badge movement-entree">
                                <i class="bi bi-box-arrow-in-right"></i>
                                Entr√©e
                            </span>
                            {% elif mouvement.type_mouvement == 'SORTIE' %}
                            <span class="movement-badge movement-sortie">
                                <i class="bi bi-box-arrow-left"></i>
                                Sortie
                            </span>
                            {% elif mouvement.type_mouvement == 'AJUSTEMENT' %}
                            <span class="movement-badge movement-ajustement">
                                <i class="bi bi-gear"></i>
                                Ajustement
                            </span>
                            {% elif mouvement.type_mouvement == 'TRANSFERT' %}
                            <span class="movement-badge movement-transfert">
                                <i class="bi bi-arrow-left-right"></i>
                                Transfert
                            </span>
                            {% else %}
                            <span class="movement-badge movement-other">
                                {{ mouvement.get_type_mouvement_display() }}
                            </span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="product-cell">
                                {% if mouvement.produit and mouvement.produit.image %}
                                <img src="{{ mouvement.produit.image.url }}" alt="{{ mouvement.produit.nom }}" class="product-image">
                                {% else %}
                                <div class="product-avatar">
                                    {% if mouvement.produit and mouvement.produit.nom %}
                                        {{ mouvement.produit.nom[0]|upper }}
                                    {% else %}
                                        P
                                    {% endif %}
                                </div>
                                {% endif %}
                                <div class="product-info">
                                    <div class="product-name">
                                        {% if mouvement.produit %}
                                            {{ mouvement.produit.nom|truncate(25) }}
                                        {% else %}
                                            <span class="text-muted">Produit supprim√©</span>
                                        {% endif %}
                                    </div>
                                    {% if mouvement.produit and mouvement.produit.code %}
                                    <div class="product-code">{{ mouvement.produit.code|truncate(20) }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if mouvement.entrepot %}
                            <div class="warehouse-badge">
                                <i class="bi bi-building"></i>
                                {{ mouvement.entrepot.nom|truncate(18) }}
                            </div>
                            {% else %}
                            <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="quantity-cell">
                                {% if mouvement.type_mouvement == 'ENTREE' %}
                                <span class="qty-badge qty-positive">
                                    <i class="bi bi-plus-circle"></i>
                                    {{ mouvement.quantite }}
                                </span>
                                {% elif mouvement.type_mouvement == 'SORTIE' %}
                                <span class="qty-badge qty-negative">
                                    <i class="bi bi-dash-circle"></i>
                                    {{ mouvement.quantite }}
                                </span>
                                {% else %}
                                <span class="qty-badge qty-neutral">
                                    <i class="bi bi-arrow-repeat"></i>
                                    {{ mouvement.quantite }}
                                </span>
                                {% endif %}
                                {% if mouvement.produit and mouvement.produit.unite_mesure %}
                                <div class="qty-unit">{{ mouvement.produit.unite_mesure|truncate(5, True, '') }}</div>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            {% if mouvement.reference %}
                            <div class="reference-badge" title="{{ mouvement.reference }}">
                                {{ mouvement.reference|truncate(18) }}
                            </div>
                            {% else %}
                            <span class="text-muted">-</span>
                            {% endif %}
