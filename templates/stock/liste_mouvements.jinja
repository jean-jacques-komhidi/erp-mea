        <div class="stat-card stat-danger">
            <div class="stat-icon">
                <i class="bi bi-box-arrow-left"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ mouvements|selectattr('type_mouvement', 'equalto', 'SORTIE')|list|length|default(0) }}</div>
