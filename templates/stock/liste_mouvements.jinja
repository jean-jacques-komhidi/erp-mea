        <div class="table-footer">
            <div class="bulk-actions">
                <select class="bulk-select" id="bulkActionSelect">
                    <option value="">Actions group√©es</option>
                    <option value="export">üìä Exporter s√©lection</option>
                    <option value="print">üñ®Ô∏è Imprimer mouvements</option>
                    <option value="cancel">‚ùå Annuler mouvements</option>
                    <option value="report">üìÑ G√©n√©rer rapport</option>
                </select>
                <button class="btn-apply" id="applyBulkAction">Appliquer</button>
            </div>

            <div class="pagination-info">
                <span class="info-text">
                    {% if page_obj %}
                    {{ page_obj.start_index }} - {{ page_obj.end_index }} sur {{ page_obj.paginator.count }}
                    {% else %}
                    Total: {{ mouvements|length }} mouvement(s)
                    {% endif %}
                </span>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // S√©lection multiple
    const selectAll = document.getElementById('selectAll');
    const checkboxes = document.querySelectorAll('input[name="mouvement_ids"]');
    
    if (selectAll) {
        selectAll.addEventListener('change', function() {
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    }
    
    // Actions group√©es
    const applyBtn = document.getElementById('applyBulkAction');
    const bulkSelect = document.getElementById('bulkActionSelect');
    
    if (applyBtn && bulkSelect) {
        applyBtn.addEventListener('click', function() {
            const action = bulkSelect.value;
            const selected = Array.from(checkboxes).filter(cb => cb.checked);
            
            if (!action) {
                alert('‚ö†Ô∏è Veuillez s√©lectionner une action');
                return;
            }
            
            if (selected.length === 0) {
                alert('‚ö†Ô∏è Veuillez s√©lectionner au moins un mouvement');
                return;
            }
            
            const count = selected.length;
            let message = '';
            
            switch(action) {
                case 'export':
                    message = `üìä Exporter ${count} mouvement(s) ?`;
                    break;
                case 'print':
                    message = `üñ®Ô∏è Imprimer ${count} mouvement(s) ?`;
                    break;
                case 'cancel':
                    message = `‚ùå ATTENTION ! Annuler ${count} mouvement(s) ?\n\nCette action est IRR√âVERSIBLE !`;
                    break;
                case 'report':
                    message = `üìÑ G√©n√©rer un rapport pour ${count} mouvement(s) ?`;
                    break;
            }
            
            if (confirm(message)) {
                alert(`Action "${action}" appliqu√©e √† ${count} mouvement(s)`);
                // TODO: Impl√©menter l'action c√¥t√© serveur
            }
        });
    }
});
</script>

