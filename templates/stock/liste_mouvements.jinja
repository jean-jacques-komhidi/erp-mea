                    <option value="">Tous types</option>
                    <option value="ENTREE" {% if type_selectionne == 'ENTREE' %}selected{% endif %}>Entr√©e</option>
                    <option value="SORTIE" {% if type_selectionne == 'SORTIE' %}selected{% endif %}>Sortie</option>
                    <option value="AJUSTEMENT" {% if type_selectionne == 'AJUSTEMENT' %}selected{% endif %}>Ajustement</option>
                    <option value="TRANSFERT" {% if type_selectionne == 'TRANSFERT' %}selected{% endif %}>Transfert</option>
                </select>
                
                <select name="entrepot" class="filter-select" onchange="this.form.submit()">
                    <option value="">Tous entrep√¥ts</option>
                    {% for entrepot in entrepots %}
                    <option value="{{ entrepot.id }}" {% if entrepot_selectionne == entrepot.id|string %}selected{% endif %}>
                        {{ entrepot.nom|truncate(20) }}
                    </option>
                    {% endfor %}
                </select>
                
