                            <div class="action-buttons">
                                <a href="/stock/mouvements/{{ mouvement.pk }}/" class="action-btn action-btn-view" title="Voir d√©tails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/stock/mouvements/{{ mouvement.pk }}/supprimer/" class="action-btn action-btn-delete" title="Annuler">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
