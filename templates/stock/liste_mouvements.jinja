                <i class="bi bi-arrow-left-right"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ mouvements|selectattr('type_mouvement', 'equalto', 'TRANSFERT')|list|length|default(0) }}</div>
                <div class="stat-label">Total transferts</div>
                <div class="stat-badge">Entre entrep√¥ts</div>
            </div>
        </div>

        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <i class="bi bi-list-check"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ mouvements|length|default(0) }}</div>
                <div class="stat-label">Total mouvements</div>
                <div class="stat-badge">Tous types</div>
            </div>
