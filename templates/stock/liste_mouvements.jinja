                        <td>
                            <div class="user-cell">
                                <div class="user-avatar">
                                    {% if mouvement.utilisateur and mouvement.utilisateur.username %}
                                        {{ mouvement.utilisateur.username[0]|upper }}
                                    {% else %}
                                        S
                                    {% endif %}
                                </div>
                                <div class="user-name">
                                    {% if mouvement.utilisateur %}
                                        {{ mouvement.utilisateur.username|truncate(15) }}
                                    {% else %}
