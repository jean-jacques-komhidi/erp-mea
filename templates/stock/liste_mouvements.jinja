                <span class="filter-chip chip-warehouse">
                    {% for entrepot in entrepots %}
                        {% if entrepot_selectionne == entrepot.id|string %}
                            {{ entrepot.nom|truncate(15) }}
                        {% endif %}
                    {% endfor %}
