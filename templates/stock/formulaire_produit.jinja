<!-- templates/stock/formulaire_produit.jinja - DESIGN MODERNE VIOLET -->
{% extends "base_principale.jinja" %}

{% block titre_page %}{{ action }} un produit{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête de page -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="/stock/produits/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">{{ action }} un produit</h4>
                <p class="page-subtitle">
                    {% if action == "Modifier" %}
                    Modification du produit #{{ formulaire.instance.code|default('') }}
                    {% else %}
                    Ajouter un nouveau produit à votre catalogue
                    {% endif %}
                </p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form method="post" enctype="multipart/form-data" id="productForm">
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                
                <div class="row g-4">
                    <!-- Colonne principale (gauche) -->
                    <div class="col-lg-8">
                        <!-- Informations générales -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-primary">
                                    <i class="bi bi-info-circle"></i>
                                </div>
                                <h6>Informations générales</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-tag"></i>
                                                Code produit
                                                <span class="required">*</span>
                                            </label>
                                            {{ formulaire.code }}
                                            {% if formulaire.code.errors %}
                                            <div class="error-message">{{ formulaire.code.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Identifiant unique du produit</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-box"></i>
                                                Nom du produit
                                                <span class="required">*</span>
                                            </label>
                                            {{ formulaire.nom }}
                                            {% if formulaire.nom.errors %}
                                            <div class="error-message">{{ formulaire.nom.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Désignation commerciale</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-12">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-text-paragraph"></i>
                                                Description
                                            </label>
                                            {{ formulaire.description }}
                                            {% if formulaire.description.errors %}
                                            <div class="error-message">{{ formulaire.description.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Description détaillée du produit (facultatif)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Classification -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-info">
                                    <i class="bi bi-grid"></i>
                                </div>
                                <h6>Classification</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-folder"></i>
                                                Catégorie
                                            </label>
                                            {{ formulaire.categorie }}
                                            {% if formulaire.categorie.errors %}
                                            <div class="error-message">{{ formulaire.categorie.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Catégorie d'appartenance</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-rulers"></i>
                                                Unité de mesure
                                            </label>
                                            {{ formulaire.unite }}
                                            {% if formulaire.unite.errors %}
                                            <div class="error-message">{{ formulaire.unite.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">kg, L, pièce, carton, etc.</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Prix et taxes -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-success">
                                    <i class="bi bi-currency-dollar"></i>
                                </div>
                                <h6>Prix et taxes</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-cart-dash"></i>
                                                Prix d'achat
                                            </label>
                                            <div class="input-with-addon">
                                                {{ formulaire.prix_achat }}
                                                <div class="input-addon">FCFA</div>
                                            </div>
                                            {% if formulaire.prix_achat.errors %}
                                            <div class="error-message">{{ formulaire.prix_achat.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Coût d'achat unitaire</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-cart-plus"></i>
                                                Prix de vente
                                            </label>
                                            <div class="input-with-addon">
                                                {{ formulaire.prix_vente }}
                                                <div class="input-addon">FCFA</div>
                                            </div>
                                            {% if formulaire.prix_vente.errors %}
                                            <div class="error-message">{{ formulaire.prix_vente.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Prix de vente unitaire</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-percent"></i>
                                                Taux TVA
                                            </label>
                                            <div class="input-with-addon">
                                                {{ formulaire.taux_tva }}
                                                <div class="input-addon">%</div>
                                            </div>
                                            {% if formulaire.taux_tva.errors %}
                                            <div class="error-message">{{ formulaire.taux_tva.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Taux TVA applicable</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Calculs automatiques -->
                                <div class="calculations-card">
                                    <div class="calc-grid">
                                        <div class="calc-item calc-success">
                                            <div class="calc-icon">
                                                <i class="bi bi-graph-up-arrow"></i>
                                            </div>
                                            <div class="calc-content">
                                                <div class="calc-label">Marge brute</div>
                                                <div class="calc-value" id="marge-brute">0 FCFA</div>
                                            </div>
                                        </div>
                                        
                                        <div class="calc-item calc-primary">
                                            <div class="calc-icon">
                                                <i class="bi bi-percent"></i>
                                            </div>
                                            <div class="calc-content">
                                                <div class="calc-label">Marge %</div>
                                                <div class="calc-value" id="marge-pourcentage">0%</div>
                                            </div>
                                        </div>
                                        
                                        <div class="calc-item calc-info">
                                            <div class="calc-icon">
                                                <i class="bi bi-cash-stack"></i>
                                            </div>
                                            <div class="calc-content">
                                                <div class="calc-label">Prix TTC</div>
                                                <div class="calc-value" id="prix-ttc">0 FCFA</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Gestion des stocks -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-warning">
                                    <i class="bi bi-clipboard-data"></i>
                                </div>
                                <h6>Gestion des stocks</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-exclamation-triangle"></i>
                                                Stock minimum
                                            </label>
                                            {{ formulaire.stock_min }}
                                            {% if formulaire.stock_min.errors %}
                                            <div class="error-message">{{ formulaire.stock_min.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Niveau d'alerte stock bas</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-check-circle"></i>
                                                Stock maximum
                                            </label>
                                            {{ formulaire.stock_max }}
                                            {% if formulaire.stock_max.errors %}
                                            <div class="error-message">{{ formulaire.stock_max.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Capacité maximale</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-bell"></i>
                                                Seuil réappro.
                                            </label>
                                            {{ formulaire.seuil_reapprovisionnement }}
                                            {% if formulaire.seuil_reapprovisionnement.errors %}
                                            <div class="error-message">{{ formulaire.seuil_reapprovisionnement.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Seuil commande urgente</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Colonne latérale (droite) -->
                    <div class="col-lg-4">
                        <!-- Image produit -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-primary">
                                    <i class="bi bi-image"></i>
                                </div>
                                <h6>Image du produit</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="image-upload-zone" id="imageUploadZone">
                                    {% if formulaire.instance.image %}
                                    <img src="{{ formulaire.instance.image.url }}" id="preview-image" class="preview-image">
                                    <div class="image-overlay">
                                        <button type="button" class="btn-change-image" id="changeImageBtn">
                                            <i class="bi bi-camera"></i>
                                            Changer l'image
                                        </button>
                                    </div>
                                    {% else %}
                                    <div class="upload-placeholder" id="uploadPlaceholder">
                                        <i class="bi bi-cloud-upload"></i>
                                        <p>Cliquez pour ajouter une image</p>
                                        <span>JPG, PNG, GIF (max 2MB)</span>
                                    </div>
                                    <img src="" id="preview-image" class="preview-image" style="display: none;">
                                    {% endif %}
                                    {{ formulaire.image }}
                                </div>
                                {% if formulaire.image.errors %}
                                <div class="error-message">{{ formulaire.image.errors.0 }}</div>
                                {% endif %}
                                
                                <div class="image-actions" id="imageActions" style="{% if not formulaire.instance.image %}display: none;{% endif %}">
                                    <button type="button" class="btn-remove-image" id="removeImageBtn">
                                        <i class="bi bi-trash"></i>
                                        Supprimer l'image
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Statut -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-secondary">
                                    <i class="bi bi-toggle-on"></i>
                                </div>
                                <h6>Statut du produit</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="switch-container">
                                    {{ formulaire.est_actif }}
                                    <label for="{{ formulaire.est_actif.id_for_label }}" class="switch-label">
                                        <span class="switch-text">Produit actif</span>
                                        <span class="switch-button"></span>
                                    </label>
                                </div>
                                
                                <div class="info-box">
                                    <i class="bi bi-info-circle"></i>
                                    <p>Un produit inactif n'apparaît pas dans les ventes ni dans les recherches. Il reste visible dans l'historique.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Conseils -->
                        <div class="tips-card">
                            <div class="tips-header">
                                <i class="bi bi-lightbulb"></i>
                                <span>Conseils de gestion</span>
                            </div>
                            <div class="tips-list">
                                <div class="tip-item">
                                    <i class="bi bi-check2-circle"></i>
                                    <p><strong>Codes produits :</strong> Utilisez un système cohérent (ex: CAT-001)</p>
                                </div>
                                <div class="tip-item">
                                    <i class="bi bi-check2-circle"></i>
                                    <p><strong>Seuils de stock :</strong> Définissez des seuils réalistes pour éviter les ruptures</p>
                                </div>
                                <div class="tip-item">
                                    <i class="bi bi-check2-circle"></i>
                                    <p><strong>Images :</strong> Les visuels améliorent l'expérience utilisateur</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions du formulaire -->
                <div class="form-actions-bar">
                    <div class="actions-left">
                        <i class="bi bi-exclamation-circle"></i>
                        <span>Les champs marqués d'un * sont obligatoires</span>
                    </div>
                    <div class="actions-right">
                        <a href="/stock/produits/" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler</span>
                        </a>
                        <button type="submit" class="btn-submit">
                            <i class="bi bi-check-circle"></i>
                            <span>Enregistrer le produit</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion de l'upload d'image
    const imageInput = document.querySelector('input[type="file"]');
    const previewImage = document.getElementById('preview-image');
    const uploadPlaceholder = document.getElementById('uploadPlaceholder');
    const imageUploadZone = document.getElementById('imageUploadZone');
    const imageActions = document.getElementById('imageActions');
    const removeImageBtn = document.getElementById('removeImageBtn');
    const changeImageBtn = document.getElementById('changeImageBtn');
    
    if (imageInput) {
        // Click sur la zone d'upload
        imageUploadZone.addEventListener('click', function(e) {
            if (e.target !== removeImageBtn && e.target !== changeImageBtn) {
                imageInput.click();
            }
        });
        
        // Changement de fichier
        imageInput.addEventListener('change', function(e) {
            if (e.target.files && e.target.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewImage.style.display = 'block';
                    if (uploadPlaceholder) uploadPlaceholder.style.display = 'none';
                    if (imageActions) imageActions.style.display = 'flex';
                };
                reader.readAsDataURL(e.target.files[0]);
            }
        });
        
        // Supprimer l'image
        if (removeImageBtn) {
            removeImageBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                imageInput.value = '';
                previewImage.src = '';
                previewImage.style.display = 'none';
                if (uploadPlaceholder) uploadPlaceholder.style.display = 'flex';
                if (imageActions) imageActions.style.display = 'none';
            });
        }
        
        // Changer l'image
        if (changeImageBtn) {
            changeImageBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                imageInput.click();
            });
        }
    }
    
    // Calcul automatique des marges
    const prixAchatInput = document.getElementById('{{ formulaire.prix_achat.id_for_label }}');
    const prixVenteInput = document.getElementById('{{ formulaire.prix_vente.id_for_label }}');
    const tauxTVAInput = document.getElementById('{{ formulaire.taux_tva.id_for_label }}');
    const margeBrute = document.getElementById('marge-brute');
    const margePourcentage = document.getElementById('marge-pourcentage');
    const prixTTC = document.getElementById('prix-ttc');
    
    function calculerMarges() {
        const prixAchat = parseFloat(prixAchatInput.value) || 0;
        const prixVente = parseFloat(prixVenteInput.value) || 0;
        const tauxTVA = parseFloat(tauxTVAInput.value) || 0;
        
        // Marge brute
        const marge = prixVente - prixAchat;
        margeBrute.textContent = marge.toLocaleString('fr-FR', {minimumFractionDigits: 0}) + ' FCFA';
        
        // Marge en pourcentage
        const pourcentage = prixAchat > 0 ? (marge / prixAchat) * 100 : 0;
        margePourcentage.textContent = pourcentage.toFixed(1) + '%';
        
        // Prix TTC
        const prixTTCValue = prixVente * (1 + (tauxTVA / 100));
        prixTTC.textContent = prixTTCValue.toLocaleString('fr-FR', {minimumFractionDigits: 0}) + ' FCFA';
        
        // Couleurs selon la marge
        const calcItems = document.querySelectorAll('.calc-item');
        if (marge > 0) {
            calcItems[0].classList.add('positive');
            calcItems[1].classList.add('positive');
        } else {
            calcItems[0].classList.remove('positive');
            calcItems[1].classList.remove('positive');
        }
    }
    
    if (prixAchatInput && prixVenteInput && tauxTVAInput) {
        [prixAchatInput, prixVenteInput, tauxTVAInput].forEach(input => {
            input.addEventListener('input', calculerMarges);
            input.addEventListener('change', calculerMarges);
        });
        
        // Calcul initial
        calculerMarges();
    }
    
    // Validation du formulaire
    const form = document.getElementById('productForm');
    if (form) {
        form.addEventListener('submit', function(e) {
            const requiredFields = form.querySelectorAll('[required]');
            let isValid = true;
            
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    isValid = false;
                    field.classList.add('error');
                } else {
                    field.classList.remove('error');
                }
            });
            
            if (!isValid) {
                e.preventDefault();
                alert('⚠️ Veuillez remplir tous les champs obligatoires');
            }
        });
    }
});
</script>

