<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('warehouseForm');
    const codeInput = document.querySelector('input[name="code"]');
    const nomInput = document.querySelector('input[name="nom"]');
    const adresseInput = document.querySelector('textarea[name="adresse"]');
    const capaciteTotale = document.querySelector('input[name="capacite_totale"]');
    const capaciteUtilisee = document.querySelector('input[name="capacite_utilisee"]');
    
    // Mise √† jour de l'aper√ßu
    function updatePreview() {
        const nom = nomInput ? (nomInput.value || 'Nouvel entrep√¥t') : 'Nouvel entrep√¥t';
        const code = codeInput ? (codeInput.value || '-') : '-';
        const adresse = adresseInput ? adresseInput.value : '';
        
        const previewName = document.getElementById('previewName');
        const previewCode = document.getElementById('previewCode');
        const previewLocation = document.getElementById('previewLocation');
        
        if (previewName) previewName.textContent = nom;
        if (previewCode) previewCode.textContent = code;
        
        if (previewLocation) {
            if (adresse) {
                // Extraire la premi√®re ligne ou les 50 premiers caract√®res
                const firstLine = adresse.split('\n')[0].substring(0, 50);
                previewLocation.innerHTML = `
                    <i class="bi bi-geo-alt"></i>
                    <span>${firstLine}${adresse.length > 50 ? '...' : ''}</span>
                `;
            } else {
                previewLocation.innerHTML = `
                    <i class="bi bi-geo-alt"></i>
                    <span>Localisation non d√©finie</span>
                `;
            }
        }
    }
    
    // Calcul du taux d'occupation
    function updateOccupation() {
        if (capaciteTotale && capaciteUtilisee) {
            const total = parseFloat(capaciteTotale.value) || 0;
            const utilisee = parseFloat(capaciteUtilisee.value) || 0;
            
            const rateElement = document.getElementById('occupationRate');
            if (rateElement && total > 0) {
                const taux = Math.round((utilisee / total) * 100);
                rateElement.textContent = taux + '%';
                
                // Colorier selon le taux
                if (taux > 90) {
                    rateElement.style.color = '#dc2626';
                } else if (taux > 70) {
                    rateElement.style.color = '#f59e0b';
                } else {
                    rateElement.style.color = '#10b981';
                }
            }
        }
    }
    
    // √âcouter les changements
    if (nomInput) nomInput.addEventListener('input', updatePreview);
    if (codeInput) codeInput.addEventListener('input', updatePreview);
    if (adresseInput) adresseInput.addEventListener('input', updatePreview);
    if (capaciteTotale) capaciteTotale.addEventListener('input', updateOccupation);
    if (capaciteUtilisee) capaciteUtilisee.addEventListener('input', updateOccupation);
    
    // Initialiser
    updatePreview();
    updateOccupation();
    
    // Auto-g√©n√©rer le code
    if (nomInput && codeInput) {
        nomInput.addEventListener('blur', function() {
            if (!codeInput.value && nomInput.value) {
                const prefix = nomInput.value.substring(0, 3).toUpperCase().replace(/[^A-Z]/g, '');
                const random = Math.floor(Math.random() * 1000).toString().padStart(3, '0');
                const suggestedCode = 'ENT' + (prefix || '') + random;
                
                if (confirm(`üí° Voulez-vous utiliser le code sugg√©r√© : ${suggestedCode} ?`)) {
                    codeInput.value = suggestedCode;
                    updatePreview();
                }
            }
        });
    }
    
    // Validation
    if (form) {
        form.addEventListener('submit', function(e) {
            const code = codeInput ? codeInput.value.trim() : '';
            const nom = nomInput ? nomInput.value.trim() : '';
            
            if (!code) {
                e.preventDefault();
                alert('‚ö†Ô∏è Le code est obligatoire');
                if (codeInput) codeInput.focus();
                return false;
            }
            
            if (!nom) {
                e.preventDefault();
                alert('‚ö†Ô∏è Le nom est obligatoire');
                if (nomInput) nomInput.focus();
                return false;
            }
            
            // D√©sactiver le bouton
            const submitBtn = document.getElementById('submitBtn');
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span><span>Enregistrement...</span>';
            }
        });
    }
    
    // Confirmation avant annulation
    let formModified = false;
    const inputs = form.querySelectorAll('input, select, textarea');
    
    inputs.forEach(input => {
        input.addEventListener('change', function() {
            formModified = true;
        });
    });
    
    const cancelBtn = document.querySelector('.btn-cancel');
    if (cancelBtn) {
        cancelBtn.addEventListener('click', function(e) {
            if (formModified) {
                if (!confirm('‚ö†Ô∏è Vous avez des modifications non enregistr√©es.\n\nVoulez-vous vraiment quitter ?')) {
                    e.preventDefault();
                }
            }
        });
    }
});
</script>

