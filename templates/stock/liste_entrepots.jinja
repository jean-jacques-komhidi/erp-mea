{% block titre_page %}Liste des entrep√¥ts{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-t√™te de page -->
    <div class="page-header">
        <div class="page-header-left">
            <h4 class="page-title">üè¢ Gestion des Entrep√¥ts</h4>
            <p class="page-subtitle">G√©rez vos sites de stockage</p>
        </div>
        <div class="page-header-right">
            <a href="{{ url('stock:creer_entrepot') }}" class="btn-primary">
                <i class="bi bi-plus-circle"></i>
                <span>Nouvel entrep√¥t</span>
            </a>
        </div>
    </div>

    <!-- Cartes de statistiques -->
    <div class="stats-grid">
        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <i class="bi bi-building"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ entrepots|length|default(0) }}</div>
                <div class="stat-label">Entrep√¥ts totaux</div>
                <div class="stat-badge">Sites de stockage</div>
            </div>
        </div>

        <div class="stat-card stat-success">
            <div class="stat-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ entrepots_actifs|default(entrepots|selectattr('est_actif')|list|length) }}</div>
                <div class="stat-label">Entrep√¥ts actifs</div>
                <div class="stat-badge">En service</div>
            </div>
        </div>

        <div class="stat-card stat-info">
            <div class="stat-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ total_produits|default(0) }}</div>
                <div class="stat-label">Produits stock√©s</div>
                <div class="stat-badge">Dans tous les sites</div>
            </div>
        </div>

        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ responsables_uniques|default(0) }}</div>
                <div class="stat-label">Responsables</div>
                <div class="stat-badge">Gestionnaires</div>
            </div>
        </div>
    </div>

    <!-- Carte r√©partition g√©ographique -->
    <div class="geo-card">
        <div class="geo-header">
            <div class="geo-header-left">
                <i class="bi bi-geo-alt-fill"></i>
                <h6>R√©partition g√©ographique</h6>
            </div>
            <div class="geo-header-right">
                <button class="btn-toggle-map" id="toggleMapBtn">
                    <i class="bi bi-eye"></i>
                    <span>Afficher la carte</span>
                </button>
            </div>
        </div>
        <div class="geo-body" id="geoBody" style="display: none;">
            <!-- Liste des entrep√¥ts par localisation -->
            <div class="warehouse-locations" id="warehouseLocations">
                {% if entrepots %}
                    {% set locations_dict = {} %}
                    {% for entrepot in entrepots %}
                        {% set location_key = entrepot.adresse|default('Non d√©finie') %}
                        {% if location_key not in locations_dict %}
                            {% set _ = locations_dict.update({location_key: []}) %}
                        {% endif %}
                        {% set _ = locations_dict[location_key].append(entrepot) %}
                    {% endfor %}
                    
                    {% for location, warehouses in locations_dict.items() %}
                    <div class="location-group">
                        <div class="location-header">
                            <div class="location-icon">
                                <i class="bi bi-geo-alt-fill"></i>
                            </div>
                            <div class="location-info">
                                <div class="location-name">{{ location if location != 'Non d√©finie' else 'Localisation non d√©finie' }}</div>
                                <div class="location-count">{{ warehouses|length }} entrep√¥t(s)</div>
                            </div>
                        </div>
                        <div class="location-warehouses">
                            {% for warehouse in warehouses %}
                            <div class="warehouse-item">
                                <div class="warehouse-item-icon">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div class="warehouse-item-info">
                                    <div class="warehouse-item-name">{{ warehouse.nom }}</div>
                                    <div class="warehouse-item-code">{{ warehouse.code|default('N/A') }}</div>
                                </div>
                                <div class="warehouse-item-stats">
                                    <span class="stat-badge-small stat-{{ 'success' if warehouse.est_actif else 'secondary' }}">
                                        {{ 'Actif' if warehouse.est_actif else 'Inactif' }}
                                    </span>
                                    <span class="stat-badge-small stat-info">
                                        {{ warehouse.nombre_produits|default(0) }} produits
                                    </span>
                                </div>
                                <a href="{{ url('stock:details_entrepot', pk=warehouse.pk) }}" class="warehouse-item-link">
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                <div class="geo-empty">
                    <i class="bi bi-geo-alt"></i>
                    <h6>Aucun entrep√¥t √† localiser</h6>
                    <p>Cr√©ez votre premier entrep√¥t pour voir sa localisation</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Carte principale -->
    <div class="main-card">
        <!-- Barre de filtres et recherche -->
        <div class="filters-bar">
            <form method="get" class="filters-form">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" 
                           name="recherche" 
                           value="{{ recherche|default('') }}" 
                           placeholder="Rechercher un entrep√¥t..."
                           class="search-input">
                </div>

                <button type="submit" class="btn-filter">
                    <i class="bi bi-funnel"></i>
                    <span>Rechercher</span>
                </button>

                {% if recherche %}
                <a href="?" class="btn-clear">
                    <i class="bi bi-x-circle"></i>
                    <span>Effacer</span>
                </a>
                {% endif %}
            </form>

            {% if recherche %}
            <div class="active-filters">
                <span class="active-filters-label">Recherche :</span>
                <span class="filter-chip chip-secondary">
                    <i class="bi bi-search"></i>
                    "{{ recherche }}"
                </span>
            </div>
            {% endif %}
        </div>

        <!-- Tableau des entrep√¥ts -->
        <div class="table-container">
            <table class="warehouses-table">
                <thead>
                    <tr>
                        <th style="width: 40px;">
                            <input type="checkbox" id="selectAll" class="checkbox-modern">
                        </th>
                        <th style="width: 100px;">Code</th>
                        <th style="min-width: 200px;">Entrep√¥t</th>
                        <th style="width: 200px;">Localisation</th>
                        <th style="width: 180px;">Responsable</th>
                        <th style="width: 120px;">Contact</th>
                        <th style="width: 140px;">Occupation</th>
                        <th style="width: 100px;">Statut</th>
                        <th style="width: 130px;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entrepot in entrepots %}
                    <tr class="warehouse-row">
                        <td>
                            <input type="checkbox" name="entrepot_ids" value="{{ entrepot.pk }}" class="checkbox-modern">
                        </td>
                        <td>
                            <div class="warehouse-code">{{ entrepot.code|default('SANS CODE') }}</div>
                        </td>
                        <td>
                            <div class="warehouse-info">
                                <div class="warehouse-avatar">
                                    {{ entrepot.nom[0]|upper if entrepot.nom else 'E' }}
                                </div>
                                <div class="warehouse-details">
                                    <div class="warehouse-name">{{ entrepot.nom }}</div>
                                    {% if entrepot.ville %}
                                    <div class="warehouse-location">
                                        <i class="bi bi-geo-alt"></i>
                                        {{ entrepot.ville }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="location-cell">
                                {% if entrepot.adresse %}
                                <div class="location-address" title="{{ entrepot.adresse }}">
                                    {{ entrepot.adresse|truncate(40) }}
                                </div>
                                {% else %}
                                <span class="text-muted">-</span>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            {% if entrepot.responsable %}
                            <div class="manager-cell">
                                <div class="manager-avatar">
                                    {{ entrepot.responsable.first_name.0|upper if entrepot.responsable.first_name else entrepot.responsable.username.0|upper }}
                                </div>
                                <div class="manager-details">
                                    <div class="manager-name">
                                        {{ entrepot.responsable.get_full_name()|default(entrepot.responsable.username) }}
                                    </div>
                                    {% if entrepot.responsable.email %}
                                    <div class="manager-email" title="{{ entrepot.responsable.email }}">
                                        {{ entrepot.responsable.email|truncate(25) }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            {% else %}
                            <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if entrepot.telephone %}
                            <a href="tel:{{ entrepot.telephone }}" class="contact-link">
                                <i class="bi bi-telephone"></i>
                                {{ entrepot.telephone }}
                            </a>
                            {% else %}
                            <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="occupation-cell">
                                <div class="occupation-info">
                                    <span class="occupation-value">{{ entrepot.nombre_produits|default(0) }}</span>
                                    <span class="occupation-label">produits</span>
                                </div>
                                {% if entrepot.capacite_totale and entrepot.capacite_totale > 0 %}
                                {% set taux = (entrepot.capacite_utilisee|default(0) / entrepot.capacite_totale * 100)|round|int %}
                                <div class="occupation-bar">
                                    <div class="occupation-fill 
                                        {% if taux > 90 %}fill-danger
                                        {% elif taux > 70 %}fill-warning
                                        {% else %}fill-success{% endif %}"
                                        style="width: {{ taux }}%">
                                    </div>
                                </div>
                                <div class="occupation-percent">{{ taux }}%</div>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            {% if entrepot.est_actif %}
                            <span class="status-badge status-success">
                                <span class="status-dot"></span>
                                Actif
                            </span>
                            {% else %}
                            <span class="status-badge status-inactive">
                                <span class="status-dot"></span>
                                Inactif
                            </span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <div class="action-buttons">
                                <a href="{{ url('stock:details_entrepot', pk=entrepot.pk) }}" class="action-btn action-btn-view" title="Voir d√©tails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ url('stock:modifier_entrepot', pk=entrepot.pk) }}" class="action-btn action-btn-edit" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="{{ url('stock:supprimer_entrepot', pk=entrepot.pk) }}" class="action-btn action-btn-delete" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="9">
                            <div class="empty-state">
                                <div class="empty-state-content">
                                    <i class="bi bi-building"></i>
                                    <h5>Aucun entrep√¥t trouv√©</h5>
                                    <p>
                                        {% if recherche %}
                                        Aucun entrep√¥t ne correspond √† votre recherche.
                                        {% else %}
                                        Commencez par cr√©er votre premier entrep√¥t.
                                        {% endif %}
                                    </p>
                                    <a href="{{ url('stock:creer_entrepot') }}" class="btn-primary">
                                        <i class="bi bi-plus-circle"></i>
                                        <span>Cr√©er un entrep√¥t</span>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Footer avec actions -->
        <div class="table-footer">
            <div class="bulk-actions">
                <select class="bulk-select">
                    <option value="">Actions group√©es</option>
                    <option value="activer">‚úÖ Activer entrep√¥ts</option>
                    <option value="desactiver">‚è∏Ô∏è D√©sactiver entrep√¥ts</option>
                    <option value="exporter">üìä Exporter s√©lection</option>
                    <option value="supprimer">üóëÔ∏è Supprimer entrep√¥ts</option>
                </select>
                <button class="btn-apply" id="applyBulkAction">Appliquer</button>
            </div>

            <div class="pagination-info">
                <span class="info-text">
                    Total: {{ entrepots|length }} entrep√¥t(s)
                </span>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Toggle carte g√©ographique
    const toggleBtn = document.getElementById('toggleMapBtn');
    const geoBody = document.getElementById('geoBody');
    let mapVisible = false;
    
    if (toggleBtn && geoBody) {
        toggleBtn.addEventListener('click', function() {
            mapVisible = !mapVisible;
            
            if (mapVisible) {
                geoBody.style.display = 'block';
                toggleBtn.innerHTML = '<i class="bi bi-eye-slash"></i><span>Masquer la carte</span>';
                toggleBtn.classList.add('active');
                
                // Animation d'apparition
                setTimeout(() => {
                    geoBody.style.opacity = '1';
                    geoBody.style.transform = 'translateY(0)';
                }, 10);
            } else {
                geoBody.style.opacity = '0';
                geoBody.style.transform = 'translateY(-10px)';
                
                setTimeout(() => {
                    geoBody.style.display = 'none';
                }, 300);
                
                toggleBtn.innerHTML = '<i class="bi bi-eye"></i><span>Afficher la carte</span>';
                toggleBtn.classList.remove('active');
            }
        });
    }
    
    // S√©lection multiple
    const selectAll = document.getElementById('selectAll');
    const checkboxes = document.querySelectorAll('input[name="entrepot_ids"]');
    
    if (selectAll) {
        selectAll.addEventListener('change', function() {
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    }
    
    // Actions group√©es
    const applyBtn = document.getElementById('applyBulkAction');
    const bulkSelect = document.querySelector('.bulk-select');
    
    if (applyBtn && bulkSelect) {
        applyBtn.addEventListener('click', function() {
            const action = bulkSelect.value;
            const selected = Array.from(checkboxes).filter(cb => cb.checked);
            
            if (!action) {
                alert('‚ö†Ô∏è Veuillez s√©lectionner une action');
                return;
            }
            
            if (selected.length === 0) {
                alert('‚ö†Ô∏è Veuillez s√©lectionner au moins un entrep√¥t');
                return;
            }
            
            const count = selected.length;
            let message = '';
            
            switch(action) {
                case 'activer':
                    message = `‚úÖ Activer ${count} entrep√¥t(s) ?`;
                    break;
                case 'desactiver':
                    message = `‚è∏Ô∏è D√©sactiver ${count} entrep√¥t(s) ?`;
                    break;
                case 'exporter':
                    message = `üìä Exporter ${count} entrep√¥t(s) ?`;
                    break;
                case 'supprimer':
                    message = `üóëÔ∏è ATTENTION ! Supprimer ${count} entrep√¥t(s) ?\n\nCette action est IRR√âVERSIBLE !`;
                    break;
            }
            
            if (confirm(message)) {
                alert(`Action "${action}" appliqu√©e √† ${count} entrep√¥t(s)`);
                // TODO: Impl√©menter l'action c√¥t√© serveur
            }
        });
    }
});
</script>

