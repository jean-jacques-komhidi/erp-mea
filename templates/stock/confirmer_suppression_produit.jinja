<!-- templates/stock/confirmer_suppression_produit.jinja - DESIGN MODERNE VIOLET -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Supprimer un produit{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <!-- Carte principale de confirmation -->
            <div class="confirmation-card">
                <!-- En-t√™te avec ic√¥ne d'alerte anim√©e -->
                <div class="confirmation-header">
                    <div class="warning-icon-container">
                        <div class="warning-icon">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                        <div class="warning-pulse"></div>
                    </div>
                    
                    <h2 class="confirmation-title">Confirmer la d√©sactivation</h2>
                    <p class="confirmation-subtitle">
                        Vous √™tes sur le point de d√©sactiver ce produit. Il ne sera plus disponible pour les nouvelles commandes mais l'historique sera conserv√©.
                    </p>
                </div>

                <!-- Informations du produit -->
                <div class="product-info-card">
                    <div class="product-header">
                        {% if produit.image %}
                        <img src="{{ produit.image.url }}" alt="{{ produit.nom }}" class="product-thumb">
                        {% else %}
                        <div class="product-thumb-placeholder">
                            {{ produit.nom[0]|upper if produit.nom else 'P' }}
                        </div>
                        {% endif %}
                        <div class="product-details">
                            <h5 class="product-name">{{ produit.nom }}</h5>
                            <span class="product-code">{{ produit.code }}</span>
                        </div>
                    </div>

                    <div class="product-grid">
                        <div class="product-item">
                            <span class="item-label">Cat√©gorie</span>
                            <span class="item-value">
                                {{ produit.categorie.nom if produit.categorie else 'Non cat√©goris√©' }}
                            </span>
                        </div>

                        <div class="product-item">
                            <span class="item-label">Unit√©</span>
                            <span class="item-value">{{ produit.unite }}</span>
                        </div>

                        <div class="product-item">
                            <span class="item-label">Prix de vente</span>
                            <span class="item-value item-price">
                                {{ "{:,.0f}".format(produit.prix_vente) }} FCFA
                            </span>
                        </div>

                        <div class="product-item">
                            <span class="item-label">Stock actuel</span>
                            {% set stock_actuel = produit.stock_actuel or 0 %}
                            {% set seuil = produit.seuil_reapprovisionnement or 0 %}
                            {% set stock_min = produit.stock_min or 0 %}
                            <span class="item-value item-stock 
                                {% if stock_actuel <= seuil %}stock-danger
                                {% elif stock_actuel <= stock_min %}stock-warning
                                {% else %}stock-success{% endif %}">
                                {{ stock_actuel }} {{ produit.unite }}
                            </span>
                        </div>

                        {% if produit.description %}
                        <div class="product-item product-item-full">
                            <span class="item-label">Description</span>
                            <p class="item-description">{{ produit.description|truncate(120) }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Avertissement si stock pr√©sent -->
                {% if stock_actuel > 0 %}
                <div class="alert-box alert-warning-box">
                    <div class="alert-icon">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h6 class="alert-title">‚ö†Ô∏è Stock pr√©sent !</h6>
                        <p class="alert-text">
                            Ce produit a un stock de <strong>{{ stock_actuel }} {{ produit.unite }}</strong>. 
                            Assurez-vous de g√©rer ce stock avant de d√©sactiver le produit.
                        </p>
                    </div>
                </div>
                {% endif %}

                <!-- Information sur la d√©sactivation -->
                <div class="info-box">
                    <div class="info-icon">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div class="info-content">
                        <h6 class="info-title">üí° Qu'est-ce que la d√©sactivation ?</h6>
                        <p class="info-text">
                            Le produit sera d√©sactiv√© mais toutes les donn√©es (historique, mouvements de stock, commandes) seront conserv√©es. 
                            Vous pourrez le r√©activer √† tout moment depuis la liste des produits.
                        </p>
                    </div>
                </div>

                <!-- Impact de la d√©sactivation -->
                <div class="impact-section">
                    <h6 class="impact-title">Impact de la d√©sactivation :</h6>
                    <div class="impact-grid">
                        <div class="impact-item">
                            <div class="impact-icon impact-blocked">
                                <i class="bi bi-cart-x"></i>
                            </div>
                            <div class="impact-label">Nouvelles commandes</div>
                            <div class="impact-status">Bloqu√©es</div>
                        </div>

                        <div class="impact-item">
                            <div class="impact-icon impact-saved">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div class="impact-label">Historique</div>
                            <div class="impact-status">Conserv√©</div>
                        </div>

                        <div class="impact-item">
                            <div class="impact-icon impact-revert">
                                <i class="bi bi-arrow-clockwise"></i>
                            </div>
                            <div class="impact-label">R√©activation</div>
                            <div class="impact-status">Possible</div>
                        </div>
                    </div>
                </div>

                <!-- Boutons d'action -->
                <form method="post" id="deleteForm">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    
                    <div class="action-buttons">
                        <a href="/stock/produits/{{ produit.pk }}/" class="btn-cancel-modern">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler et retourner</span>
                        </a>
                        <button type="submit" class="btn-delete-modern">
                            <i class="bi bi-trash"></i>
                            <span>Oui, d√©sactiver le produit</span>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Recommandations de s√©curit√© -->
            <div class="recommendations-card">
                <div class="recommendations-header">
                    <i class="bi bi-shield-check"></i>
                    <h6>Recommandations de s√©curit√©</h6>
                </div>
                <div class="recommendations-grid">
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <strong>V√©rifier le stock</strong>
                            <p>Transf√©rez le stock restant si n√©cessaire</p>
                        </div>
                    </div>

                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <strong>Informez les √©quipes</strong>
                            <p>Pr√©venez les √©quipes commerciales</p>
                        </div>
                    </div>

                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <strong>Alternative disponible</strong>
                            <p>Proposez un produit similaire</p>
                        </div>
                    </div>

                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <strong>Sauvegarde des donn√©es</strong>
                            <p>Les donn√©es sont sauvegard√©es</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('deleteForm');
    const stockActuel = {{ stock_actuel }};
    const seuilReappro = {{ seuil }};
    
    // Double confirmation
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        let message = 'üóëÔ∏è √ätes-vous certain de vouloir d√©sactiver ce produit ?\n\n';
        message += '‚ö†Ô∏è Cette action d√©sactivera le produit pour les nouvelles commandes.\n';
        
        if (stockActuel > 0) {
            message += `\nüì¶ Stock actuel : ${stockActuel} {{ produit.unite }}\n`;
            message += 'Pensez √† g√©rer le stock restant !';
        }
        
        if (confirm(message)) {
            // Deuxi√®me confirmation si stock important
            if (stockActuel > seuilReappro * 3) {
                if (confirm('‚ö†Ô∏è ATTENTION : Ce produit a un stock important !\n\n√ätes-vous VRAIMENT s√ªr de vouloir continuer ?')) {
                    form.submit();
                }
            } else {
                form.submit();
            }
        }
    });
});
</script>

