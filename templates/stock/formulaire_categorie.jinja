<!-- templates/stock/formulaire_categorie.jinja - DESIGN IDENTIQUE FORMULAIRE PRODUIT -->
{% extends "base_principale.jinja" %}

{% block titre_page %}{{ action }} une catégorie{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <!-- En-tête de page -->
    <div class="page-header">
        <div class="page-header-left">
            <a href="/stock/categories/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h4 class="page-title">{{ action }} une catégorie</h4>
                <p class="page-subtitle">
                    {% if action == "Modifier" %}
                    Modification de la catégorie
                    {% else %}
                    Créer une nouvelle catégorie de produits
                    {% endif %}
                </p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form method="post" id="categoryForm">
                {% csrf_token %}
                
                <div class="row g-4">
                    <!-- Colonne principale (gauche) -->
                    <div class="col-lg-8">
                        <!-- Informations principales -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-primary">
                                    <i class="bi bi-folder"></i>
                                </div>
                                <h6>Informations principales</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-tag"></i>
                                                Nom de la catégorie
                                                <span class="required">*</span>
                                            </label>
                                            {{ formulaire.nom }}
                                            {% if formulaire.nom.errors %}
                                            <div class="error-message">{{ formulaire.nom.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Nom descriptif (ex: "Électronique", "Alimentation")</div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-12">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-text-paragraph"></i>
                                                Description
                                            </label>
                                            {{ formulaire.description }}
                                            {% if formulaire.description.errors %}
                                            <div class="error-message">{{ formulaire.description.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">Description détaillée de la catégorie (facultatif)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Hiérarchie -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-info">
                                    <i class="bi bi-diagram-3"></i>
                                </div>
                                <h6>Organisation hiérarchique</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">
                                                <i class="bi bi-folder-symlink"></i>
                                                Catégorie parente
                                            </label>
                                            {{ formulaire.parent }}
                                            {% if formulaire.parent.errors %}
                                            <div class="error-message">{{ formulaire.parent.errors.0 }}</div>
                                            {% endif %}
                                            <div class="form-help">
                                                Sélectionnez une catégorie parente pour créer une sous-catégorie. 
                                                Laissez vide pour une catégorie principale.
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Visualisation hiérarchique -->
                                <div class="calculations-card">
                                    <div class="calc-grid">
                                        <div class="calc-item calc-preview" id="hierarchyPreview">
                                            <div class="calc-icon">
                                                <i class="bi bi-diagram-3"></i>
                                            </div>
                                            <div class="calc-content">
                                                <div class="calc-label">Structure actuelle</div>
                                                <div class="calc-value" id="hierarchyText">
                                                    {% if formulaire.instance and formulaire.instance.parent %}
                                                    {{ formulaire.instance.parent.nom }} → {{ formulaire.instance.nom }}
                                                    {% else %}
                                                    Catégorie principale
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Colonne latérale (droite) -->
                    <div class="col-lg-4">
                        <!-- Aperçu structure -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-success">
                                    <i class="bi bi-eye"></i>
                                </div>
                                <h6>Aperçu de la structure</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="structure-preview" id="structurePreview">
                                    <!-- Sera rempli dynamiquement -->
                                </div>
                            </div>
                        </div>

                        <!-- Catégories existantes -->
                        <div class="form-card">
                            <div class="form-card-header">
                                <div class="header-icon bg-warning">
                                    <i class="bi bi-folder-fill"></i>
                                </div>
                                <h6>Catégories existantes</h6>
                            </div>
                            <div class="form-card-body">
                                <div class="category-list" id="categoryList">
                                    <div class="loading-state">
                                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                                            <span class="visually-hidden">Chargement...</span>
                                        </div>
                                        <p class="mb-0 mt-2">Chargement...</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Conseils -->
                        <div class="tips-card">
                            <div class="tips-header">
                                <i class="bi bi-lightbulb"></i>
                                <span>Conseils d'organisation</span>
                            </div>
                            <div class="tips-list">
                                <div class="tip-item">
                                    <i class="bi bi-check2-circle"></i>
                                    <p><strong>Noms clairs :</strong> Utilisez des noms descriptifs et concis</p>
                                </div>
                                <div class="tip-item">
                                    <i class="bi bi-check2-circle"></i>
                                    <p><strong>Hiérarchie simple :</strong> Max 2 niveaux recommandés</p>
                                </div>
                                <div class="tip-item">
                                    <i class="bi bi-check2-circle"></i>
                                    <p><strong>Logique métier :</strong> Organisez selon vos besoins</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions du formulaire -->
                <div class="form-actions-bar">
                    <div class="actions-left">
                        <i class="bi bi-exclamation-circle"></i>
                        <span>Les champs marqués d'un * sont obligatoires</span>
                    </div>
                    <div class="actions-right">
                        <a href="/stock/categories/" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler</span>
                        </a>
                        <button type="submit" class="btn-submit">
                            <i class="bi bi-check-circle"></i>
                            <span>Enregistrer la catégorie</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('categoryForm');
    const nomInput = document.querySelector('input[name="nom"]');
    const parentSelect = document.querySelector('select[name="parent"]');
    const hierarchyText = document.getElementById('hierarchyText');
    const structurePreview = document.getElementById('structurePreview');
    
    // Mise à jour de la visualisation
    function updateVisualization() {
        const nomCategorie = nomInput.value || 'Nouvelle catégorie';
        const selectedParent = parentSelect.options[parentSelect.selectedIndex];
        const parentValue = parentSelect.value;
        const parentText = selectedParent.text;
        
        if (parentValue) {
            // Avec parent
            hierarchyText.textContent = `${parentText} → ${nomCategorie}`;
            
            structurePreview.innerHTML = `
                <div class="structure-item structure-parent">
                    <div class="structure-icon">
                        <i class="bi bi-folder"></i>
                    </div>
                    <div class="structure-name">${parentText}</div>
                </div>
                <div class="structure-arrow">
                    <i class="bi bi-arrow-down"></i>
                </div>
                <div class="structure-item structure-child">
                    <div class="structure-icon">
                        <i class="bi bi-folder-symlink"></i>
                    </div>
                    <div class="structure-name">${nomCategorie}</div>
                    <div class="structure-badge">Nouvelle</div>
                </div>
            `;
        } else {
            // Sans parent
            hierarchyText.textContent = 'Catégorie principale';
            
            structurePreview.innerHTML = `
                <div class="structure-item structure-root">
                    <div class="structure-icon">
                        <i class="bi bi-house"></i>
                    </div>
                    <div class="structure-name">${nomCategorie}</div>
                    <div class="structure-badge">Racine</div>
                </div>
            `;
        }
    }
    
    // Écouter les changements
    if (nomInput && parentSelect) {
        nomInput.addEventListener('input', updateVisualization);
        parentSelect.addEventListener('change', updateVisualization);
        updateVisualization();
    }
    
    // Empêcher de sélectionner la catégorie comme sa propre parente
    {% if formulaire.instance.pk %}
    const currentId = '{{ formulaire.instance.pk }}';
    if (currentId && parentSelect) {
        for (let option of parentSelect.options) {
            if (option.value == currentId) {
                option.disabled = true;
                option.text += ' ❌';
            }
        }
    }
    {% endif %}
    
    // Charger la liste des catégories
    setTimeout(() => {
        const categoryList = document.getElementById('categoryList');
        categoryList.innerHTML = `
            <div class="tree-item tree-parent">
                <i class="bi bi-folder"></i>
                <span>Électronique</span>
                <span class="tree-count">15</span>
            </div>
            <div class="tree-item tree-child">
                <i class="bi bi-folder-symlink"></i>
                <span>Smartphones</span>
                <span class="tree-count">8</span>
            </div>
            <div class="tree-item tree-child">
                <i class="bi bi-folder-symlink"></i>
                <span>Ordinateurs</span>
                <span class="tree-count">7</span>
            </div>
            <div class="tree-item tree-parent mt-2">
                <i class="bi bi-folder"></i>
                <span>Alimentation</span>
                <span class="tree-count">24</span>
            </div>
        `;
    }, 300);
    
    // Focus sur le champ nom
    if (nomInput) {
        nomInput.focus();
    }
    
    // Validation
    form.addEventListener('submit', function(e) {
        const nom = nomInput.value.trim();
        if (!nom) {
            e.preventDefault();
            alert('⚠️ Le nom de la catégorie est obligatoire');
            nomInput.focus();
            return false;
        }
    });
});
</script>

