{% extends "base_principale.jinja" %}

{% block titre_page %}Désactiver un entrepôt{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <!-- Carte principale de confirmation -->
            <div class="confirm-card">
                <!-- En-tête avec icône d'alerte animée -->
                <div class="confirm-header confirm-header-warning">
                    <div class="alert-icon-wrapper">
                        <div class="alert-icon alert-icon-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                        <div class="alert-ring alert-ring-warning"></div>
                        <div class="alert-ring alert-ring-warning ring-delay"></div>
                    </div>
                    
                    <h2 class="confirm-title">Confirmer la désactivation</h2>
                    <p class="confirm-subtitle">
                        Vous êtes sur le point de <strong>désactiver</strong> cet entrepôt. Il ne sera plus disponible pour les nouveaux mouvements de stock mais <strong>l'historique sera conservé</strong>.
                    </p>
                </div>
                
                <!-- Informations de l'entrepôt -->
                <div class="warehouse-info-card">
                    <div class="warehouse-header">
                        <div class="warehouse-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="warehouse-details">
                            <h5 class="warehouse-name">{{ entrepot.nom }}</h5>
                            <span class="warehouse-code">{{ entrepot.code }}</span>
                        </div>
                    </div>
                    
                    <div class="warehouse-stats">
                        <div class="stat-item">
                            <span class="stat-label">Adresse</span>
                            <span class="stat-value stat-small">
                                {{ entrepot.adresse|truncate(30) if entrepot.adresse else 'Non renseignée' }}
                            </span>
                        </div>
                        
                        <div class="stat-item">
                            <span class="stat-label">Responsable</span>
                            <span class="stat-value stat-small">
                                {% if entrepot.responsable %}
                                    {{ entrepot.responsable.get_full_name() if entrepot.responsable.get_full_name() else entrepot.responsable.username }}
                                {% else %}
                                    Non assigné
                                {% endif %}
                            </span>
                        </div>
                        
                        <div class="stat-item">
                            <span class="stat-label">Produits différents</span>
                            <span class="stat-value {% if nombre_produits > 0 %}stat-warning{% else %}stat-success{% endif %}">
                                {{ nombre_produits }}
                            </span>
                        </div>
                        
                        <div class="stat-item">
                            <span class="stat-label">Stock total</span>
                            <span class="stat-value {% if stock_total > 0 %}stat-danger{% else %}stat-success{% endif %}">
                                {{ stock_total }} unités
                            </span>
                        </div>
                        
                        <div class="stat-item">
                            <span class="stat-label">Total mouvements</span>
                            <span class="stat-value">
                                {{ total_mouvements }}
                            </span>
                        </div>
                        
                        <div class="stat-item">
                            <span class="stat-label">Mouvements récents (30j)</span>
                            <span class="stat-value {% if mouvements_recents > 0 %}stat-warning{% endif %}">
                                {{ mouvements_recents }}
                            </span>
                        </div>
                        
                        <div class="stat-item stat-full">
                            <span class="stat-label">Statut actuel</span>
                            <span class="stat-value">
                                {% if entrepot.est_actif %}
                                    <span class="badge-status badge-active">Actif</span>
                                {% else %}
                                    <span class="badge-status badge-inactive">Inactif</span>
                                {% endif %}
                            </span>
                        </div>
                    </div>
                </div>
                
                <!-- Avertissement si stock présent -->
                {% if stock_total > 0 %}
                <div class="alert-box alert-danger">
                    <div class="alert-icon-small">
                        <i class="bi bi-exclamation-octagon-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h6 class="alert-title">Impossible de désactiver !</h6>
                        <p class="alert-text">
                            Cet entrepôt contient encore <strong>{{ stock_total }} unité(s)</strong> de stock réparties sur <strong>{{ nombre_produits }} produit(s)</strong>. 
                            Vous devez d'abord transférer ou ajuster le stock avant de pouvoir désactiver l'entrepôt.
                        </p>
                    </div>
                </div>
                
                <!-- Liste des produits en stock -->
                {% if stock_produits %}
                <div class="items-list-card">
                    <h6 class="items-list-title">
                        <i class="bi bi-box-seam"></i>
                        Produits en stock (aperçu)
                    </h6>
                    <div class="items-list">
                        {% for item in stock_produits %}
                        <div class="item-row">
                            <div class="item-icon">
                                <i class="bi bi-box"></i>
                            </div>
                            <div class="item-details">
                                <span class="item-name">{{ item.produit__nom }}</span>
                                <span class="item-code">{{ item.produit__code }}</span>
                            </div>
                            <span class="item-quantity">{{ item.quantite_totale }} unités</span>
                        </div>
                        {% endfor %}
                        {% if nombre_produits > 10 %}
                        <div class="item-row item-more">
                            <span class="item-more-text">... et {{ nombre_produits - 10 }} autre(s) produit(s)</span>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                
                <div class="action-buttons">
                    <a href="{{ url('stock:details_entrepot', pk=entrepot.pk) }}" class="btn-cancel btn-full">
                        <i class="bi bi-arrow-left"></i>
                        <span>Retour aux détails de l'entrepôt</span>
                    </a>
                </div>
                
                {% elif mouvements_recents > 0 %}
                <div class="alert-box alert-warning">
                    <div class="alert-icon-small">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h6 class="alert-title">Activité récente détectée</h6>
                        <p class="alert-text">
                            Cet entrepôt a enregistré <strong>{{ mouvements_recents }} mouvement(s)</strong> au cours des 30 derniers jours. 
                            Assurez-vous que cette désactivation n'affectera pas vos opérations en cours.
                        </p>
                    </div>
                </div>
                
                <!-- Informations sur la désactivation -->
                <div class="alert-box alert-info">
                    <div class="alert-icon-small">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h6 class="alert-title">Qu'est-ce que la désactivation ?</h6>
                        <p class="alert-text">
                            L'entrepôt sera désactivé mais toutes les données (historique des mouvements, statistiques) seront conservées. 
                            Vous pourrez le réactiver à tout moment depuis la liste des entrepôts.
                        </p>
                    </div>
                </div>
                
                <!-- Formulaire de confirmation -->
                <form method="post" id="deactivateForm">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    
                    <div class="action-buttons">
                        <button type="submit" class="btn-deactivate">
                            <i class="bi bi-pause-circle"></i>
                            <span>Oui, désactiver l'entrepôt</span>
                        </button>
                        <a href="{{ url('stock:liste_entrepots') }}" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler et retourner</span>
                        </a>
                    </div>
                </form>
                
                <!-- Impact de la désactivation -->
                <div class="impact-section">
                    <h6 class="impact-title">Impact de la désactivation :</h6>
                    <div class="impact-grid impact-grid-4">
                        <div class="impact-item">
                            <div class="impact-icon impact-blocked">
                                <i class="bi bi-arrow-left-right"></i>
                            </div>
                            <div class="impact-label">Nouveaux mouvements</div>
                            <div class="impact-value">Bloqués</div>
                        </div>
                        <div class="impact-item">
                            <div class="impact-icon impact-preserved">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div class="impact-label">Historique</div>
                            <div class="impact-value">Conservé</div>
                        </div>
                        <div class="impact-item">
                            <div class="impact-icon impact-reversible">
                                <i class="bi bi-arrow-clockwise"></i>
                            </div>
                            <div class="impact-label">Réactivation</div>
                            <div class="impact-value">Possible</div>
                        </div>
                        <div class="impact-item">
                            <div class="impact-icon impact-safe">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <div class="impact-label">Données</div>
                            <div class="impact-value">Sécurisées</div>
                        </div>
                    </div>
                </div>
                
                {% else %}
                <!-- Informations sur la désactivation -->
                <div class="alert-box alert-info">
                    <div class="alert-icon-small">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h6 class="alert-title">Qu'est-ce que la désactivation ?</h6>
                        <p class="alert-text">
                            L'entrepôt sera désactivé mais toutes les données (historique des mouvements, statistiques) seront conservées. 
                            Vous pourrez le réactiver à tout moment depuis la liste des entrepôts.
                        </p>
                    </div>
                </div>
                
                <!-- Formulaire de confirmation -->
                <form method="post" id="deactivateForm">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    
                    <div class="action-buttons">
                        <button type="submit" class="btn-deactivate">
                            <i class="bi bi-pause-circle"></i>
                            <span>Oui, désactiver l'entrepôt</span>
                        </button>
                        <a href="{{ url('stock:liste_entrepots') }}" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler et retourner</span>
                        </a>
                    </div>
                </form>
                
                <!-- Impact de la désactivation -->
                <div class="impact-section">
                    <h6 class="impact-title">Impact de la désactivation :</h6>
                    <div class="impact-grid impact-grid-4">
                        <div class="impact-item">
                            <div class="impact-icon impact-blocked">
                                <i class="bi bi-arrow-left-right"></i>
                            </div>
                            <div class="impact-label">Nouveaux mouvements</div>
                            <div class="impact-value">Bloqués</div>
                        </div>
                        <div class="impact-item">
                            <div class="impact-icon impact-preserved">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div class="impact-label">Historique</div>
                            <div class="impact-value">Conservé</div>
                        </div>
                        <div class="impact-item">
                            <div class="impact-icon impact-reversible">
                                <i class="bi bi-arrow-clockwise"></i>
                            </div>
                            <div class="impact-label">Réactivation</div>
                            <div class="impact-value">Possible</div>
                        </div>
                        <div class="impact-item">
                            <div class="impact-icon impact-safe">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <div class="impact-label">Données</div>
                            <div class="impact-value">Sécurisées</div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
            
            <!-- Conseils de sécurité -->
            <div class="recommendations-card">
                <h6 class="recommendations-title">
                    <i class="bi bi-shield-check"></i>
                    Recommandations avant désactivation
                </h6>
                <div class="recommendations-grid">
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <div class="recommendation-title">Vérifier le stock</div>
                            <div class="recommendation-text">Transférez tout le stock vers un autre entrepôt</div>
                        </div>
                    </div>
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <div class="recommendation-title">Informer les équipes</div>
                            <div class="recommendation-text">Prévenez le responsable et les utilisateurs</div>
                        </div>
                    </div>
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <div class="recommendation-title">Vérifier les commandes</div>
                            <div class="recommendation-text">Assurez-vous qu'aucune commande n'est en cours</div>
                        </div>
                    </div>
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <div class="recommendation-title">Exporter les données</div>
                            <div class="recommendation-text">Sauvegardez l'historique si nécessaire</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('deactivateForm');
    
    if (form) {
        form.addEventListener('submit', function(event) {
            {% if stock_total > 0 %}
            // Si du stock est présent, bloquer la soumission
            event.preventDefault();
            alert('❌ Impossible de désactiver cet entrepôt.\n\nIl contient encore {{ stock_total }} unité(s) de stock !\n\nVeuillez d\'abord transférer ou ajuster le stock.');
            return false;
            {% else %}
            event.preventDefault();
            
            // Confirmation simple
            if (!confirm('⚠️ Êtes-vous certain de vouloir désactiver cet entrepôt ?\n\nIl ne sera plus disponible pour les nouveaux mouvements de stock.')) {
                return false;
            }
            
            form.submit();
            {% endif %}
        });
    }
});
</script>

