<!-- templates/stock/confirmer_suppression_categorie.jinja - DESIGN MODERNE VIOLET -->
{% extends "base_principale.jinja" %}

{% block titre_page %}Supprimer une catégorie{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <!-- Carte principale de confirmation -->
            <div class="confirm-card">
                <!-- En-tête avec icône d'alerte animée -->
                <div class="confirm-header">
                    <div class="alert-icon-wrapper">
                        <div class="alert-icon">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                        <div class="alert-ring"></div>
                        <div class="alert-ring ring-delay"></div>
                    </div>
                    
                    <h2 class="confirm-title">Confirmer la suppression</h2>
                    <p class="confirm-subtitle">
                        Vous êtes sur le point de supprimer cette catégorie. Cette action est <strong>irréversible</strong> et toutes les données seront définitivement perdues.
                    </p>
                </div>
                
                <!-- Informations de la catégorie -->
                <div class="category-info-card">
                    <div class="category-header">
                        <div class="category-icon">
                            <i class="bi bi-folder"></i>
                        </div>
                        <div class="category-details">
                            <h5 class="category-name">{{ categorie.nom }}</h5>
                            {% if categorie.code %}
                            <span class="category-code">{{ categorie.code }}</span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="category-stats">
                        <div class="stat-item">
                            <span class="stat-label">Produits</span>
                            <span class="stat-value {% if produits_associes > 0 %}stat-warning{% else %}stat-success{% endif %}">
                                {{ produits_associes }}
                            </span>
                        </div>
                        
                        <div class="stat-item">
                            <span class="stat-label">Sous-catégories</span>
                            <span class="stat-value {% if sous_categories|length > 0 %}stat-warning{% else %}stat-success{% endif %}">
                                {{ sous_categories|length }}
                            </span>
                        </div>
                        
                        <div class="stat-item">
                            <span class="stat-label">Catégorie parente</span>
                            <span class="stat-value">
                                {% if categorie.parent %}
                                    {{ categorie.parent.nom }}
                                {% else %}
                                    <span class="badge-principal">Principale</span>
                                {% endif %}
                            </span>
                        </div>
                        
                        <div class="stat-item">
                            <span class="stat-label">Statut</span>
                            <span class="stat-value">
                                {% if categorie.est_actif %}
                                    <span class="badge-status badge-active">Actif</span>
                                {% else %}
                                    <span class="badge-status badge-inactive">Inactif</span>
                                {% endif %}
                            </span>
                        </div>
                        
                        {% if categorie.description %}
                        <div class="stat-item stat-full">
                            <span class="stat-label">Description</span>
                            <p class="stat-description">{{ categorie.description|truncate(150) }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
                
                <!-- Avertissement si produits associés -->
                {% if produits_associes > 0 %}
                <div class="alert-box alert-danger">
                    <div class="alert-icon-small">
                        <i class="bi bi-exclamation-octagon-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h6 class="alert-title">Impossible de supprimer !</h6>
                        <p class="alert-text">
                            Cette catégorie contient <strong>{{ produits_associes }} produit(s)</strong>. 
                            Vous devez d'abord supprimer ou déplacer ces produits avant de pouvoir supprimer la catégorie.
                        </p>
                    </div>
                </div>
                
                <!-- Liste des produits associés -->
                {% if produits_liste %}
                <div class="items-list-card">
                    <h6 class="items-list-title">
                        <i class="bi bi-box-seam"></i>
                        Produits associés (aperçu)
                    </h6>
                    <div class="items-list">
                        {% for produit in produits_liste %}
                        <div class="item-row">
                            <div class="item-icon">
                                <i class="bi bi-box"></i>
                            </div>
                            <span class="item-name">{{ produit.nom }}</span>
                            <span class="item-code">{{ produit.code }}</span>
                        </div>
                        {% endfor %}
                        {% if produits_associes > 10 %}
                        <div class="item-row item-more">
                            <span class="item-more-text">... et {{ produits_associes - 10 }} autre(s) produit(s)</span>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                
                <div class="action-buttons">
                    <a href="{{ url('stock:liste_categories') }}" class="btn-cancel btn-full">
                        <i class="bi bi-arrow-left"></i>
                        <span>Retour à la liste des catégories</span>
                    </a>
                </div>
                
                {% elif sous_categories|length > 0 %}
                <div class="alert-box alert-warning">
                    <div class="alert-icon-small">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h6 class="alert-title">Sous-catégories présentes !</h6>
                        <p class="alert-text">
                            Cette catégorie contient <strong>{{ sous_categories|length }} sous-catégorie(s)</strong>. 
                            Vous devez d'abord supprimer ou déplacer ces sous-catégories avant de pouvoir supprimer la catégorie parente.
                        </p>
                    </div>
                </div>
                
                <!-- Liste des sous-catégories -->
                <div class="items-list-card">
                    <h6 class="items-list-title">
                        <i class="bi bi-folder-symlink"></i>
                        Sous-catégories
                    </h6>
                    <div class="items-list">
                        {% for sous_cat in sous_categories %}
                        <div class="item-row">
                            <div class="item-icon item-icon-blue">
                                <i class="bi bi-folder"></i>
                            </div>
                            <span class="item-name">{{ sous_cat.nom }}</span>
                            {% if sous_cat.code %}
                            <span class="item-code">{{ sous_cat.code }}</span>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                </div>
                
                <div class="action-buttons">
                    <a href="{{ url('stock:liste_categories') }}" class="btn-cancel btn-full">
                        <i class="bi bi-arrow-left"></i>
                        <span>Retour à la liste des catégories</span>
                    </a>
                </div>
                
                {% else %}
                <!-- Informations sur la suppression -->
                <div class="alert-box alert-info">
                    <div class="alert-icon-small">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h6 class="alert-title">Qu'est-ce que la suppression ?</h6>
                        <p class="alert-text">
                            La catégorie sera définitivement supprimée de la base de données. 
                            Cette action est <strong>irréversible</strong>. Assurez-vous que cette catégorie n'est plus nécessaire.
                        </p>
                    </div>
                </div>
                
                <!-- Formulaire de confirmation -->
                <form method="post" id="deleteForm">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    
                    <div class="action-buttons">
                        <button type="submit" class="btn-delete">
                            <i class="bi bi-trash"></i>
                            <span>Oui, supprimer définitivement</span>
                        </button>
                        <a href="{{ url('stock:liste_categories') }}" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Annuler et retourner</span>
                        </a>
                    </div>
                </form>
                
                <!-- Impact de la suppression -->
                <div class="impact-section">
                    <h6 class="impact-title">Impact de la suppression :</h6>
                    <div class="impact-grid">
                        <div class="impact-item">
                            <div class="impact-icon impact-danger">
                                <i class="bi bi-folder-x"></i>
                            </div>
                            <div class="impact-label">Catégorie</div>
                            <div class="impact-value">Supprimée</div>
                        </div>
                        <div class="impact-item">
                            <div class="impact-icon impact-danger">
                                <i class="bi bi-x-octagon"></i>
                            </div>
                            <div class="impact-label">Récupération</div>
                            <div class="impact-value">Impossible</div>
                        </div>
                        <div class="impact-item">
                            <div class="impact-icon impact-danger">
                                <i class="bi bi-database-x"></i>
                            </div>
                            <div class="impact-label">Données</div>
                            <div class="impact-value">Perdues</div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
            
            <!-- Conseils de sécurité -->
            <div class="recommendations-card">
                <h6 class="recommendations-title">
                    <i class="bi bi-shield-check"></i>
                    Recommandations avant suppression
                </h6>
                <div class="recommendations-grid">
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <div class="recommendation-title">Vérifier les produits</div>
                            <div class="recommendation-text">Assurez-vous qu'aucun produit n'est associé</div>
                        </div>
                    </div>
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <div class="recommendation-title">Vérifier les sous-catégories</div>
                            <div class="recommendation-text">Supprimez d'abord les sous-catégories</div>
                        </div>
                    </div>
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <div class="recommendation-title">Sauvegarder les données</div>
                            <div class="recommendation-text">Exportez les données importantes</div>
                        </div>
                    </div>
                    <div class="recommendation-item">
                        <i class="bi bi-check-circle"></i>
                        <div>
                            <div class="recommendation-title">Informez les équipes</div>
                            <div class="recommendation-text">Prévenez les utilisateurs concernés</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('deleteForm');
    
    if (form) {
        form.addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Première confirmation
            if (!confirm('⚠️ ATTENTION : Êtes-vous ABSOLUMENT certain de vouloir supprimer cette catégorie ?\n\nCette action est IRRÉVERSIBLE et toutes les données seront définitivement perdues.')) {
                return false;
            }
            
            // Deuxième confirmation
            const confirmation = prompt('Pour confirmer, tapez le mot "SUPPRIMER" en majuscules :');
            
            if (confirmation === 'SUPPRIMER') {
                form.submit();
            } else {
                alert('❌ Suppression annulée. Le texte de confirmation ne correspond pas.');
                return false;
            }
        });
    }
});
</script>

