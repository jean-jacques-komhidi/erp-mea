            <div class="stat-icon">
                <i class="bi bi-folder"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ categories|length }}</div>
                <div class="stat-label">Cat√©gories totales</div>
                <div class="stat-badge">Toutes cat√©gories</div>
            </div>
        </div>

        <div class="stat-card stat-success">
            <div class="stat-icon">
                <i class="bi bi-folder-plus"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ categories_parentes|default(0) }}</div>
                <div class="stat-label">Cat√©gories parentes</div>
                <div class="stat-badge">Principales</div>
            </div>
        </div>

        <div class="stat-card stat-info">
            <div class="stat-icon">
                <i class="bi bi-folder-symlink"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ sous_categories|default(0) }}</div>
                <div class="stat-label">Sous-cat√©gories</div>
                <div class="stat-badge">Secondaires</div>
            </div>
        </div>

        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ total_produits|default(0) }}</div>
                <div class="stat-label">Produits au total</div>
                <div class="stat-badge">Dans toutes les cat√©gories</div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Colonne principale - Tableau -->
        <div class="col-lg-8">
            <!-- Carte principale -->
            <div class="main-card">
                <!-- Barre de recherche -->
                <div class="filters-bar">
                    <form method="get" class="filters-form">
                        <div class="search-box">
                            <i class="bi bi-search"></i>
                            <input type="text" 
                                   name="recherche" 
                                   value="{{ recherche|default('') }}" 
                                   placeholder="Rechercher une cat√©gorie..."
                                   class="search-input">
                        </div>

                        <button type="submit" class="btn-filter">
                            <i class="bi bi-funnel"></i>
                            <span>Rechercher</span>
                        </button>

                        {% if recherche %}
                        <a href="?" class="btn-clear">
                            <i class="bi bi-x-circle"></i>
                            <span>Effacer</span>
                        </a>
                        {% endif %}
                    </form>

                    {% if recherche %}
                    <div class="active-filters">
                        <span class="active-filters-label">Recherche active:</span>
                        <span class="filter-chip chip-secondary">
                            <i class="bi bi-search"></i>
                            "{{ recherche }}"
                        </span>
                    </div>
                    {% endif %}
                </div>

                <!-- Tableau des cat√©gories -->
                <div class="table-container">
                    <table class="categories-table">
                        <thead>
                            <tr>
                                <th style="width: 40px;">
                                    <input type="checkbox" id="selectAll" class="checkbox-modern">
                                </th>
                                <th style="width: 40%;">Cat√©gorie</th>
                                <th style="width: 25%;">Description</th>
                                <th style="width: 15%;">Parente</th>
                                <th style="width: 10%;" class="text-center">Produits</th>
                                <th style="width: 10%;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for categorie in categories %}
                            <tr class="category-row">
                                <td>
                                    <input type="checkbox" name="categorie_ids" value="{{ categorie.pk }}" class="checkbox-modern">
                                </td>
                                <td>
                                    <div class="category-info">
                                        <div class="category-icon {% if categorie.parent %}icon-sub{% else %}icon-main{% endif %}">
                                            <i class="bi {% if categorie.parent %}bi-folder-symlink{% else %}bi-folder{% endif %}"></i>
                                        </div>
                                        <div class="category-details">
                                            <div class="category-name">{{ categorie.nom }}</div>
                                            {% if categorie.code %}
                                            <div class="category-code">Code: {{ categorie.code }}</div>
                                            {% endif %}
                                            {% if not categorie.est_actif %}
                                            <span class="category-inactive">
                                                <i class="bi bi-pause-circle"></i>
                                                Inactive
                                            </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="category-description" title="{{ categorie.description|default('') }}">
                                        {{ categorie.description|default('Aucune description')|truncate(50) }}
                                    </div>
                                </td>
                                <td>
                                    {% if categorie.parent %}
                                    <div class="parent-badge">
                                        <i class="bi bi-arrow-up"></i>
                                        {{ categorie.parent.nom|truncate(15) }}
                                    </div>
                                    {% else %}
                                    <span class="main-badge">
                                        <i class="bi bi-house"></i>
                                        Principale
                                    </span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    {% if categorie.nombre_produits %}
                                    <div class="product-count">{{ categorie.nombre_produits }}</div>
                                    {% else %}
                                    <span class="no-products">-</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="/stock/categories/{{ categorie.pk }}/details/" class="action-btn action-btn-view" title="D√©tails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/stock/categories/{{ categorie.pk }}/modifier/" class="action-btn action-btn-edit" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="/stock/categories/{{ categorie.pk }}/supprimer/" class="action-btn action-btn-delete" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <div class="empty-state-content">
                                            <i class="bi bi-folder-x"></i>
                                            <h5>Aucune cat√©gorie trouv√©e</h5>
                                            <p>
                                                {% if recherche %}
                                                Aucune cat√©gorie ne correspond √† votre recherche.
                                                {% else %}
                                                Commencez par cr√©er votre premi√®re cat√©gorie.
                                                {% endif %}
                                            </p>
                                            <a href="/stock/categories/nouvelle/" class="btn-primary">
                                                <i class="bi bi-plus-circle"></i>
                                                <span>Cr√©er une cat√©gorie</span>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Footer avec actions -->
                <div class="table-footer">
                    <div class="bulk-actions">
                        <select class="bulk-select">
                            <option value="">Actions group√©es</option>
                            <option value="activer">‚úÖ Activer cat√©gories</option>
                            <option value="desactiver">‚è∏Ô∏è D√©sactiver cat√©gories</option>
                            <option value="deplacer">üìÇ D√©placer vers...</option>
                            <option value="fusionner">üîó Fusionner cat√©gories</option>
                            <option value="supprimer">üóëÔ∏è Supprimer cat√©gories</option>
                        </select>
                        <button class="btn-apply" id="applyBulkAction">Appliquer</button>
                    </div>

                    <div class="pagination-info">
                        <span class="info-text">
                            Total: {{ categories|length }} cat√©gorie(s)
                        </span>
                    </div>
                </div>
            </div>

            <!-- Arborescence des cat√©gories -->
            <div class="tree-card">
                <div class="tree-header">
                    <i class="bi bi-diagram-3"></i>
                    <h6>Arborescence des cat√©gories</h6>
                </div>
                <div class="tree-body">
                    {% if categories %}
                    <div class="category-tree">
                        {% for categorie in categories %}
                            {% if not categorie.parent %}
                            <div class="tree-item tree-parent">
                                <i class="bi bi-folder"></i>
                                <span class="tree-name">{{ categorie.nom }}</span>
                                <span class="tree-count">{{ categorie.nombre_produits|default(0) }}</span>
                            </div>
                            {% for sous_categorie in categories %}
                                {% if sous_categorie.parent and sous_categorie.parent.id == categorie.id %}
                                <div class="tree-item tree-child">
                                    <i class="bi bi-folder-symlink"></i>
                                    <span class="tree-name">{{ sous_categorie.nom }}</span>
                                    <span class="tree-count tree-count-sub">{{ sous_categorie.nombre_produits|default(0) }}</span>
                                </div>
                                {% endif %}
                            {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </div>
                    {% else %}
                    <div class="tree-empty">
                        <i class="bi bi-folder-x"></i>
                        <p>Aucune cat√©gorie √† afficher</p>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Colonne lat√©rale - Statistiques et actions -->
        <div class="col-lg-4">
            <!-- Statistiques d√©taill√©es -->
            <div class="stats-card">
                <div class="stats-card-header">
                    <i class="bi bi-bar-chart"></i>
                    <h6>Statistiques</h6>
                </div>
                <div class="stats-card-body">
                    <!-- Cat√©gories avec produits -->
                    {% set categories_avec_produits = 0 %}
                    {% for categorie in categories %}
                        {% if categorie.nombre_produits and categorie.nombre_produits > 0 %}
                            {% set categories_avec_produits = categories_avec_produits + 1 %}
                        {% endif %}
                    {% endfor %}

                    <div class="stat-item">
                        <div class="stat-item-header">
                            <span class="stat-item-label">Cat√©gories avec produits</span>
                            <span class="stat-item-value">
                                {{ categories_avec_produits }} / {{ categories|length }}
                            </span>
                        </div>
                        <div class="stat-progress-bar">
                            {% if categories|length > 0 %}
                                {% set pourcentage = (categories_avec_produits / categories|length * 100)|int %}
                                <div class="stat-progress-fill fill-success" style="width: {{ pourcentage }}%"></div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Profondeur max -->
                    {% set profondeur_max = 1 %}
                    {% for categorie in categories %}
                        {% if categorie.parent %}
                            {% set profondeur_max = 2 %}
                        {% endif %}
                    {% endfor %}

                    <div class="stat-item">
                        <div class="stat-item-header">
                            <span class="stat-item-label">Profondeur maximale</span>
                            <span class="stat-item-value">
                                {{ profondeur_max }} niveau{% if profondeur_max > 1 %}s{% endif %}
                            </span>
                        </div>
                        <div class="stat-progress-bar">
                            {% set pourcentage = (profondeur_max / 5 * 100)|int %}
                            <div class="stat-progress-fill fill-info" style="width: {{ pourcentage }}%"></div>
                        </div>
                    </div>

                    <!-- Cat√©gories actives -->
                    {% set categories_actives = 0 %}
                    {% for categorie in categories %}
                        {% if categorie.est_actif %}
                            {% set categories_actives = categories_actives + 1 %}
                        {% endif %}
                    {% endfor %}

                    <div class="stat-item">
                        <div class="stat-item-header">
                            <span class="stat-item-label">Cat√©gories actives</span>
                            <span class="stat-item-value stat-value-success">
                                {{ categories_actives }} / {{ categories|length }}
                            </span>
                        </div>
                        <div class="stat-progress-bar">
                            {% if categories|length > 0 %}
                                {% set pourcentage = (categories_actives / categories|length * 100)|int %}
                                <div class="stat-progress-fill fill-primary" style="width: {{ pourcentage }}%"></div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="quick-actions-card">
                <div class="quick-actions-header">
                    <i class="bi bi-lightning"></i>
                    <h6>Actions rapides</h6>
                </div>
                <div class="quick-actions-body">
                    <a href="/stock/categories/nouvelle/" class="quick-action-btn quick-action-primary">
                        <i class="bi bi-plus-circle"></i>
                        <span>Nouvelle cat√©gorie</span>
                    </a>
                    <a href="/stock/categories/" class="quick-action-btn quick-action-success">
                        <i class="bi bi-arrow-clockwise"></i>
                        <span>Actualiser</span>
                    </a>
                    <a href="/stock/produits/" class="quick-action-btn quick-action-secondary">
                        <i class="bi bi-box-seam"></i>
                        <span>Voir tous les produits</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // S√©lection multiple
    const selectAll = document.getElementById('selectAll');
    const checkboxes = document.querySelectorAll('input[name="categorie_ids"]');
    
    if (selectAll) {
        selectAll.addEventListener('change', function() {
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    }
    
    // Actions group√©es
    const applyBtn = document.getElementById('applyBulkAction');
    const bulkSelect = document.querySelector('.bulk-select');
    
    if (applyBtn && bulkSelect) {
        applyBtn.addEventListener('click', function() {
            const action = bulkSelect.value;
            const selected = Array.from(checkboxes).filter(cb => cb.checked);
            
            if (!action) {
                alert('‚ö†Ô∏è Veuillez s√©lectionner une action');
                return;
            }
            
            if (selected.length === 0) {
                alert('‚ö†Ô∏è Veuillez s√©lectionner au moins une cat√©gorie');
                return;
            }
            
            const count = selected.length;
            let message = '';
            
            switch(action) {
                case 'activer':
                    message = `‚úÖ Activer ${count} cat√©gorie(s) ?`;
                    break;
                case 'desactiver':
                    message = `‚è∏Ô∏è D√©sactiver ${count} cat√©gorie(s) ?`;
                    break;
                case 'deplacer':
                    message = `üìÇ D√©placer ${count} cat√©gorie(s) ?`;
                    break;
                case 'fusionner':
                    message = `üîó Fusionner ${count} cat√©gorie(s) ?`;
                    break;
                case 'supprimer':
                    message = `üóëÔ∏è ATTENTION ! Supprimer ${count} cat√©gorie(s) ?\n\nCette action est IRR√âVERSIBLE !`;
                    break;
            }
            
            if (confirm(message)) {
                alert(`Action "${action}" appliqu√©e √† ${count} cat√©gorie(s)`);
                // TODO: Impl√©menter l'action c√¥t√© serveur
            }
        });
    }
});
</script>

